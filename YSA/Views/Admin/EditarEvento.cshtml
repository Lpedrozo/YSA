@model YSA.Web.Models.ViewModels.CrearEventoViewModel

@{
    ViewData["Title"] = "Editar Evento";
}

<h1>Editar Evento</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="EditarEvento" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control"></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FechaEvento" class="control-label"></label>
                <input asp-for="FechaEvento" class="form-control" />
                <span asp-validation-for="FechaEvento" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Lugar" class="control-label"></label>
                <input asp-for="Lugar" class="form-control" />
                <span asp-validation-for="Lugar" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="TipoEventoId" class="control-label"></label>
                <select asp-for="TipoEventoId" class="form-control" asp-items="@Model.TiposEventoDisponibles">
                    <option value="">-- Seleccione un tipo --</option>
                </select>
                <span asp-validation-for="TipoEventoId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ImagenPortada" class="control-label"></label>
                <input asp-for="ImagenPortada" type="file" class="form-control" />
                <span asp-validation-for="ImagenPortada" class="text-danger"></span>
                @if (TempData["UrlImagenExistente"] != null)
                {
                    <p class="text-muted mt-2">Imagen actual:</p>
                    <img src="@TempData["UrlImagenExistente"]" alt="Imagen del evento" class="img-thumbnail" style="max-height: 150px;" />
                }
            </div>

            <div class="form-group form-check mb-3">
                <input class="form-check-input" asp-for="EsDestacado" />
                <label class="form-check-label" asp-for="EsDestacado"></label>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Guardar Cambios</button>
                <a asp-action="GestionarEventos" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}