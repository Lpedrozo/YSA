@model YSA.Web.Models.ViewModels.CrearEventoViewModel

@{
    ViewData["Title"] = "Editar Evento";
    // Si usas TempData para la URL existente, es mejor moverla al ViewModel o
    // usar un Input Hidden aquí para la URL, para evitar perder el valor en recargas.
    // Asumo que tienes una propiedad UrlImagenExistente en tu ViewModel para esto.
    // NOTA: Para edición, asumo que el ViewModel trae la URL existente
    string currentImageUrl = Model.UrlImagenExistente ?? TempData["UrlImagenExistente"]?.ToString();
}

<style>

    /* ... (Estilos CSS sin cambios) ... */
        .form-container {
                max-width: 800px; /* Limita el ancho del formulario */
                margin: 0 auto; /* Centra el contenedor */
                padding: 2rem;
                background-color: #ffffff;
                border-radius: 12px;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);

    }

        .form-group label {
                font-weight: 600;
                margin-bottom: 0.5rem;
                color: #333; /* Color de etiqueta más oscuro */

    }

        .form-control:focus {
                border-color: #000;
                box-shadow: 0 0 0 0.2rem rgba(0, 0, 0, 0.1);

    }

        .form-control-lg {
                height: calc(1.5em + 1rem + 2px); /* Ajuste de altura para campos clave */

    }

        .main-btn {
                background-color: black;
                border-color: black;
                transition: background-color 0.3s;

    }

            .main-btn:hover {
                    background-color: #333;
                    border-color: #333;

    }

        .form-switch .form-check-input:checked {
                background-color: black;
                border-color: black;

    }


    /* Estilo para la imagen de previsualización */
        .current-image-preview {
                max-height: 200px; /* Altura máxima para la imagen de previsualización */
                width: auto;
                max-width: 100%; /* Asegura que no se desborde en pantallas grandes */
                border: 1px solid #ccc;
                border-radius: 8px;
                margin-top: 10px;
                object-fit: contain; /* Asegura que la imagen completa se vea dentro del max-height */
                display: block;

    }


    /* ------------------------------------- */

    /* MEDIA QUERY RESPONSIVE (MÓVIL)        */

    /* ------------------------------------- */
        @@media (max-width: 767.98px) {
                .form-container

    {

        /* Reduce el padding interno en móvil */
                    padding: 1rem;

        /* Elimina el max-width efectivo en pantallas pequeñas */
                    max-width: 100%;

    }

            .container {

        /* Reduce el padding del contenedor principal */
                    padding: 1rem 0.5rem !important;

    }

            .fw-bold {
                    font-size: 1.75rem; /* Título ligeramente más pequeño */
                    margin-bottom: 1rem !important;

    }

            .form-group .row > div {

        /* Asegura un poco de espacio si hay columnas anidadas en el row */
                    padding-bottom: 0.5rem;

    }

            .current-image-preview {
                    width: 100%; /* CLAVE: La imagen ocupa el ancho completo de su columna en móvil */
                    height: auto;

    }

            .btn-lg {

        /* Hace que los botones sean de ancho completo y se apilen */
                    width: 100%;
                    margin-bottom: 0.5rem;
                    margin-right: 0 !important; /* Elimina el margen derecho del botón Guardar */

    }

            .form-group.text-center.mt-5 {

        /* Asegura que los botones se apilen y ocupen el ancho total */
                    display: flex;
                    flex-direction: column;
                    align-items: center;

    }


    }
</style>

<div class="container py-4 mb-5">
    <h1 class="fw-bold mb-4 text-center">
        <i class="fas fa-edit me-2 text-primary"></i> @ViewData["Title"]
    </h1>
    <hr class="mb-5" />

    <div class="form-container pb-5 mb-5">
        <form asp-action="EditarEvento" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6">

                    <div class="form-group mb-4">
                        <label asp-for="Titulo" class="control-label"></label>
                        <input asp-for="Titulo" class="form-control form-control-lg" placeholder="Ej: Webinar de Acuarelas Pro" />
                        <span asp-validation-for="Titulo" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="TipoEventoId" class="control-label"></label>
                        <select asp-for="TipoEventoId" class="form-select" asp-items="@Model.TiposEventoDisponibles">
                            <option value="">-- Seleccione un tipo --</option>
                        </select>
                        <span asp-validation-for="TipoEventoId" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Lugar" class="control-label"></label>
                        <input asp-for="Lugar" class="form-control" placeholder="Ej: Enlace de Zoom, o Dirección Física" />
                        <span asp-validation-for="Lugar" class="text-danger"></span>
                    </div>

                    <div class="form-check form-switch mb-4 mt-4">
                        <input class="form-check-input" type="checkbox" role="switch" asp-for="EsDestacado" id="EsDestacadoSwitch" />
                        <label class="form-check-label" for="EsDestacadoSwitch">
                            <i class="fas fa-star text-warning me-1"></i> @Html.DisplayNameFor(model => model.EsDestacado)
                        </label>
                    </div>
                </div>

                <div class="col-md-6">

                    <div class="form-group mb-4">
                        <label asp-for="FechaEvento" class="control-label"></label>
                        <input asp-for="FechaEvento" type="datetime-local" class="form-control" />
                        <span asp-validation-for="FechaEvento" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="ImagenPortada" class="control-label">Cambiar Imagen de Portada</label>
                        <input asp-for="ImagenPortada" type="file" class="form-control" accept="image/*" />
                        <span asp-validation-for="ImagenPortada" class="text-danger"></span>

                        @if (!string.IsNullOrEmpty(currentImageUrl))
                        {
                            <p class="text-muted small mt-2 mb-1">Imagen actual:</p>
                            <img src="@currentImageUrl" alt="Imagen del evento" class="current-image-preview" />
                            <small class="form-text text-muted">Sube un nuevo archivo para reemplazar la imagen actual.</small>
                        }
                    </div>

                </div>
            </div>

            @* CAMBIO CLAVE 1: Reemplazamos DescripcionTextarea por DescripcionEditor y eliminamos el contador/maxlength *@
            <div class="form-group mb-4">
                <label asp-for="Descripcion" class="control-label"></label>
                <textarea asp-for="Descripcion" class="form-control" rows="10" id="DescripcionEditor" placeholder="Describe el evento usando formato enriquecido (negritas, listas, enlaces, etc.)."></textarea>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group text-center mt-5">
                <button type="submit" class="btn main-btn text-white btn-lg shadow-sm me-3">
                    <i class="fas fa-save me-2"></i> Guardar Cambios
                </button>
                <a asp-action="GestionarEventos" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left me-2"></i> Volver a la Lista
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.tiny.cloud/1/72k2eqfy02quriyevi4t2ctxtg50ucyx8gngemudhw0tyn9w/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // CAMBIO CLAVE 3: Inicializamos TinyMCE en el nuevo ID #DescripcionEditor
            tinymce.init({
                selector: '#DescripcionEditor',
                plugins: 'lists link code autoresize',
                toolbar: 'undo redo | formatselect | bold italic | alignleft aligncenter alignright | bullist numlist outdent indent | link code',
                menubar: false,
                branding: false,
                height: 300
            });

            // Lógica para FechaEvento (sin cambios)
            var fechaEventoInput = document.getElementById('@Html.IdFor(model => model.FechaEvento)');
            if (fechaEventoInput) {
                fechaEventoInput.type = 'datetime-local';

                // Intenta formatear el valor que viene del servidor si no tiene el formato 'T' (tiempo)
                if (fechaEventoInput.value && !fechaEventoInput.value.includes('T')) {
                    var date = new Date(fechaEventoInput.value);
                    if (!isNaN(date)) {
                        const pad = (num) => num.toString().padStart(2, '0');
                        const year = date.getFullYear();
                        const month = pad(date.getMonth() + 1);
                        const day = pad(date.getDate());
                        const hours = pad(date.getHours());
                        const minutes = pad(date.getMinutes());
                        fechaEventoInput.value = `${year}-${month}-${day}T${hours}:${minutes}`;
                    }
                }
            }
        });
    </script>
}