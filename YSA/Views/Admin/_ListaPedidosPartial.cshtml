@model IEnumerable<YSA.Web.Models.ViewModels.PedidoPendienteViewModel>

@if (!Model.Any())
{
    <div class="alert alert-info text-center py-4" role="alert" style="border-radius: 8px;">
        <i class="fas fa-info-circle me-2"></i> No hay pedidos en este estado en este momento.
    </div>
}
else
{
    <div class="row mb-5 pb-5">
        @foreach (var pedido in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card pedido-card p-4">

                    <div class="card-header border-0 bg-transparent p-0 mb-3 d-flex justify-content-between align-items-center">
                        <span class="card-title-lg">Pedido #@pedido.PedidoId</span>
                        <span class="badge bg-secondary">@pedido.Estado</span>
                    </div>

                    <div class="card-body card-body-scroll p-0 mb-3">
                        <div class="card-info-item">
                            <span class="card-info-label">Estudiante:</span>
                            <span class="card-info-value">@pedido.NombreEstudiante</span>
                        </div>
                        <div class="card-info-item">
                            <span class="card-info-label">Fecha:</span>
                            <span class="card-info-value">@pedido.FechaPedido.ToShortDateString()</span>
                        </div>

                        <div class="card-info-item mt-3" style="border-top: 1px solid var(--color-secondary-light); border-bottom: none; padding-top: 10px;">
                            <span class="card-info-label" style="font-size: 1.1rem; color: var(--color-secondary);">Total a pagar:</span>
                            <span class="card-info-value" style="color:var(--color-danger); font-size: 1.3rem; font-weight: 700;">
                                @pedido.Total.ToString("C", new System.Globalization.CultureInfo("es-VE"))
                            </span>
                        </div>
                    </div>

                    <div class="card-footer bg-transparent border-0 p-0 d-grid gap-2">

                        @if (pedido.Estado == "Validando")
                        {
                            <form asp-controller="Admin" asp-action="AprobarPedido" method="post">
                                <input type="hidden" name="pedidoId" value="@pedido.PedidoId" />
                                <button type="submit" class="btn btn-aprobar w-100">
                                    <i class="fas fa-check-circle me-2"></i> Aprobar pago
                                </button>
                            </form>
                            <form asp-controller="Admin" asp-action="AnularPedido" method="post" onsubmit="return confirm('¿Está seguro de que desea ANULAR el pedido #@pedido.PedidoId? Esta acción no se puede deshacer.');">
                                <input type="hidden" name="pedidoId" value="@pedido.PedidoId" />
                                <button type="submit" class="btn w-100 mt-2" style="background-color: var(--color-danger); color: white; border-color: var(--color-danger); font-weight: 600; border-radius: 6px;">
                                    <i class="fas fa-times-circle me-2"></i> Anular Pago
                                </button>
                            </form>
                        }

                        @if (!string.IsNullOrEmpty(pedido.UrlComprobante))
                        {
                            <a href="@Url.Content(pedido.UrlComprobante)" target="_blank" class="btn btn-comprobante w-100 mt-2">
                                <i class="fas fa-file-image me-2"></i> Ver comprobante
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
}