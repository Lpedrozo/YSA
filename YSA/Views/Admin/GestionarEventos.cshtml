@model IEnumerable<YSA.Web.Models.ViewModels.EventoViewModel>

@{
    ViewData["Title"] = "Gestión de Eventos";
}

<style>
    .event-card {
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.3s, box-shadow 0.3s;
        height: 100%;
        border: 1px solid #e0e0e0;
    }

        .event-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }

    .event-card-img {
        height: 180px; /* Altura fija para la imagen del evento */
        object-fit: cover;
        width: 100%;
    }

    .card-meta {
        font-size: 0.9rem;
        color: #6c757d;
        display: flex;
        justify-content: space-between;
        margin-bottom: 0.5rem;
    }

    .card-footer-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 8px; /* Espacio entre los botones */
    }
</style>

<div class="container py-4 mb-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Panel" asp-controller="Admin" class="btn btn-dark btn-lg">
            <i class="fas fa-arrow-left me-2"></i> Regresar al Panel
        </a>        
        <a asp-action="CrearEvento" class="btn btn-dark btn-lg shadow-sm">
            <i class="fas fa-plus-circle me-2"></i> Crear Nuevo Evento
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4 pb-5 mb-5">

            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card event-card pb-5">

                        @if (!string.IsNullOrEmpty(item.UrlImagen))
                        {
                            <img src="@Url.Content(item.UrlImagen)" class="card-img-top event-card-img" alt="@item.Titulo">
                        }
                        else
                        {
                            <div class="event-card-img d-flex align-items-center justify-content-center bg-light text-secondary">
                                <i class="fas fa-image fa-3x"></i>
                            </div>
                        }

                        <div class="card-body">
                            <h5 class="card-title fw-bold">@item.Titulo</h5>

                            <div class="card-meta">
                                <div><i class="far fa-clock me-1"></i> @item.FechaEvento.ToString("dd MMM yyyy HH:mm")</div>
                                @if (item.EstaActivo)
                                {
                                    <span class="badge bg-success"><i class="fas fa-check-circle me-1"></i> Activo</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger"><i class="fas fa-times-circle me-1"></i> Inactivo</span>
                                }
                            </div>

                            <ul class="list-group list-group-flush mb-3">
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Tipo:
                                    <span class="fw-semibold">@item.TipoEvento</span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                                    Lugar/Plataforma:
                                    <span class="fw-semibold">@item.Lugar (@item.Plataforma)</span>
                                </li>
                            </ul>

                            <div class="card-footer-actions">

                                <a asp-action="EditarEvento" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a asp-controller="Revista" asp-action="DetalleEvento" asp-route-id="@item.Id" class="btn btn-sm btn-secondary" title="Ver Detalles">
                                    <i class="fas fa-eye"></i>
                                </a>

                                <button type="button" class="btn btn-sm btn-warning" onclick="openUploadModal('@item.Id')" title="Subir Imagen">
                                    <i class="fas fa-image"></i>
                                </button>

                                <form asp-action="EliminarEventoDirecto" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('¿Estás seguro de que deseas eliminar el evento: @item.Titulo?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-danger" title="Eliminar">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-5">
            <i class="fas fa-exclamation-circle me-2"></i> No hay eventos registrados aún. ¡Comienza creando el primero!
        </div>
    }
</div>

<div class="modal fade" id="uploadImageModal" tabindex="-1" aria-labelledby="uploadImageModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="uploadImageModalLabel">Subir Foto al Evento</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="SubirFoto" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <input type="hidden" name="EventoId" id="modalEventoId" />
                    <div class="form-group">
                        <label for="foto">Seleccionar Imagen</label>
                        <input type="file" name="Foto" id="foto" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-primary">Subir</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function openUploadModal(eventoId) {
            document.getElementById('modalEventoId').value = eventoId;
            // Asegúrate de usar Bootstrap 5 para este modal
            var myModal = new bootstrap.Modal(document.getElementById('uploadImageModal'));
            myModal.show();
        }
    </script>
}