@model IEnumerable<YSA.Web.Models.ViewModels.PedidoPendienteViewModel>
@{
    ViewData["Title"] = "Pedidos Pendientes";
}

<div class="container mt-4">
    <h1 class="mb-4">Pedidos Pendientes de Aprobación</h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No hay pedidos pendientes en este momento.
        </div>
    }
    else
    {
        <table class="table table-hover table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID del Pedido</th>
                    <th>Estudiante</th>
                    <th>Fecha del Pedido</th>
                    <th>Total</th>
                    <th>Acción</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pedido in Model)
                {
                    <tr>
                        <td>@pedido.PedidoId</td>
                        <td>@pedido.NombreEstudiante</td>
                        <td>@pedido.FechaPedido.ToShortDateString()</td>
                        <td>@pedido.Total.ToString("C", new System.Globalization.CultureInfo("es-VE"))</td>
                        <td>
                            <form asp-controller="Admin" asp-action="AprobarPedido" method="post">
                                <input type="hidden" name="pedidoId" value="@pedido.PedidoId" />
                                <button type="submit" class="btn btn-success btn-sm">Aprobar Pago</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>