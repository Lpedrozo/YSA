@section Scripts {
    <script src="https://cdn.tiny.cloud/1/72k2eqfy02quriyevi4t2ctxtg50ucyx8gngemudhw0tyn9w/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // =========================================================================
        // FUNCIONES GLOBALES AUXILIARES
        // =========================================================================

        /**
         * Obtiene el token de Antiforgery (CSRF) del input oculto.
         * Se define de forma global para que sea accesible por todas las funciones.
         */
        function getAntiForgeryToken() {
            const tokenElement = document.querySelector('input[name="__RequestVerificationToken"]');
            return tokenElement ? tokenElement.value : '';
        }

        // Inicializa TinyMCE para los campos de descripción
        function inicializarTinyMCE() {
            // Destruir instancias existentes antes de reinicializar
            tinymce.remove('#Crear_DescripcionLarga');
            tinymce.remove('#Editar_DescripcionLarga');
            tinymce.remove('#Crear_DescripcionCorta');
            tinymce.remove('#Editar_DescripcionCorta');

            tinymce.init({
                selector: '#Crear_DescripcionLarga, #Editar_DescripcionLarga',
                plugins: 'anchor autolink charmap codesample emoticons link lists searchreplace table visualblocks wordcount',
                toolbar: 'undo redo | blocks fontfamily fontsize | forecolor backcolor | bold italic underline strikethrough | link image | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
                height: 300,
                content_style: 'body { font-family:Helvetica,Arial,sans-serif; font-size:16px }'
            });

            tinymce.init({
                selector: '#Crear_DescripcionCorta, #Editar_DescripcionCorta',
                plugins: 'link lists',
                toolbar: 'bold italic | bullist numlist | link',
                height: 150
            });
        }

        async function cargarArtistasAsociados(cursoId) {
            const listaDiv = document.getElementById('artistas-asociados-lista');
            listaDiv.innerHTML = '<p class="text-info"><i class="fas fa-spinner fa-spin me-1"></i> Cargando...</p>';

            try {
                const response = await fetch(`@Url.Action("ObtenerArtistasAsociados", "Admin")?cursoId=${cursoId}`);
                if (!response.ok) {
                    throw new Error('Error al obtener artistas asociados.');
                }
                const result = await response.json();

                if (result.success && result.artistas.length > 0) {
                    let html = '<ul class="list-group">';
                    result.artistas.forEach(artista => {
                        html += `
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                ${artista.nombreCompleto}
                                <button type="button" class="btn btn-sm btn-danger desasociar-btn"
                                        data-instructorid="${artista.id}"
                                        data-cursoid="${cursoId}"
                                        title="Quitar artista">
                                    <i class="fas fa-user-times"></i> Desasociar
                                </button>
                            </li>
                        `;
                    });
                    html += '</ul>';
                    listaDiv.innerHTML = html;

                    // Re-adjuntar eventos de desasociación a los nuevos botones
                    document.querySelectorAll('.desasociar-btn').forEach(button => {
                        button.removeEventListener('click', handleDesasociarArtista);
                        button.addEventListener('click', handleDesasociarArtista);
                    });

                } else {
                    listaDiv.innerHTML = '<p class="text-muted">No hay artistas asociados actualmente a este curso.</p>';
                }

            } catch (error) {
                listaDiv.innerHTML = `<p class="text-danger">Error: ${error.message}</p>`;
                Swal.fire('Error', 'No se pudo cargar la lista de artistas asociados.', 'error');
            }
        }

        /**
         * Maneja la solicitud de desasociar un artista de un curso y recarga la página.
         */
        async function handleDesasociarArtista(event) {
            const button = event.currentTarget;
            const cursoId = parseInt(button.getAttribute('data-cursoid'));
            const instructorId = parseInt(button.getAttribute('data-instructorid'));
            const token = getAntiForgeryToken();

            const resultSwal = await Swal.fire({
                title: '¿Estás seguro?',
                text: 'El artista será desasociado de este curso.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sí, Desasociar',
                cancelButtonText: 'Cancelar'
            });

            if (!resultSwal.isConfirmed) {
                return;
            }

            try {
                const response = await fetch('@Url.Action("DesasociarArtistaACurso", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ cursoId, instructorId })
                });

                const result = await response.json();
                if (result.success) {
                    Swal.fire({
                        title: 'Éxito',
                        text: result.message,
                        icon: 'success'
                    }).then(() => {
                        // Recarga completa de la página tras la operación exitosa
                        window.location.reload();
                    });

                } else {
                    Swal.fire('Error', result.message, 'error');
                }

            } catch (error) {
                Swal.fire('Error', 'Hubo un problema al desasociar el artista.', 'error');
            }
        }

        // =========================================================================
        // LÓGICA DE INICIO Y EVENTOS
        // =========================================================================

        document.addEventListener('DOMContentLoaded', function () {
            inicializarTinyMCE();
            const crearModalEl = document.getElementById('crearCursoModal');
            const editarModalEl = document.getElementById('editarCursoModal');
            const asociarArtistaModalEl = document.getElementById('asociarArtistaModal');
            const guardarAsociacionBtn = document.getElementById('guardarAsociacionBtn');
            const crearForm = document.getElementById('formCrearCurso');
            const editarForm = document.getElementById('formEditarCurso');


            // Reemplaza los formularios de POST tradicionales con un manejador AJAX
            async function handleAjaxFormSubmit(event) {
                event.preventDefault();
                const form = event.currentTarget;
                const url = form.action;
                const urlParams = new URLSearchParams(url.split('?')[1]);
                const id = urlParams.get('id');
                const token = getAntiForgeryToken();
                const actionName = form.getAttribute('asp-action');

                let confirmText = '';
                let successMessage = '';

                switch (actionName) {
                    case 'EliminarCurso':
                        confirmText = '¡No podrás revertir la eliminación de este curso!';
                        successMessage = 'Curso eliminado con éxito.';
                        break;
                    case 'DestacarCurso':
                        confirmText = '¿Quieres destacar este curso?';
                        successMessage = 'Curso destacado con éxito.';
                        break;
                    case 'RecomendarCurso':
                        confirmText = '¿Quieres recomendar este curso?';
                        successMessage = 'Curso recomendado con éxito.';
                        break;
                    case 'QuitarDestacado':
                        confirmText = '¿Quieres quitar el estado de destacado?';
                        successMessage = 'Estado destacado eliminado.';
                        break;
                    case 'QuitarRecomendado':
                        confirmText = '¿Quieres quitar el estado de recomendado?';
                        successMessage = 'Estado recomendado eliminado.';
                        break;
                    default:
                        return;
                }

                if (actionName === 'EliminarCurso') {
                     // Lógica de SweetAlert para Confirmación de Eliminación
                    const result = await Swal.fire({
                        title: '¿Estás seguro?',
                        text: confirmText,
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonColor: '#d33',
                        cancelButtonColor: '#3085d6',
                        confirmButtonText: 'Sí, ¡adelante!',
                        cancelButtonText: 'Cancelar'
                    });

                    if (!result.isConfirmed) {
                        return;
                    }
                }

                // Enviar la solicitud AJAX
                try {
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': token
                        },
                        body: `id=${id}&__RequestVerificationToken=${token}` // Enviar el ID y el token
                    });

                    if (response.ok) {
                        Swal.fire({
                            title: 'Éxito',
                            text: successMessage,
                            icon: 'success'
                        }).then(() => {
                            // Recarga completa de la página tras la operación exitosa
                            window.location.reload();
                        });
                    } else if (response.status === 400) {
                         const error = await response.text();
                         Swal.fire('Error', 'Operación fallida. Revisa los detalles.', 'error');
                    } else {
                        Swal.fire('Error', 'Hubo un problema al procesar la solicitud.', 'error');
                    }
                } catch (error) {
                    Swal.fire('Error', `Error de conexión: ${error.message}`, 'error');
                }
            }


            // Función para adjuntar todos los event listeners
            function attachEventListeners() {
                // Adjuntar manejador para las acciones de post (Destacar, Recomendar, Eliminar, etc.)
                document.querySelectorAll('form[asp-action]').forEach(form => {
                    form.removeEventListener('submit', handleAjaxFormSubmit); // Eliminar si ya existe
                    form.addEventListener('submit', handleAjaxFormSubmit); // Adjuntar
                });
            }


            // --- Lógica del modal de Asociación/Desasociación de Artista ---
            asociarArtistaModalEl.addEventListener('show.bs.modal', async function (event) {
                const button = event.relatedTarget;
                const cursoId = button.getAttribute('data-cursoid');
                document.getElementById('asociar-curso-id').value = cursoId;

                // 1. Cargar Artistas Asociados (para la lista de desasociación)
                await cargarArtistasAsociados(cursoId);

                // 2. Cargar Artistas para la selección de ASOCIAR
                const artistaSelect = document.getElementById('artista-select');
                artistaSelect.innerHTML = '<option value="">-- Seleccione un Artista --</option>';

                try {
                    const response = await fetch('@Url.Action("ObtenerArtistas", "Admin")');
                    if (!response.ok) {
                        throw new Error('No se pudieron cargar los artistas.');
                    }
                    const artistas = await response.json();
                    artistas.forEach(artista => {
                        const option = document.createElement('option');
                        option.value = artista.id;
                        option.textContent = artista.nombreCompleto;
                        artistaSelect.appendChild(option);
                    });
                } catch (error) {
                    Swal.fire('Error', 'No se pudo cargar la lista de artistas para asociar.', 'error');
                }
            });

            // Manejador del botón GUARDAR ASOCIACIÓN (Asociar)
            guardarAsociacionBtn.addEventListener('click', async function () {
                const cursoId = document.getElementById('asociar-curso-id').value;
                const instructorId = document.getElementById('artista-select').value;
                const token = getAntiForgeryToken();

                if (!instructorId) {
                    Swal.fire('Atención', 'Por favor, selecciona un artista.', 'warning');
                    return;
                }

                try {
                    const response = await fetch('@Url.Action("AsociarArtistaACurso", "Admin")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': token
                        },
                        body: JSON.stringify({ cursoId, instructorId })
                    });

                    const result = await response.json();
                    if (result.success) {
                        Swal.fire({
                             title: 'Éxito',
                             text: result.message,
                             icon: 'success'
                        }).then(() => {
                            // Recarga completa de la página tras la operación exitosa
                            window.location.reload();
                        });

                    } else {
                        Swal.fire('Error', result.message, 'error');
                    }
                } catch (error) {
                    Swal.fire('Error', 'Hubo un problema al asociar el artista.', 'error');
                }
            });


            // --- Lógica de Creación y Edición ---

            crearForm.addEventListener('submit', async function (e) {
                e.preventDefault();
                tinymce.triggerSave();

                const formData = new FormData(this);
                formData.append('__RequestVerificationToken', getAntiForgeryToken());

                const categoriasSeleccionadas = Array.from(document.querySelectorAll('#crear-categorias-checkboxes input:checked')).map(cb => cb.value);
                categoriasSeleccionadas.forEach(val => formData.append('CategoriasSeleccionadas', val));

                const response = await fetch(this.action, {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    const modal = bootstrap.Modal.getInstance(crearModalEl);
                    modal.hide();
                    Swal.fire({
                        title: 'Éxito',
                        text: 'Curso creado con éxito.',
                        icon: 'success'
                    }).then(() => {
                        // Recarga completa de la página tras la operación exitosa
                        window.location.reload();
                    });
                } else if (response.status === 400) {
                     const result = await response.json();
                     Swal.fire({
                         title: 'Error de validación',
                         html: formatValidationErrors(result.errors),
                         icon: 'error'
                     });
                } else {
                     Swal.fire('Error', 'Hubo un problema al crear el curso.', 'error');
                }
            });

            editarModalEl.addEventListener('show.bs.modal', function (event) {
                const button = event.relatedTarget;
                const cursoId = button.getAttribute('data-id');
                const titulo = button.getAttribute('data-titulo');
                const descripcionCorta = button.getAttribute('data-descripcioncorta');
                const descripcionLarga = button.getAttribute('data-descripcionlarga');
                const precio = button.getAttribute('data-precio');
                const urlImagen = button.getAttribute('data-urlimagen');
                const nivel = button.getAttribute('data-nivel');
                const categoriasSeleccionadas = button.getAttribute('data-categorias') ? button.getAttribute('data-categorias').split(',').map(Number) : [];

                document.getElementById('Editar_Id').value = cursoId;
                document.getElementById('Editar_Titulo').value = titulo;
                document.getElementById('Editar_Precio').value = precio;
                document.getElementById('Editar_Nivel').value = nivel;

                // Cargar contenido en TinyMCE
                tinymce.get('Editar_DescripcionCorta').setContent(descripcionCorta);
                tinymce.get('Editar_DescripcionLarga').setContent(descripcionLarga);

                const imagenPreview = document.getElementById('Editar_PreviewImagen');
                if (urlImagen) {
                    imagenPreview.src = urlImagen;
                    imagenPreview.style.display = 'block';
                } else {
                    imagenPreview.style.display = 'none';
                }

                // Cargar categorías
                const checkboxes = document.querySelectorAll('#editar-categorias-checkboxes input[type="checkbox"]');
                checkboxes.forEach(checkbox => {
                    const categoriaId = parseInt(checkbox.value);
                    checkbox.checked = categoriasSeleccionadas.includes(categoriaId);
                });
            });

            editarForm.addEventListener('submit', async function (e) {
                e.preventDefault();
                tinymce.triggerSave();

                const formData = new FormData(this);
                formData.append('__RequestVerificationToken', getAntiForgeryToken());

                const categoriasSeleccionadas = Array.from(document.querySelectorAll('#editar-categorias-checkboxes input:checked')).map(cb => cb.value);
                categoriasSeleccionadas.forEach(val => formData.append('CategoriasSeleccionadas', val));

                const response = await fetch(this.action, {
                    method: 'POST',
                    body: formData
                });

                const result = await response.json();
                if (result.success) {
                    const modal = bootstrap.Modal.getInstance(editarModalEl);
                    modal.hide();
                    Swal.fire({
                        title: 'Éxito',
                        text: result.message,
                        icon: 'success'
                    }).then(() => {
                        // Recarga completa de la página tras la operación exitosa
                        window.location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'Error de validación',
                        html: formatValidationErrors(result.errors),
                        icon: 'error'
                    });
                }
            });

            function formatValidationErrors(errors) {
                let html = '<ul>';
                for (const key in errors) {
                    if (errors.hasOwnProperty(key)) {
                        errors[key].forEach(message => {
                            html += `<li>${message}</li>`;
                        });
                    }
                }
                html += '</ul>';
                return html;
            }

            // Inicializa los eventos al cargar la página
            attachEventListeners();
        });
    </script>
