@{
    ViewData["Title"] = "Página de Inicio";
}
<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <img src="~/diseño/grupotatuajes.jpg" class="img-fluid rounded shadow-sm" alt="Grupo de artistas de YoSoyArte" />
        </div>
    </div>
</div>

<div class="container mt-5">
    <h2 class="text-center mb-4">Conoce a nuestros Artistas</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <img src="https://via.placeholder.com/400x400?text=Artista+1" class="card-img-top" alt="Artista 1" />
                <div class="card-body text-center">
                    <h5 class="card-title">Nombre del Artista 1</h5>
                    <p class="card-text">Especialidad: Pintura al Óleo</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <img src="https://via.placeholder.com/400x400?text=Artista+2" class="card-img-top" alt="Artista 2" />
                <div class="card-body text-center">
                    <h5 class="card-title">Nombre del Artista 2</h5>
                    <p class="card-text">Especialidad: Escultura</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card shadow">
                <img src="https://via.placeholder.com/400x400?text=Artista+3" class="card-img-top" alt="Artista 3" />
                <div class="card-body text-center">
                    <h5 class="card-title">Nombre del Artista 3</h5>
                    <p class="card-text">Especialidad: Acuarela</p>
                </div>
            </div>
        </div>
    </div>

</div>