@using YSA.Web.Models.ViewModels
@model YSA.Web.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Yo Soy Arte";

    // Crear una lista plana y ordenada de todos los eventos
    var todosLosEventos = Model.EventosCategorizados
        .SelectMany(kvp => kvp.Value)
        .OrderByDescending(e => e.FechaEvento)
        .ToList();

    // Eventos para el bloque "LO ÚLTIMO" (los 6 más recientes)
    var ultimosEventos = todosLosEventos.Take(6).ToList();

    // Eventos para el bloque "EVENTOS DESTACADOS" (todos los demás)
    var eventosDestacados = todosLosEventos.Skip(6).ToList();
}

@* =========================================== *@
@* SECCIÓN DE NUESTRO PROPÓSITO (Inspirada en la imagen) *@
@* =========================================== *@
<div class="hero-section pb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="badge bg-light mb-3 d-inline-block">COMUNIDAD ARTÍSTICA</div>
                <h1 class="display-4 fw-bold mb-4" style="font-family: var(--font-heading);">
                    Descubre tu <span class="text-brand-primary">creatividad</span> interior
                </h1>
                <p class="lead mb-4" style="font-family: var(--font-body); line-height: 1.8;">
                    <strong>Formamos artistas</strong> que no solo dominan la técnica, sino que entienden el arte como una vía de <strong>transformación personal y colectiva</strong>. En YSA fusionamos técnica, sensibilidad y consciencia para despertar el poder creativo que habita en ti.
                </p>
                <div class="d-flex flex-wrap gap-3 mb-5">
                    <a href="#ultimos-eventos" class="btn btn-primary btn-lg px-4 py-3">
                        <i class="fas fa-calendar-alt me-2"></i>Explorar Eventos
                    </a>
                    <a href="@Url.Action("Index", "Curso")" class="btn btn-outline-primary btn-lg px-4 py-3">
                        <i class="fas fa-book-open me-2"></i>Ver Cursos
                    </a>
                </div>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="text-center">
                            <div class="display-6 fw-bold text-brand-primary mb-2">+500</div>
                            <div class="small text-muted">Estudiantes</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <div class="display-6 fw-bold text-brand-primary mb-2">+50</div>
                            <div class="small text-muted">Artistas</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <div class="display-6 fw-bold text-brand-primary mb-2">+100</div>
                            <div class="small text-muted">Eventos</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="position-relative">
                    <div class="rounded-lg overflow-hidden shadow-lg" style="border-radius: var(--border-radius-lg);">
                        <img src="/diseño/HeaderAcademia.jpg" alt="Comunidad Artística YSA" class="img-fluid w-100" style="height: 500px; object-fit: cover;">
                    </div>
                    <div class="position-absolute bottom-0 start-0 bg-white p-4 m-4 rounded shadow" style="max-width: 300px;">
                        <h5 class="fw-bold mb-2" style="font-family: var(--font-heading);">"El arte es la expresión del alma creativa"</h5>
                        <p class="text-muted small mb-0">- Equipo YoSoyArte</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@* =========================================== *@
@* BANNER PRINCIPAL (Mantenido) *@
@* =========================================== *@
<div class="magazine-cover mt-5">
    <img src="/diseño/HeaderAcademia.jpg" class="cover-image" alt="Portada de la revista Yo Soy Arte">
    <div class="cover-overlay">
        <div class="cover-title-block">
        </div>
    </div>
</div>

<div class="container px-0 py-5 mb-5 pb-5">
    @* === INICIO DEL BLOQUE "LO ÚLTIMO" (2 COLUMNAS) === *@
    <div class="section-container" id="ultimos-eventos">
        <div class="row align-items-center">
            @* Columna izquierda: Texto *@
            <div class="col-lg-5 mb-5 mb-lg-0">
                <div class="mb-4">
                    <span class="latest-grid-header mb-3 d-block">LO ÚLTIMO</span>
                    <h2 class="mb-4" style="font-family: var(--font-heading); font-size: 2.5rem; line-height: 1.2;">
                        Mantente al día con <span class="text-brand-primary">nuestros eventos</span>
                    </h2>
                    <p class="mb-4" style="font-family: var(--font-body); font-size: 1.1rem; line-height: 1.6;">
                        Explora nuestras actividades más recientes: talleres, exposiciones, charlas y encuentros artísticos.
                        Cada evento es una oportunidad para <strong>conectar, aprender y crecer</strong> junto a nuestra comunidad.
                    </p>
                    <div class="d-flex align-items-center">
                        <i class="fas fa-star text-brand-primary me-3 fa-2x"></i>
                        <div>
                            <h5 class="mb-1" style="font-family: var(--font-heading);">Experiencias únicas</h5>
                            <p class="small text-muted mb-0">Eventos diseñados para inspirar y transformar</p>
                        </div>
                    </div>
                </div>
            </div>

            @* Columna derecha: Carrusel de eventos *@
            <div class="col-lg-7">
                @if (ultimosEventos.Any())
                {
                    <div id="ultimosEventosCarousel" class="carousel slide" data-bs-ride="carousel">
                        @* Indicadores *@
                        <div class="carousel-indicators">
                            @for (int i = 0; i < ultimosEventos.Count; i++)
                            {
                                <button type="button" data-bs-target="#ultimosEventosCarousel"
                                        data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"
                                        aria-label="Slide @(i + 1)"></button>
                            }
                        </div>

                        @* Contenido del carrusel *@
                        <div class="carousel-inner rounded-lg" style="border-radius: var(--border-radius-lg);">
                            @for (int i = 0; i < ultimosEventos.Count; i++)
                            {
                                var evento = ultimosEventos[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")" data-bs-interval="5000">
                                    <a href="@Url.Action("DetalleEvento", "Revista", new { id = evento.Id })" class="text-decoration-none text-dark">
                                        <div class="position-relative overflow-hidden rounded-lg" style="height: 450px;">
                                            <img src="@Url.Content(evento.UrlImagen)"
                                                 class="d-block w-100 h-100"
                                                 alt="@evento.Titulo"
                                                 style="object-fit: cover;">
                                            <div class="carousel-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-end p-4"
                                                 style="background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 60%);">
                                                <div class="text-white">
                                                    <span class="badge bg-light mb-2">@evento.TipoEventoNombre</span>
                                                    <h3 class="h4 mb-2" style="font-family: var(--font-heading);">@evento.Titulo</h3>
                                                    <p class="mb-0">
                                                        <i class="far fa-calendar me-2"></i>
                                                        @evento.FechaEvento.ToString("dd MMMM yyyy")
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>

                        @* Controles *@
                        <button class="carousel-control-prev" type="button" data-bs-target="#ultimosEventosCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Anterior</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#ultimosEventosCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Siguiente</span>
                        </button>
                    </div>
                }
                else
                {
                    <div class="alert alert-info text-center py-5" role="alert">
                        <i class="fas fa-calendar-times fa-3x mb-3"></i>
                        <h4>No hay eventos recientes para mostrar</h4>
                        <p class="mb-0">Pronto tendremos nuevas actividades para ti.</p>
                    </div>
                }
            </div>
        </div>
    </div>
    @* === FIN DEL BLOQUE "LO ÚLTIMO" === *@

    <hr class="section-divider" />

    @* === INICIO DEL BLOQUE "EVENTOS DESTACADOS" (2 COLUMNAS INVERTIDAS CON CARRUSEL) === *@
    @if (eventosDestacados.Any())
    {
        <div class="section-container">
            <div class="row align-items-center">
                @* Columna izquierda: Carrusel de eventos destacados *@
                <div class="col-lg-7 mb-5 mb-lg-0 order-2 order-lg-1">
                    <div id="eventosDestacadosCarousel" class="carousel slide" data-bs-ride="carousel">
                        @* Indicadores *@
                        <div class="carousel-indicators">
                            @for (int i = 0; i < eventosDestacados.Count; i++)
                            {
                                <button type="button" data-bs-target="#eventosDestacadosCarousel"
                                        data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"
                                        aria-label="Slide @(i + 1)"></button>
                            }
                        </div>

                        @* Contenido del carrusel *@
                        <div class="carousel-inner rounded-lg" style="border-radius: var(--border-radius-lg);">
                            @for (int i = 0; i < eventosDestacados.Count; i++)
                            {
                                var evento = eventosDestacados[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")" data-bs-interval="6000">
                                    <a href="@Url.Action("DetalleEvento", "Revista", new { id = evento.Id })" class="text-decoration-none text-dark">
                                        <div class="position-relative overflow-hidden rounded-lg" style="height: 450px;">
                                            <img src="@Url.Content(evento.UrlImagen)"
                                                 class="d-block w-100 h-100"
                                                 alt="@evento.Titulo"
                                                 style="object-fit: cover;">
                                            <div class="carousel-overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-end p-4"
                                                 style="background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 60%);">
                                                <div class="text-white">
                                                    <span class="badge bg-dark mb-2">DESTACADO</span>
                                                    <span class="badge bg-light ms-2 mb-2">@evento.TipoEventoNombre</span>
                                                    <h3 class="h4 mb-2" style="font-family: var(--font-heading);">@evento.Titulo</h3>
                                                    <p class="mb-0">
                                                        <i class="far fa-calendar me-2"></i>
                                                        @evento.FechaEvento.ToString("dd MMMM yyyy")
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>

                        @* Controles *@
                        <button class="carousel-control-prev" type="button" data-bs-target="#eventosDestacadosCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Anterior</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#eventosDestacadosCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Siguiente</span>
                        </button>
                    </div>
                </div>

                @* Columna derecha: Texto filosófico *@
                <div class="col-lg-5 mb-5 mb-lg-0 order-1 order-lg-2 ps-lg-5">
                    <div class="mb-4">
                        <span class="latest-grid-header mb-3 d-block">EVENTOS DESTACADOS</span>
                        <h2 class="mb-4" style="font-family: var(--font-heading); font-size: 2.5rem; line-height: 1.2;">
                            Vive el arte en <span class="text-brand-primary">su máxima expresión</span>
                        </h2>
                        <p class="mb-4" style="font-family: var(--font-body); font-size: 1.1rem; line-height: 1.6;">
                            <em>"El verdadero artista no busca solo crear belleza, sino también expresar verdades profundas que conecten con el alma humana."</em>
                        </p>
                        <div class="border-start border-3 border-brand-primary ps-4 mb-4">
                            <p class="mb-0">Nuestros eventos destacados son experiencias <strong>transformadoras</strong> donde el arte trasciende lo estético para convertirse en diálogo, aprendizaje y comunidad.</p>
                        </div>
                        @if (eventosDestacados.Any())
                        {
                            var proximoEvento = eventosDestacados.First();
                            <div class="bg-light p-4 rounded" style="border-left: 4px solid var(--color-brand-primary);">
                                <h5 class="mb-2" style="font-family: var(--font-heading);">Próximo evento especial</h5>
                                <p class="mb-2"><strong>@proximoEvento.Titulo</strong></p>
                                <p class="small text-muted mb-0">
                                    <i class="far fa-clock me-1"></i>
                                    @proximoEvento.FechaEvento.ToString("dddd, dd MMMM") a las @proximoEvento.FechaEvento.ToString("hh:mm tt")
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="section-container text-center py-5">
            <i class="fas fa-calendar-star fa-4x text-brand-primary mb-4"></i>
            <h3 class="mb-3" style="font-family: var(--font-heading);">Próximamente: Eventos Destacados</h3>
            <p class="text-muted mb-0">Estamos preparando eventos especiales que pronto anunciaremos.</p>
        </div>
    }
    @* === FIN DEL BLOQUE "EVENTOS DESTACADOS" === *@

    <hr class="section-divider" />

    @* === INICIO DE LA SECCIÓN QUIÉNES SOMOS === *@
    <div class="about-us-section text-center">
        <h2 class="latest-grid-header">Quiénes somos</h2>
        <div class="container">
            @* FILA DE TARJETAS (Misión, Visión, Propósito, Contacto) *@
            <div class="row g-4 justify-content-center">
                @* Tarjeta 1: Misión *@
                <div class="col-lg-3 col-md-6">
                    <div class="magazine-card icon-card h-100">
                        <div class="magazine-card-body d-flex flex-column align-items-center justify-content-start text-center">
                            <i class="fas fa-bullseye fa-3x mb-3"></i>
                            <h3 class="h5 fw-normal" style="font-family: var(--font-heading);">Nuestra Misión</h3>
                            <p class="text-muted">
                                Guiar a artistas a descubrir y expresar su identidad auténtica a través del arte, fusionando
                                técnica, sensibilidad y consciencia.
                            </p>
                        </div>
                    </div>
                </div>

                @* Tarjeta 2: Visión *@
                <div class="col-lg-3 col-md-6">
                    <div class="magazine-card icon-card h-100">
                        <div class="magazine-card-body d-flex flex-column align-items-center justify-content-start text-center">
                            <i class="fas fa-eye fa-3x mb-3"></i>
                            <h3 class="h5 fw-normal" style="font-family: var(--font-heading);">Nuestra Visión</h3>
                            <p class="text-muted">
                                Ser una academia referente en Latinoamérica por integrar el arte, la formación profesional y
                                el crecimiento interior.
                            </p>
                        </div>
                    </div>
                </div>

                @* Tarjeta 3: Propósito *@
                <div class="col-lg-3 col-md-6">
                    <div class="magazine-card icon-card h-100">
                        <div class="magazine-card-body d-flex flex-column align-items-center justify-content-start text-center">
                            <i class="fas fa-compass fa-3x mb-3"></i>
                            <h3 class="h5 fw-normal" style="font-family: var(--font-heading);">Nuestro Propósito</h3>
                            <p class="text-muted">
                                Despertar el poder creativo y consciente que habita en cada artista,
                                guiándolo a expresar su verdad a través del arte.
                            </p>
                        </div>
                    </div>
                </div>

                @* Tarjeta 4: Ubicación y contacto *@
                <div class="col-lg-3 col-md-6">
                    <div class="magazine-card icon-card h-100">
                        <div class="magazine-card-body d-flex flex-column align-items-center justify-content-center">
                            <i class="fas fa-map-marker-alt fa-3x mb-3"></i>
                            <h3 class="h5 fw-normal" style="font-family: var(--font-heading);">Ubicación y contacto</h3>
                            <p class="text-muted text-center">Av. Principal #123, Ciudad Creativa</p>
                            <p class="text-muted">Email: contacto@yosoyarte.com</p>
                            <p class="mb-0 text-muted">Tel: +58 123 456 7890</p>
                        </div>
                    </div>
                </div>
            </div>

            @* SECCIÓN DE VALORES Y OBJETIVOS (Debajo de las tarjetas) *@
            <div class="row g-5 mt-5 justify-content-center text-start">

                @* Columna para Valores *@
                <div class="col-lg-5 col-md-6">
                    <h3 class="latest-grid-header text-center">Nuestros Valores</h3>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex align-items-start">
                            <i class="fas fa-feather-alt me-3 mt-1"></i>
                            <div>
                                <strong class="text-dark">Autenticidad:</strong> El arte nace desde la verdad interior.
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-start">
                            <i class="fas fa-lightbulb me-3 mt-1"></i>
                            <div>
                                <strong class="text-dark">Consciencia:</strong> Cada trazo es un acto de presencia y expansión.
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-start">
                            <i class="fas fa-redo-alt me-3 mt-1"></i>
                            <div>
                                <strong class="text-dark">Transformación:</strong> El proceso creativo como camino de evolución.
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-start">
                            <i class="fas fa-hand-holding-heart me-3 mt-1"></i>
                            <div>
                                <strong class="text-dark">Libertad:</strong> Aprender a crear sin miedo, sin juicio, sin comparación.
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-start">
                            <i class="fas fa-users me-3 mt-1"></i>
                            <div>
                                <strong class="text-dark">Comunidad:</strong> Crecer en un espacio seguro, humano y artístico.
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-start">
                            <i class="fas fa-trophy me-3 mt-1"></i>
                            <div>
                                <strong class="text-dark">Excelencia:</strong> Combinar profundidad emocional con técnica sólida.
                            </div>
                        </li>
                    </ul>
                </div>

                @* Columna para Objetivos *@
                <div class="col-lg-5 col-md-6">
                    <h3 class="latest-grid-header text-center">Nuestros Objetivos</h3>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex align-items-start">
                            <i class="fas fa-graduation-cap me-3 mt-1"></i>
                            <div>
                                <strong class="text-dark">Formación integral:</strong> Brindar programas educativos que desarrollen tanto las habilidades técnicas como la conexión emocional.
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-start">
                            <i class="fas fa-palette me-3 mt-1"></i>
                            <div>
                                <strong class="text-dark">Identidad artística:</strong> Acompañar a cada estudiante a construir su sello personal.
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-start">
                            <i class="fas fa-handshake me-3 mt-1"></i>
                            <div>
                                <strong class="text-dark">Comunidad consciente:</strong> Crear un espacio donde el arte sea encuentro, apoyo y evolución compartida.
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-start">
                            <i class="fas fa-microchip me-3 mt-1"></i>
                            <div>
                                <strong class="text-dark">Innovación educativa:</strong> Incorporar metodologías actuales, recursos digitales y enfoques holísticos.
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-start">
                            <i class="fas fa-chart-line me-3 mt-1"></i>
                            <div>
                                <strong class="text-dark">Proyección profesional:</strong> Fomentar oportunidades para que los artistas exhiban, vendan y difundan su trabajo.
                            </div>
                        </li>
                    </ul>
                </div>
            </div>

            @* SECCIÓN DE HISTORIA *@
            <div class="mt-5 history-section">
                <h3 class="latest-grid-header">Nuestra historia</h3>
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <p class="fs-5 text-muted">
                            Fundada en 2020 por un colectivo de artistas apasionados, Yo Soy Arte nació con la visión de democratizar la educación artística. Comenzamos como un pequeño blog, compartiendo tutoriales y consejos, y rápidamente evolucionamos hasta convertirnos en una plataforma integral que ofrece cursos, una revista digital y un espacio para que los artistas muestren su portafolio.
                        </p>
                        <p class="fs-5 text-muted">
                            Hoy en día, somos una comunidad global que sigue creciendo, inspirando y capacitando a la próxima generación de creadores. Nuestra meta es ser el puente entre la pasión por el arte y la realización profesional.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @* === FIN DE LA SECCIÓN QUIÉNES SOMOS === *@

</div>

<style>
    /* =========================================== */
