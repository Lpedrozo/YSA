@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {

            // 1. Lógica de Redirección para las tarjetas de Artistas (SIN CAMBIOS)
            $('.artist-card').on('click', function (e) {
                e.preventDefault();
                const artistaId = $(this).data('artista-id');
                if (artistaId) {
                    window.location.href = `@Url.Action("Detalles", "Artista", new { id = "" })/` + artistaId;
                }
            });

            // 2. Lógica de Responsividad de Carrusel (NUEVA LÓGICA)
            // Esta función calcula cuántos elementos caben en una diapositiva según el tamaño de la pantalla
            function getItemsPerSlide() {
                if (window.innerWidth >= 992) { // Desktop (lg)
                    return {
                        eventos: 3,
                        artistas: 4
                    };
                } else if (window.innerWidth >= 768) { // Tablet (md)
                    return {
                        eventos: 2,
                        artistas: 2
                    };
                } else { // Mobile (sm, xs)
                    return {
                        eventos: 1,
                        artistas: 1
                    };
                }
            }

            // Función principal para reestructurar el carrusel
            function restructureCarousel(carouselId, allItems, itemsPerSlide) {
                const $carouselInner = $(`#${carouselId} .carousel-inner`);
                $carouselInner.empty(); // Limpiar el contenido existente

                if (allItems.length === 0) {
                    // Manejar caso sin items
                    $carouselInner.append('<div class="carousel-item active"><div class="alert alert-info text-center" role="alert">No hay elementos para mostrar.</div></div>');
                    return;
                }

                const totalSlides = Math.ceil(allItems.length / itemsPerSlide);

                for (let i = 0; i < totalSlides; i++) {
                    const $slide = $(`<div class="carousel-item ${i === 0 ? 'active' : ''}"><div class="row g-4"></div></div>`);
                    const $row = $slide.find('.row');
                    const startIndex = i * itemsPerSlide;
                    const itemsInSlide = allItems.slice(startIndex, startIndex + itemsPerSlide);

                    itemsInSlide.each(function () {
                        // Clonamos y ajustamos las clases de columna según el tipo de carrusel
                        const $clonedItem = $(this).clone();

                        let colClass;
                        if (carouselId === 'eventosCarousel') {
                            colClass = itemsPerSlide === 1 ? 'col-12' : (itemsPerSlide === 2 ? 'col-md-6' : 'col-lg-4');
                        } else { // artistasCarousel
                            colClass = itemsPerSlide === 1 ? 'col-12' : (itemsPerSlide === 2 ? 'col-md-6' : 'col-lg-3');
                        }

                        $clonedItem.removeClass().addClass(colClass); // Reemplazamos clases existentes

                        $row.append($clonedItem);
                    });

                    $carouselInner.append($slide);
                }

                // Mostrar/Ocultar controles de navegación
                const $prevBtn = $(`#${carouselId} .carousel-control-prev`);
                const $nextBtn = $(`#${carouselId} .carousel-control-next`);

                if (totalSlides > 1) {
                    $prevBtn.show();
                    $nextBtn.show();
                } else {
                    $prevBtn.hide();
                    $nextBtn.hide();
                }

                // Reiniciar el carrusel de Bootstrap
                const carouselElement = document.getElementById(carouselId);
                if (carouselElement) {
                    const bsCarousel = bootstrap.Carousel.getInstance(carouselElement);
                    if (bsCarousel) {
                        bsCarousel.to(0); // Ir al primer slide
                    } else {
                        new bootstrap.Carousel(carouselElement); // Crear nueva instancia si no existe
                    }
                }
            }


            // 3. Inicialización y Evento de Redimensionamiento

            // Guardar todos los elementos de los carruseles originalmente generados por Razor
            // Importante: En este caso, usaremos los DIVs que contienen el <a>.
            const allEvents = $('#eventosCarousel .carousel-item .row > div');
            const allArtists = $('#artistasCarousel .carousel-item .row > div');

            function handleCarouselResponsiveness() {
                const itemsConfig = getItemsPerSlide();

                // Primero, reconstruir el carrusel de Eventos
                const eventItemsPerSlide = itemsConfig.eventos;
                // Para eventos, la lógica es más simple si dejamos que Bootstrap se encargue de las columnas,
                // ya que Razor ya ha generado todas las tarjetas.
                // Lo que haremos es reajustar las clases de columna:

                // Eventos:
                // Si itemsPerSlide es 1, queremos 1 elemento por slide (col-12)
                // Si itemsPerSlide es 2, queremos 2 elementos por slide (col-md-6)
                // Si itemsPerSlide es 3, queremos 3 elementos por slide (col-lg-4)

                // Este es el enfoque "mágico" que evita reestructurar todo el HTML:

                // Eventos
                $('#eventosCarousel .carousel-item .row > div').each(function() {
                    $(this).removeClass('col-12 col-md-6 col-lg-4').addClass('col-12 ' + (eventItemsPerSlide > 1 ? 'col-md-6' : '') + (eventItemsPerSlide > 2 ? 'col-lg-4' : ''));
                });

                // Artistas
                const artistItemsPerSlide = itemsConfig.artistas;
                // Si itemsPerSlide es 1, queremos 1 elemento por slide (col-12)
                // Si itemsPerSlide es 2, queremos 2 elementos por slide (col-md-6)
                // Si itemsPerSlide es 4, queremos 4 elementos por slide (col-lg-3)
                $('#artistasCarousel .carousel-item .row > div').each(function() {
                    $(this).removeClass('col-12 col-md-6 col-lg-3').addClass('col-12 ' + (artistItemsPerSlide > 1 ? 'col-md-6' : '') + (artistItemsPerSlide > 2 ? 'col-lg-3' : ''));
                });

                // El siguiente paso SÍ requiere reestructurar el HTML:
                // Debemos asegurar que solo haya 'itemsPerSlide' por .carousel-item
                // ¡IMPORTANTE! Para simplificar el código, en lugar de usar un script complejo que reestructura el HTML
                // te voy a dar una versión simplificada que confía en el sistema de Bootstrap.

                // El código Razor que tienes **ya está generando 3 items por slide para eventos y 4 para artistas**.
                // Para la responsividad, solo necesitas reajustar las clases col-* dentro de cada slide.
                // Como las columnas son generadas por Razor, **necesitas usar una librería de terceros** para
                // hacer que el carrusel sea verdaderamente responsive (como Owl Carousel) o
                // usar un enfoque simplificado con Bootstrap puro que te proporciono a continuación.

                // USANDO SOLO BOOTSTRAP:
                // 1. En móvil (XS/SM), cada `col-12` se apila, mostrando 3 o 4 tarjetas en la misma diapositiva.
                //    Para evitar esto, debes *mantener el bucle C#* con 1 elemento por slide *solo si quieres cambiar la lógica de la diapositiva*.
                //
                //    Opción más simple: dejar la estructura Razor tal cual y usar la función de JS para
                //    REORGANIZAR LOS ELEMENTOS DE LAS DIAPOSITIVAS EN FUNCIÓN DEL TAMAÑO.

                // Llama a la función de reestructuración con el nuevo número de ítems por slide
                // Para hacer la vista responsiva con la lógica de *cambio de número de elementos por slide*,
                // necesitamos una lógica de reestructuración más compleja que la que tienes en Razor.

                // *Solución temporal/simple: Volver a la versión de Razor para mobile (1 elemento por slide)*
                // Esta es la forma más limpia en tu código actual:

                const allEventItems = [];
                $('#eventosCarousel .carousel-item .row > div').each(function() {
                    allEventItems.push($(this).children().get(0)); // Obtener la tarjeta <a>
                });
                restructureCarouselBootstrap('eventosCarousel', allEventItems, itemsConfig.eventos);


                const allArtistItems = [];
                $('#artistasCarousel .carousel-item .row > div').each(function() {
                    allArtistItems.push($(this).children().get(0)); // Obtener la tarjeta <a>
                });
                restructureCarouselBootstrap('artistasCarousel', allArtistItems, itemsConfig.artistas);
            }

            // FUNCIÓN DE REESTRUCTURACIÓN COMPLETA
            function restructureCarouselBootstrap(carouselId, rawItems, itemsPerSlide) {
                const $carouselInner = $(`#${carouselId} .carousel-inner`);
                $carouselInner.empty(); // Limpiar el contenido existente

                if (rawItems.length === 0) {
                    $carouselInner.append('<div class="carousel-item active"><div class="alert alert-info text-center" role="alert">No hay elementos para mostrar.</div></div>');
                    return;
                }

                const totalSlides = Math.ceil(rawItems.length / itemsPerSlide);

                for (let i = 0; i < totalSlides; i++) {
                    const $slide = $(`<div class="carousel-item ${i === 0 ? 'active' : ''}"><div class="row g-4 justify-content-center"></div></div>`);
                    const $row = $slide.find('.row');
                    const startIndex = i * itemsPerSlide;
                    const itemsInSlide = rawItems.slice(startIndex, startIndex + itemsPerSlide);

                    itemsInSlide.forEach(item => {
                        const $card = $(item).clone();
                        let colClass;

                        if (carouselId === 'eventosCarousel') {
                            colClass = itemsPerSlide === 1 ? 'col-12' : (itemsPerSlide === 2 ? 'col-6' : 'col-lg-4 col-md-6');
                        } else { // artistasCarousel
                            colClass = itemsPerSlide === 1 ? 'col-12' : (itemsPerSlide === 2 ? 'col-6' : 'col-lg-3 col-md-6');
                        }

                        // Envuelve la tarjeta clonada en la columna correcta.
                        const $colDiv = $('<div>').addClass(colClass).append($card);
                        $row.append($colDiv);
                    });

                    $carouselInner.append($slide);
                }

                // Reiniciar el carrusel de Bootstrap
                const carouselElement = document.getElementById(carouselId);
                const bsCarousel = bootstrap.Carousel.getInstance(carouselElement);
                if (bsCarousel) {
                    bsCarousel.dispose(); // Destruir instancia anterior
                }
                new bootstrap.Carousel(carouselElement); // Crear nueva instancia

                // Lógica de botones (mostrar/ocultar)
                $(`#${carouselId} .carousel-control-prev`).toggle(totalSlides > 1);
                $(`#${carouselId} .carousel-control-next`).toggle(totalSlides > 1);
            }

            // Ocultamos la estructura inicial de Razor para que no se muestre antes de la reestructuración.
            // Para que este script funcione correctamente, primero debemos **extraer todos los elementos**
            // del código Razor y **reconstruir la estructura con la lógica del JS**.

            // Al cargar, debemos extraer los elementos de la estructura original de Razor
            const originalEventCards = [];
            $('#eventosCarousel .carousel-item').each(function() {
                $(this).find('.row > div > a').each(function() {
                    originalEventCards.push(this);
                });
            });

            const originalArtistCards = [];
            $('#artistasCarousel .carousel-item').each(function() {
                $(this).find('.row > div > a').each(function() {
                    originalArtistCards.push(this);
                });
            });

            function initializeCarousels() {
                const itemsConfig = getItemsPerSlide();
                restructureCarouselBootstrap('eventosCarousel', originalEventCards, itemsConfig.eventos);
                restructureCarouselBootstrap('artistasCarousel', originalArtistCards, itemsConfig.artistas);
            }

            // Inicializar al cargar
            initializeCarousels();

            // Ejecutar la función cuando la ventana cambia de tamaño
            let resizeTimer;
            $(window).on('resize', function (e) {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(function () {
                    initializeCarousels();
                }, 250); // Un pequeño retardo para evitar la reestructuración excesiva
            });
        });
    </script>
