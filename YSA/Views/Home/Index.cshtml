@using YSA.Web.Models.ViewModels
@model YSA.Web.Models.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Yo Soy Arte | Tu Comunidad Artística";
    // Crear una lista plana y ordenada de todos los eventos
    var todosLosEventos = Model.EventosCategorizados
            .SelectMany(kvp => kvp.Value)
            .OrderByDescending(e => e.FechaEvento) // Asumimos que quieres los más recientes
        .ToList();

    // Eventos para el bloque "LO ÚLTIMO" (los 6 más recientes)
    var ultimosEventos = todosLosEventos.Take(6).ToList();

    // Eventos para el nuevo bloque "EVENTOS DESTACADOS" (todos los demás)
    // Se toma el resto de eventos después de los 6 últimos
    var eventosRestantes = todosLosEventos.Skip(6).ToList();

    // 1. El primer evento es el Encabezado.
    var eventoEncabezado = eventosRestantes.FirstOrDefault();

    // 2. TODOS los eventos restantes (excluyendo el encabezado) son para la lista de abajo.
    var eventosRestantesParaLista = eventosRestantes.Skip(1).ToList();
}

