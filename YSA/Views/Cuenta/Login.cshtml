@model YSA.Web.Models.ViewModels.LoginViewModel
@using Microsoft.AspNetCore.Identity
@using YSA.Core.Entities
@inject SignInManager<Usuario> SignInManager

@{
    ViewData["Title"] = "Iniciar Sesión";
    // Define el returnUrl para que el login te devuelva a la página anterior o al Home.
    ViewData["ReturnUrl"] = ViewData["ReturnUrl"] ?? Url.Content("~/");
}

<style>
    /* ------------------------------------- */
    /* 1. Paleta Monocromática               */
    /* ------------------------------------- */
    :root {
        --color-main-bg: #f8f8f8;
        --color-card-bg: #ffffff;
        --color-primary-action: #000000;
        --color-text-dark: #212529;
        --color-text-subtle: #6c757d;
        --color-border: #ced4da;
        --color-error: #dc3545;
    }

    /* Contenedor principal: Flexbox y altura mínima */
    .main-container-dual {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--color-main-bg);
        padding: 2rem;
        font-family: Arial, sans-serif;
    }

    /* Contenedor central de las dos tarjetas */
    .dual-card-wrapper {
        display: flex;
        max-width: 1000px;
        width: 100%;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 15px 45px rgba(0, 0, 0, 0.15);
    }

    /* ------------------------------------- */
    /* 2. Panel de Contenido (Izquierda)     */
    /* ------------------------------------- */
    .content-panel-mono {
        flex: 1;
        background-color: var(--color-text-dark);
        color: #ffffff;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .panel-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 1rem;
        border-bottom: 2px solid #ffffff;
        padding-bottom: 0.5rem;
    }

    .panel-text {
        font-size: 1rem;
        line-height: 1.5;
        color: #e9ecef;
        margin-bottom: 1rem;
    }

    /* ------------------------------------- */
    /* 3. Tarjeta de Login (Derecha)         */
    /* ------------------------------------- */
    .login-card-mono {
        flex: 1;
        background-color: var(--color-card-bg);
        padding: 2rem;
    }

    /* Título del Login */
    .login-title-mono {
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--color-text-dark);
        margin-bottom: 0.8rem;
    }

    .login-header-image {
        max-width: 100%;
        height: auto;
        border-radius: 6px;
        margin-bottom: 1.5rem;
        display: block;
        border: 1px solid var(--color-border);
    }

    /* Inputs y Botón */
    .form-group-vertical {
        margin-bottom: 1rem;
    }

    .form-label-mono {
        display: block;
        width: 100%;
        font-weight: 600;
        color: var(--color-text-dark);
        margin-bottom: 0.3rem;
        font-size: 0.9rem;
    }

    .form-control-mono {
        background-color: #ffffff;
        border: 1px solid var(--color-border);
        color: var(--color-text-dark);
        border-radius: 6px;
        height: 44px;
        padding: 0.5rem 1rem;
        padding-right: 40px; /* Espacio para el icono de visibilidad */
        width: 100%;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        .form-control-mono:focus {
            border-color: var(--color-primary-action);
            outline: 0;
            box-shadow: 0 0 0 0.25rem rgba(0, 0, 0, 0.1);
        }

        /* Estilo para error de validación */
        .form-control-mono.input-validation-error {
            border-color: var(--color-error);
            box-shadow: 0 0 0 0.25rem rgba(220, 53, 69, 0.1);
        }


    .btn-mono-primary {
        width: 100%;
        background-color: var(--color-primary-action);
        color: #ffffff;
        border: none;
        border-radius: 6px;
        padding: 0.7rem 1.25rem;
        font-weight: 700;
        letter-spacing: 0.5px;
        transition: background-color 0.2s;
        margin-top: 1rem;
    }

        .btn-mono-primary:hover {
            background-color: var(--color-text-subtle);
        }

    .link-mono-subtle {
        color: var(--color-text-subtle);
        font-weight: 500;
        text-decoration: none;
        font-size: 0.85rem;
        transition: color 0.2s;
        display: block;
        margin-top: 0.4rem;
    }

        .link-mono-subtle:hover {
            color: var(--color-primary-action);
        }

    .form-footer-separator {
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid var(--color-border);
        text-align: center;
    }

    /* CLASES ADICIONALES PARA GOOGLE BUTTON */
    .btn-outline-dark {
        background-color: white;
        color: var(--color-text-dark);
        border: 1px solid var(--color-border);
    }

        .btn-outline-dark:hover {
            background-color: var(--color-main-bg);
            border-color: var(--color-text-dark);
        }

    /* ------------------------------------- */
    /* 4. Estilos de Visibilidad de Contraseña */
    /* ------------------------------------- */
    .password-container {
        position: relative;
        width: 100%;
    }

    .password-toggle-icon {
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
        color: var(--color-text-subtle);
        font-size: 1rem;
        transition: color 0.2s;
        z-index: 10; /* Asegura que el icono esté sobre el input */
    }

        .password-toggle-icon:hover {
            color: var(--color-text-dark);
        }

    /* ------------------------------------- */
    /* MEDIA QUERY RESPONSIVE (MÓVIL/TABLET) */
    /* ------------------------------------- */
    @@media (max-width: 768px) {
        .dual-card-wrapper {
            /* 1. Apilamos los elementos verticalmente */
            flex-direction: column;
            /* 2. Reducimos el ancho máximo para móvil */
            max-width: 420px;
            /* 3. Reducimos la sombra para que no sea tan dominante */
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }

        .content-panel-mono {
            /* 4. CLAVE: Ocultamos el panel de contenido en móvil */
            display: none;
        }
        /* 5. Aseguramos que la tarjeta de login tenga bordes redondeados completos en móvil */
        .login-card-mono {
            border-radius: 16px;
            padding: 1.5rem;
        }
            /* 6. Centramos los elementos principales de la tarjeta de login en móvil si es necesario */
            .login-card-mono .text-center {
                text-align: center !important;
            }
    }
</style>

<div class="main-container-dual mb-5 pb-5">
    <div class="dual-card-wrapper  mb-5 pb-5">

        <div class="content-panel-mono mb-3 pb-3">
            <h2 class="panel-title">Tu futuro, tu aprendizaje.</h2>

            <p class="panel-text">
                En YSA, no solo ofrecemos cursos; creamos caminos. Nuestra academia está diseñada para impulsarte desde cero hasta la maestría en tecnologías y habilidades blandas, asegurando que cada sesión te acerque a tus metas profesionales.
            </p>

            <p class="panel-text">
                Accede a recursos exclusivos, clases en vivo y una comunidad de mentores apasionados. Inicia sesión para retomar tu progreso, o regístrate para transformar tu potencial en éxito.
            </p>

            <p class="panel-text" style="font-weight: bold; margin-bottom: 0;">
                ¡La educación es la llave, y YSA es tu puerta!
            </p>
        </div>

        <div class="login-card-mono">
            <div class="text-center">
                <h1 class="login-title-mono">Inicia sesión</h1>

                <img src="~/diseño/InicioSesionImagen.jpg"
                     alt="Imagen descriptiva del inicio de sesión"
                     class="login-header-image" />
            </div>

            @{
                var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
            }

            @if (loginProviders.Count > 0)
            {
                <form asp-controller="Cuenta" asp-action="ExternalLogin" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">

                    <div class="d-grid gap-2 mb-4">
                        @foreach (var p in loginProviders)
                        {
                            <button type="submit" class="btn btn-outline-dark"
                                    name="provider"
                                    value="@p.Name"
                                    title="Iniciar sesión con tu cuenta de @p.DisplayName"
                                    style="width: 100%; display: flex; align-items: center; justify-content: center; font-weight: 600; padding: 0.6rem 1.25rem;">

                                <i class="fab fa-google me-2" style="margin-right: 0.5rem;"></i>
                                Continuar con Google
                            </button>
                        }
                    </div>

                    <div style="border-bottom: 1px solid var(--color-border); margin: 1.5rem 0 1rem 0;"></div>

                    <p class="text-center text-muted small mb-3" style="color: var(--color-text-subtle);">O usa tu correo y contraseña</p>
                </form>
            }
            <form asp-controller="Cuenta" asp-action="Login" method="post" class="login-form-custom mb-3 pb-3">
                <div asp-validation-summary="ModelOnly" class="text-danger small mb-4 text-center"></div>
                <input type="hidden" asp-for="ReturnUrl" value="@ViewData["ReturnUrl"]" /> @* Enviamos el ReturnUrl al post *@

                <div class="form-group-vertical">
                    <label asp-for="Email" class="form-label-mono">Correo electrónico</label>
                    <input asp-for="Email" type="email" class="form-control-mono" placeholder="ejemplo@correo.com" required>
                    <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="form-group-vertical">
                    <label asp-for="Contrasena" class="form-label-mono">Contraseña</label>
                    <div class="password-container">
                        <input asp-for="Contrasena" type="password" class="form-control-mono" placeholder="Tu contraseña" required>
                        <i class="fas fa-eye password-toggle-icon" id="togglePasswordLogin"></i>
                    </div>
                    <span asp-validation-for="Contrasena" class="text-danger small mt-1 d-block"></span>
                </div>

                <div class="form-check d-flex justify-content-between align-items-center mt-2">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="RecordarMe" id="rememberMeCheckbox">
                        <label class="form-check-label small" asp-for="RecordarMe" for="rememberMeCheckbox" style="font-weight: normal; color: var(--color-text-dark);">
                            Recordarme
                        </label>
                    </div>
                    <a href="#" class="link-mono-subtle" style="margin-top: 0;">¿Olvidaste tu contraseña?</a>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn-mono-primary">
                        Acceder
                    </button>
                </div>

                <div class="form-footer-separator">
                    <span class="text-footer-subtle">¿No eres miembro? </span>
                    <a href="~/Cuenta/Registro" class="link-mono-subtle">
                        Regístrate ahora
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Se añade un estilo visual de error al input afectado
            document.querySelectorAll('[data-valmsg-for]').forEach(span => {
                const inputId = span.getAttribute('data-valmsg-for');
                const input = document.getElementById(inputId);

                if (!input) return;

                const observer = new MutationObserver(mutations => {
                    mutations.forEach(mutation => {
                        if (mutation.type === 'childList' || mutation.type === 'characterData') {
                            if (span.innerHTML.trim() !== "" && span.innerHTML.trim() !== "[]") {
                                input.classList.add('input-validation-error');
                            } else {
                                input.classList.remove('input-validation-error');
                            }
                        }
                    });
                });

                // Observar cambios en el contenido y atributos del span
                observer.observe(span, { childList: true, characterData: true, subtree: true });

                // Verificación inicial al cargar la página
                if (span.innerHTML.trim() !== "" && span.innerHTML.trim() !== "[]") {
                    input.classList.add('input-validation-error');
                }
            });

            // Lógica para alternar la visibilidad de la contraseña (Login)
            const togglePasswordLogin = document.getElementById('togglePasswordLogin');
            // Usamos document.querySelector para encontrar el input asp-for="Contrasena"
            // El Tag Helper genera un ID igual al nombre de la propiedad, que es 'Contrasena'
            const passwordLoginInput = document.getElementById('Contrasena');

            if (togglePasswordLogin && passwordLoginInput) {
                togglePasswordLogin.addEventListener('click', function() {
                    // Alterna el tipo del input: 'password' <-> 'text'
                    const type = passwordLoginInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordLoginInput.setAttribute('type', type);

                    // Alterna el icono: 'fa-eye' <-> 'fa-eye-slash'
                    this.classList.toggle('fa-eye');
                    this.classList.toggle('fa-eye-slash');
                });
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}