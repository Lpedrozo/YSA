@model YSA.Web.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<style>
    /* Estilos del contenedor principal */
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 100vh;
        padding: 2rem 1rem;
    }

    /* Estilos de la tarjeta de login */
    .login-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 12px;
        box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
        padding: 2.5rem;
        max-width: 420px;
        width: 100%;
        transition: transform 0.3s ease-in-out;
    }

        .login-card:hover {
            transform: translateY(-5px);
        }

        .login-card .card-title {
            font-size: 2rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

    /* Estilos de los inputs */
    .form-control {
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 8px;
        padding: 12px 15px;
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus {
            background-color: rgba(255, 255, 255, 0.15);
            border-color: #ffb800; /* Color de acento de YSA */
            box-shadow: 0 0 0 0.25rem rgba(255, 184, 0, 0.25);
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.5);
        }

    /* Estilos de la casilla de verificación */
    .form-check-input {
        background-color: rgba(255, 255, 255, 0.1);
        border-color: rgba(255, 255, 255, 0.5);
        transition: background-color 0.2s;
    }

        .form-check-input:checked {
            background-color: #ffb800;
            border-color: #ffb800;
        }

    /* Estilos del botón de login */
    .btn-login {
        background-color: #ffb800;
        border: none;
        color: #1a1a1a;
        font-weight: 700;
        border-radius: 8px;
        padding: 12px;
        transition: all 0.3s ease-in-out;
    }

        .btn-login:hover {
            background-color: #e0a400;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(255, 184, 0, 0.4);
        }

    /* Mensajes de validación */
    .text-danger {
        color: #dc3545 !important;
    }
</style>

<div class="login-container mt-0 pt-0">
    <div class="login-card">
        <div class="text-center mb-4">
            <h2 class="h4 card-title">Iniciar Sesión</h2>
            <p class="text-muted mt-2">Bienvenido de nuevo a YSA</p>
        </div>

        <form asp-controller="Cuenta" asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" type="email" class="form-control">
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Contrasena" class="form-label">Contraseña</label>
                <input asp-for="Contrasena" type="password" class="form-control">
                <span asp-validation-for="Contrasena" class="text-danger small"></span>
            </div>

            <div class="form-check mb-4">
                <input asp-for="RecordarMe" type="checkbox" class="form-check-input">
                <label asp-for="RecordarMe" class="form-check-label">Recordarme</label>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-login">
                    Iniciar Sesión
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}