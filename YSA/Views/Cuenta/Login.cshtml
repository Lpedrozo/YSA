@model YSA.Web.Models.ViewModels.LoginViewModel
@using Microsoft.AspNetCore.Identity
@using YSA.Core.Entities
@inject SignInManager<Usuario> SignInManager

@{
    ViewData["Title"] = "Iniciar Sesión";
    ViewData["ReturnUrl"] = ViewData["ReturnUrl"] ?? Url.Content("~/");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Estilos específicos para esta vista -->
<style>
    /* =========================================== */
    /* ESTILOS PARA LOGIN CON IMAGEN DE FONDO */
    /* =========================================== */

    .login-fullscreen {
        position: relative;
        width: 100vw;
        height: calc(100vh - 5.5rem);
        overflow: hidden;
        background-color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Contenedor principal que abarca todo el espacio */
    .login-main-container {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: stretch;
        background-color: #fff;
    }

    /* Columna izquierda - Imagen de fondo */
    .login-image-column {
        flex: 0 0 65%;
        position: relative;
        overflow: hidden;
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Imagen de fondo */
    .login-background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform 0.5s ease;
    }

    .login-image-column:hover .login-background-image {
        transform: scale(1.02);
    }

    /* Overlay sutil para dar profundidad */
    .login-image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    /* Texto superpuesto en la imagen */
    .login-image-text {
        position: absolute;
        bottom: 3rem;
        left: 3rem;
        z-index: 2;
        color: white;
        max-width: 400px;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

        .login-image-text h1 {
            font-family: var(--font-heading);
            font-size: 2.5rem;
            font-weight: normal;
            margin-bottom: 1rem;
            line-height: 1.2;
        }

        .login-image-text p {
            font-family: var(--font-body);
            font-size: 1.1rem;
            opacity: 0.95;
            margin: 0;
            line-height: 1.5;
        }

    /* Columna derecha - Formulario */
    .login-form-column {
        flex: 0 0 35%;
        background-color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1.5rem;
        animation: fadeIn 0.6s ease-out;
    }

    /* Contenedor del formulario */
    .login-form-wrapper {
        width: 100%;
        max-width: 380px;
        margin: 0 auto;
    }

    /* Logo y título */
    .login-form-logo {
        text-align: center;
        margin-bottom: 1.5rem;
    }

    .login-logo-image {
        width: 90px;
        height: auto;
        margin: 0 auto 1rem;
        filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.05));
    }

    .login-form-title {
        font-family: var(--font-heading);
        font-size: 1.6rem;
        color: var(--color-brand-primary);
        margin-bottom: 0.25rem;
        line-height: 1.2;
    }

    .login-form-subtitle {
        font-family: var(--font-body);
        color: var(--color-accent);
        font-size: 0.8rem;
        margin: 0;
    }

    /* Grupos de formulario */
    .login-form-group {
        margin-bottom: 1rem;
    }

    .login-form-label {
        display: block;
        font-family: var(--font-accent);
        font-weight: 500;
        font-size: 0.75rem;
        color: var(--color-text-dark);
        margin-bottom: 0.25rem;
    }

        .login-form-label i {
            font-size: 0.7rem;
        }

    .login-input-wrapper {
        position: relative;
    }

    .login-form-input {
        width: 100%;
        padding: 0.5rem 0.75rem;
        font-family: var(--font-body);
        font-size: 0.8rem;
        color: var(--color-text-dark);
        background-color: #fff;
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius-sm);
        transition: all 0.2s ease;
        outline: none;
    }

        .login-form-input:focus {
            border-color: var(--color-brand-primary);
            box-shadow: 0 0 0 2px rgba(239, 136, 48, 0.1);
        }

        .login-form-input.input-validation-error {
            border-color: var(--color-brand-secondary);
        }

    /* Toggle de contraseña */
    .login-password-toggle {
        position: absolute;
        right: 0.6rem;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: var(--color-accent);
        cursor: pointer;
        font-size: 0.8rem;
        transition: color 0.2s ease;
        padding: 0.15rem;
    }

        .login-password-toggle:hover {
            color: var(--color-brand-primary);
        }

    /* Opciones del formulario */
    .login-form-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1rem;
        font-size: 0.8rem;
    }

    .login-checkbox {
        display: flex;
        align-items: center;
        gap: 0.4rem;
    }

    .login-checkbox-input {
        width: 0.9rem;
        height: 0.9rem;
        border: 1px solid var(--color-border);
        border-radius: 3px;
        cursor: pointer;
        accent-color: var(--color-brand-primary);
    }

    .login-checkbox-label {
        font-family: var(--font-accent);
        color: var(--color-text-dark);
        cursor: pointer;
        font-size: 0.75rem;
    }

    .login-forgot-link {
        font-family: var(--font-accent);
        color: var(--color-brand-primary);
        text-decoration: none;
        font-size: 0.75rem;
        transition: color 0.2s ease;
    }

        .login-forgot-link:hover {
            color: var(--color-brand-secondary);
            text-decoration: underline;
        }

    /* Botón principal */
    .login-submit-btn {
        width: 100%;
        padding: 0.6rem 1rem;
        background: linear-gradient(135deg, var(--color-brand-primary) 0%, #e07a2a 100%);
        border: none;
        border-radius: var(--border-radius-sm);
        color: white;
        font-family: var(--font-accent);
        font-size: 0.8rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        position: relative;
        overflow: hidden;
        letter-spacing: 0.3px;
    }

        .login-submit-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(239, 136, 48, 0.2);
            background: linear-gradient(135deg, #e07a2a 0%, var(--color-brand-secondary) 100%);
        }

        .login-submit-btn:active {
            transform: translateY(0);
        }

        .login-submit-btn i {
            transition: transform 0.2s ease;
            font-size: 0.8rem;
        }

        .login-submit-btn:hover i {
            transform: translateX(3px);
        }

    /* Separador */
    .login-separator {
        display: flex;
        align-items: center;
        margin: 1rem 0;
        color: var(--color-accent);
        font-family: var(--font-accent);
        font-size: 0.7rem;
    }

        .login-separator::before,
        .login-separator::after {
            flex: 1;
            height: 1px;
        }

        .login-separator::before {
            margin-right: 0.75rem;
        }

        .login-separator::after {
            margin-left: 0.75rem;
        }

    /* Botones externos */
    .login-external-buttons {
        margin-bottom: 1rem;
    }

    .login-external-btn {
        width: 100%;
        padding: 0.5rem;
        background: white;
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius-sm);
        font-family: var(--font-accent);
        font-size: 0.75rem;
        font-weight: 500;
        color: var(--color-text-dark);
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

        .login-external-btn:hover {
            border-color: var(--color-brand-primary);
            background: rgba(239, 136, 48, 0.05);
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .login-external-btn:last-child {
            margin-bottom: 0;
        }

        .login-external-btn i {
            font-size: 0.8rem;
        }

    .google-btn {
        border-color: #DB4437;
        color: #DB4437;
    }

        .google-btn:hover {
            background: rgba(219, 68, 55, 0.05);
            border-color: #DB4437;
        }

    .facebook-btn {
        border-color: #4267B2;
        color: #4267B2;
    }

        .facebook-btn:hover {
            background: rgba(66, 103, 178, 0.05);
            border-color: #4267B2;
        }

    /* Pie de página */
    .login-footer {
        text-align: center;
        padding-top: 0.8rem;
        border-top: 1px solid rgba(239, 136, 48, 0.1);
    }

    .login-footer-text {
        font-family: var(--font-body);
        color: var(--color-accent);
        font-size: 0.7rem;
        margin: 0;
    }

    .login-register-link {
        color: var(--color-brand-primary);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s ease;
        font-size: 0.7rem;
    }

        .login-register-link:hover {
            color: var(--color-brand-secondary);
            text-decoration: underline;
        }

    /* Mensajes de validación */
    .login-validation-summary {
        background: rgba(229, 54, 26, 0.05);
        border: 1px solid rgba(229, 54, 26, 0.2);
        border-radius: var(--border-radius-sm);
        padding: 0.6rem;
        font-family: var(--font-body);
        font-size: 0.7rem;
        color: var(--color-alert);
        margin-bottom: 1rem;
    }

        .login-validation-summary ul {
            margin: 0;
            padding-left: 1.2rem;
        }

    .field-validation-error {
        display: block;
        margin-top: 0.2rem;
        font-family: var(--font-accent);
        font-size: 0.65rem;
        color: var(--color-alert);
    }

    /* Animaciones */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* =========================================== */
    /* RESPONSIVE */
    /* =========================================== */

    /* Tablets y pantallas medianas */
    @@media (max-width: 992px) {
        .login-image-text {
            bottom: 2rem;
            left: 2rem;
            max-width: 300px;
        }

            .login-image-text h1 {
                font-size: 2rem;
            }

            .login-image-text p {
                font-size: 1rem;
            }

        .login-form-wrapper {
            max-width: 320px;
        }
    }

    /* Móviles y tablets pequeñas */
    @@media (max-width: 768px) {
        .login-fullscreen {
            height: auto;
            min-height: calc(100vh - 5.5rem);
        }

        .login-main-container {
            flex-direction: column;
        }

        .login-image-column {
            flex: 0 0 250px;
            width: 100%;
            min-height: 250px;
        }

        .login-image-text {
            bottom: 1.5rem;
            left: 1.5rem;
            max-width: 250px;
        }

            .login-image-text h1 {
                font-size: 1.8rem;
            }

            .login-image-text p {
                font-size: 0.9rem;
            }

        .login-form-column {
            flex: 1;
            width: 100%;
            padding: 1.5rem;
        }

        .login-form-wrapper {
            max-width: 350px;
        }
    }

    /* Móviles pequeños */
    @@media (max-width: 576px) {
        .login-image-column {
            flex: 0 0 200px;
            min-height: 200px;
        }

        .login-image-text {
            bottom: 1rem;
            left: 1rem;
            max-width: 200px;
        }

            .login-image-text h1 {
                font-size: 1.5rem;
            }

            .login-image-text p {
                font-size: 0.8rem;
            }

        .login-form-column {
            padding: 1rem;
        }

        .login-form-title {
            font-size: 1.5rem;
        }

        .login-logo-image {
            width: 80px;
        }

        .login-form-options {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.5rem;
        }

        .login-forgot-link {
            align-self: flex-end;
        }
    }

    /* Landscape en móviles */
    @@media (max-height: 600px) and (orientation: landscape) {
        .login-fullscreen {
            height: auto;
            min-height: 100vh;
        }

        .login-image-column {
            flex: 0 0 150px;
            min-height: 150px;
        }

        .login-form-column {
            padding: 1rem;
        }

        .login-form-group {
            margin-bottom: 0.5rem;
        }

        .login-form-logo {
            margin-bottom: 0.5rem;
        }

        .login-form-title {
            font-size: 1.3rem;
        }
    }

    /* Ajuste para quitar cualquier división visual */
    .login-main-container {
        box-shadow: none;
        border: none;
    }

    .login-image-column,
    .login-form-column {
        box-shadow: none;
        border: none;
    }

        /* Efecto sutil de separación solo con la imagen */
        .login-image-column::after {
            position: absolute;
            right: 0;
            top: 10%;
            height: 80%;
            width: 1px;
            background: linear-gradient(to bottom, transparent, rgba(239, 136, 48, 0.2), transparent);
            z-index: 2;
        }

    @@media (max-width: 768px) {
        .login-image-column::after {
            display: none;
        }
    }
</style>

<div class="login-fullscreen">
    <div class="login-main-container">
        <!-- Columna izquierda - Imagen de fondo -->
        <div class="login-image-column">
            <img src="~/diseño/InicioSesion.png" alt="Yo Soy Arte" class="login-background-image">
            <div class="login-image-overlay"></div>
        </div>

        <!-- Columna derecha - Formulario de inicio de sesión -->
        <div class="login-form-column">
            <div class="login-form-wrapper">
                <!-- Logo -->
                <div class="login-form-logo">
                    <h2 class="login-form-title">¡Inicia sesión!</h2>
                    <p class="login-form-subtitle">Para continuar tu viaje artístico</p>
                </div>

                <!-- Resumen de validación -->
                <div asp-validation-summary="ModelOnly" class="login-validation-summary"></div>

                <!-- Formulario de login -->
                <form asp-controller="Cuenta" asp-action="Login" method="post">
                    <input type="hidden" asp-for="ReturnUrl" value="@ViewData["ReturnUrl"]" />

                    <!-- Campo de Correo Electrónico -->
                    <div class="login-form-group">
                        <label class="login-form-label" asp-for="Email">
                            <i class="fas fa-envelope me-1"></i> Correo Electrónico
                        </label>
                        <div class="login-input-wrapper">
                            <input asp-for="Email" type="email" class="login-form-input"
                                   placeholder="tu@email.com">
                        </div>
                        <span asp-validation-for="Email" class="field-validation-error"></span>
                    </div>

                    <!-- Campo de Contraseña -->
                    <div class="login-form-group">
                        <label class="login-form-label" asp-for="Contrasena">
                            <i class="fas fa-lock me-1"></i> Contraseña
                        </label>
                        <div class="login-input-wrapper">
                            <input asp-for="Contrasena" type="password" class="login-form-input"
                                   placeholder="••••••••" id="password">
                            <button type="button" class="login-password-toggle" id="togglePassword" aria-label="Mostrar contraseña">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Contrasena" class="field-validation-error"></span>
                    </div>

                    <!-- Opciones: Recordarme y Olvidé contraseña -->
                    <div class="login-form-options">
                        <div class="login-checkbox">
                            <input class="login-checkbox-input" type="checkbox" id="rememberMe" name="rememberMe">
                            <label class="login-checkbox-label" for="rememberMe">
                                Recordarme
                            </label>
                        </div>
                        <a asp-controller="Cuenta" asp-action="ForgotPassword" class="login-forgot-link">
                            ¿Olvidaste tu contraseña?
                        </a>
                    </div>

                    <!-- Botón de Iniciar Sesión -->
                    <button type="submit" class="login-submit-btn">
                        <span>Iniciar Sesión</span>
                        <i class="fas fa-arrow-right"></i>
                    </button>
                </form>

                <!-- Separador para opciones externas -->
                @{
                    var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
                }

                @if (loginProviders.Count > 0)
                {
                    <div class="login-separator">
                        <span>O continuar con</span>
                    </div>

                    <!-- Botones de login externo -->
                    <div class="login-external-buttons">
                        <form asp-controller="Cuenta" asp-action="ExternalLogin"
                              asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                            @foreach (var p in loginProviders)
                            {
                                if (p.Name.ToLower().Contains("google"))
                                {
                                    <button type="submit" class="login-external-btn google-btn"
                                            name="provider" value="@p.Name"
                                            title="Iniciar sesión con tu cuenta de @p.DisplayName">
                                        <i class="fab fa-google"></i>
                                        <span>@p.DisplayName</span>
                                    </button>
                                }
                                else if (p.Name.ToLower().Contains("facebook"))
                                {
                                    <button type="submit" class="login-external-btn facebook-btn"
                                            name="provider" value="@p.Name"
                                            title="Iniciar sesión con tu cuenta de @p.DisplayName">
                                        <i class="fab fa-facebook-f"></i>
                                        <span>@p.DisplayName</span>
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="login-external-btn"
                                            name="provider" value="@p.Name"
                                            title="Iniciar sesión con tu cuenta de @p.DisplayName">
                                        <i class="fas fa-external-link-alt"></i>
                                        <span>@p.DisplayName</span>
                                    </button>
                                }
                            }
                        </form>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle para mostrar/ocultar contraseña
            const togglePassword = document.getElementById('togglePassword');
            const passwordInput = document.getElementById('password');

            if (togglePassword && passwordInput) {
                togglePassword.addEventListener('click', function() {
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);

                    const icon = this.querySelector('i');
                    icon.classList.toggle('fa-eye');
                    icon.classList.toggle('fa-eye-slash');
                });
            }

            // Animación para inputs cuando tienen valor
            const inputs = document.querySelectorAll('.login-form-input');
            inputs.forEach(input => {
                input.addEventListener('input', function() {
                    if (this.value.trim() !== '') {
                        this.style.borderColor = 'var(--color-brand-primary)';
                    } else {
                        this.style.borderColor = 'var(--color-border)';
                    }
                });
            });

            // Manejo de errores de validación
            document.querySelectorAll('[data-valmsg-for]').forEach(span => {
                const inputId = span.getAttribute('data-valmsg-for');
                const input = document.getElementById(inputId);

                if (!input) return;

                const observer = new MutationObserver(mutations => {
                    mutations.forEach(mutation => {
                        if (mutation.type === 'childList' || mutation.type === 'characterData') {
                            if (span.innerHTML.trim() !== "" && span.innerHTML.trim() !== "[]") {
                                input.classList.add('input-validation-error');
                            } else {
                                input.classList.remove('input-validation-error');
                            }
                        }
                    });
                });

                observer.observe(span, { childList: true, characterData: true, subtree: true });
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}