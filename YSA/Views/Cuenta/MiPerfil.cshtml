@model YSA.Web.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Mi Perfil y Cursos";
}

<style>
    /* Estilos base del diseño */
    body {
        background-color: #f7f7f7;
        color: #000;
    }

    .main-container {
        padding: 40px 0;
    }

    .profile-sidebar {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
        padding: 30px;
        min-height: calc(100vh - 80px);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    /* Estilos específicos para la foto de perfil */
    .profile-photo-container {
        position: relative;
        width: 120px;
        height: 120px;
        margin: 0 auto 20px;
        border-radius: 50%;
        overflow: hidden;
        border: 3px solid #f0f0f0;
        cursor: pointer;
    }

        .profile-photo-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    .initials {
        width: 100%;
        height: 100%;
        background-color: #c49900;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 2.5rem;
        font-weight: bold;
    }

    .upload-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        display: flex;
        align-items: center;
        justify-content: center;
        opacity: 0;
        transition: opacity 0.3s ease;
        color: white;
        font-size: 1.5rem;
    }

    .profile-photo-container:hover .upload-overlay {
        opacity: 1;
    }

    #imageUpload {
        display: none;
    }

    .sidebar-menu {
        list-style: none;
        padding: 0;
        margin-top: 30px;
        width: 100%;
    }

    .sidebar-menu-item a {
        display: block;
        padding: 12px 15px;
        margin-bottom: 5px;
        border-radius: 8px;
        color: #6a6a6a;
        text-decoration: none;
        transition: background-color 0.2s, color 0.2s;
    }

        .sidebar-menu-item a.active,
        .sidebar-menu-item a:hover {
            background-color: #c49900;
            color: #fff;
        }

    .profile-content {
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
        padding: 40px;
    }

    .content-section {
        border-bottom: 1px solid #eee;
        padding-bottom: 20px;
        margin-bottom: 20px;
    }

        .content-section:last-child {
            border-bottom: none;
            margin-bottom: 0;
        }

    .section-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 15px;
        color: #000;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 12px;
        background-color: #f7f7f7;
        width: 100%;
    }

        .form-control:focus {
            border-color: #c49900;
            box-shadow: 0 0 0 0.25rem rgba(196, 153, 0, 0.25);
        }

    /* Estilos para las tarjetas de cursos */
    .curso-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border-radius: 12px;
        overflow: hidden;
    }

        .curso-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
        }

        .curso-card img {
            height: 200px;
            object-fit: cover;
        }

    .curso-title {
        font-weight: 600;
        color: #000;
    }

    .curso-price {
        font-weight: 700;
        color: #c49900;
    }
</style>

<div class="container main-container">
    <div class="row g-4">
        <div class="col-md-4">
            <div class="profile-sidebar">
                <form asp-action="UpdateProfileImage" method="post" enctype="multipart/form-data" id="imageUploadForm">
                    <label for="imageUpload">
                        <div class="profile-photo-container">
                            @if (!string.IsNullOrEmpty(Model.UrlImagen))
                            {
                                <img src="@Model.UrlImagen" alt="Profile Picture" />
                            }
                            else
                            {
                                <div class="initials">
                                    @{
                                        string initials = "";
                                        if (!string.IsNullOrEmpty(Model.Nombre) && !string.IsNullOrEmpty(Model.Apellido))
                                        {
                                            initials = Model.Nombre.ToUpper().FirstOrDefault().ToString() + Model.Apellido.ToUpper().FirstOrDefault().ToString();
                                        }
                                    }
                                    @initials
                                </div>
                            }
                            <div class="upload-overlay">
                                <i class="fas fa-camera"></i>
                            </div>
                        </div>
                    </label>
                    <input type="file" id="imageUpload" name="file" accept="image/*" />
                    @Html.AntiForgeryToken()
                </form>

                <h4 class="mt-3">@Model.Nombre @Model.Apellido</h4>
                <p class="text-muted-dark">@Model.Email</p>

                <ul class="sidebar-menu">
                    <li class="sidebar-menu-item"><a href="#" id="miPerfilLink" class="active"><i class="fas fa-user-circle"></i> Mi Perfil</a></li>
                    <li class="sidebar-menu-item"><a href="#" id="seguridadLink"><i class="fas fa-lock"></i> Seguridad de la Cuenta</a></li>
                    <li class="sidebar-menu-item"><a href="#" id="misCursosLink"><i class="fas fa-book-open"></i> Mis Cursos</a></li>
                    <li class="sidebar-menu-item">
                        <form asp-controller="Cuenta" asp-action="Logout" method="post" id="logoutForm">
                            <button type="submit" class="btn btn-link" style="color: #6a6a6a; text-decoration: none; padding: 12px 15px; width: 100%; text-align: left; transition: background-color 0.2s, color 0.2s;">
                                <i class="fas fa-power-off"></i> Cerrar Sesión
                            </button>
                            @Html.AntiForgeryToken()
                        </form>
                    </li>
                </ul>
            </div>
        </div>

        <div class="col-md-8">
            <div class="profile-content">
                <div id="profileSection" class="content-section">
                    <form asp-action="UpdateProfile" method="post">
                        <h2 class="section-title">Información del Perfil</h2>
                        <p class="text-muted-dark">Establece la configuración de tu cuenta y cambia la contraseña aquí.</p>
                        <div class="mb-3">
                            <label class="form-label">Correo electrónico</label>
                            <input type="text" class="form-control" value="@Model.Email" readonly />
                        </div>
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" id="nombre" name="Nombre" class="form-control" value="@Model.Nombre" />
                        </div>
                        <div class="mb-3">
                            <label for="apellido" class="form-label">Apellido</label>
                            <input type="text" id="apellido" name="Apellido" class="form-control" value="@Model.Apellido" />
                        </div>
                        <button type="submit" class="btn btn-primary" style="background-color: #c49900; border-color: #c49900;">Guardar cambios</button>
                    </form>
                </div>

                <div id="securitySection" class="content-section" style="display: none;">
                    <h2 class="section-title">Cambiar Contraseña</h2>
                    <form asp-action="ChangePassword" method="post">
                        <div class="mb-3">
                            <label for="currentPassword" class="form-label">Contraseña Actual</label>
                            <input type="password" id="currentPassword" name="CurrentPassword" class="form-control" />
                            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="newPassword" class="form-label">Nueva Contraseña</label>
                            <input type="password" id="newPassword" name="NewPassword" class="form-control" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirmar Nueva Contraseña</label>
                            <input type="password" id="confirmPassword" name="ConfirmPassword" class="form-control" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary" style="background-color: #c49900; border-color: #c49900;">Actualizar Contraseña</button>
                    </form>
                </div>

                <div id="coursesSection" class="content-section" style="display: none;">
                    <h2 class="section-title">Mis Cursos</h2>
                    @if (Model.CursosComprados != null && Model.CursosComprados.Any())
                    {
                        <div class="row row-cols-1 row-cols-md-2 g-4">
                            @foreach (var curso in Model.CursosComprados)
                            {
                                <div class="col">
                                    <div class="card h-100 curso-card">
                                        <img src="@curso.UrlImagen" class="card-img-top" alt="@curso.Titulo" onerror="this.onerror=null;this.src='https://placehold.co/600x400/FFF/000?text=Sin+Imagen';" />
                                        <div class="card-body">
                                            <h5 class="card-title curso-title">@curso.Titulo</h5>
                                            <p class="card-text text-muted-dark">@curso.DescripcionCorta</p>
                                            <p class="card-text curso-price">@curso.Precio.ToString("C")</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center" role="alert">
                            Aún no has comprado ningún curso.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const miPerfilLink = document.getElementById('miPerfilLink');
        const seguridadLink = document.getElementById('seguridadLink');
        const misCursosLink = document.getElementById('misCursosLink');
        const profileSection = document.getElementById('profileSection');
        const securitySection = document.getElementById('securitySection');
        const coursesSection = document.getElementById('coursesSection');

        function setActiveLink(activeLink) {
            miPerfilLink.classList.remove('active');
            seguridadLink.classList.remove('active');
            misCursosLink.classList.remove('active');
            activeLink.classList.add('active');
        }

        function showSection(sectionToShow) {
            profileSection.style.display = 'none';
            securitySection.style.display = 'none';
            coursesSection.style.display = 'none';
            sectionToShow.style.display = 'block';
        }

        miPerfilLink.addEventListener('click', function (e) {
            e.preventDefault();
            setActiveLink(this);
            showSection(profileSection);
        });

        seguridadLink.addEventListener('click', function (e) {
            e.preventDefault();
            setActiveLink(this);
            showSection(securitySection);
        });

        misCursosLink.addEventListener('click', function (e) {
            e.preventDefault();
            setActiveLink(this);
            showSection(coursesSection);
        });

        const imageUploadInput = document.getElementById('imageUpload');
        imageUploadInput.addEventListener('change', function () {
            // Envía el formulario de subida de imagen cuando se selecciona un archivo
            document.getElementById('imageUploadForm').submit();
        });

        // Manejar la visibilidad de las secciones al cargar la página (útil para cuando se redirige)
        const urlParams = new URLSearchParams(window.location.search);
        const section = urlParams.get('section');
        if (section === 'security') {
            setActiveLink(seguridadLink);
            showSection(securitySection);
        } else if (section === 'courses') {
            setActiveLink(misCursosLink);
            showSection(coursesSection);
        }
    });
</script>