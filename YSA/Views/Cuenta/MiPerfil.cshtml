@model YSA.Web.Models.ViewModels.UserViewModel
@{
    ViewData["Title"] = "Mi perfil y cursos";
}

<div class="container main-container mt-5 pt-5 mb-5">
    <div class="row g-5">
        <!-- BARRA LATERAL DE PERFIL -->
        <div class="col-lg-4">
            <div class="curso-sidebar" style="position: sticky; top: 20px;">
                <div class="curso-precio-card">
                    <!-- FOTO DE PERFIL -->
                    <form asp-action="UpdateProfileImage" method="post" enctype="multipart/form-data" id="imageUploadForm" class="text-center">
                        <label for="imageUpload" class="d-inline-block cursor-pointer">
                            <div class="position-relative mb-4" style="width: 140px; height: 140px; margin: 0 auto;">
                                @if (!string.IsNullOrEmpty(Model.UrlImagen))
                                {
                                    <img src="@Model.UrlImagen" alt="Foto de perfil"
                                         class="persona-imagen"
                                         style="width: 140px; height: 140px;">
                                    <div class="position-absolute top-0 start-0 w-100 h-100 bg-dark bg-opacity-50 d-flex align-items-center justify-content-center rounded-circle opacity-0 transition-all hover:opacity-100">
                                        <i class="fas fa-camera text-white fs-3"></i>
                                    </div>
                                }
                                else
                                {
                                    <div class="persona-imagen d-flex align-items-center justify-content-center bg-primary bg-opacity-10 text-primary fs-2 fw-bold"
                                         style="width: 140px; height: 140px;">
                                        @{
                                            string initials = "";
                                            if (!string.IsNullOrEmpty(Model.Nombre) && !string.IsNullOrEmpty(Model.Apellido))
                                            {
                                                initials = Model.Nombre.ToUpper().FirstOrDefault().ToString() + Model.Apellido.ToUpper().FirstOrDefault().ToString();
                                            }
                                        }
                                        @initials
                                    </div>
                                }
                            </div>
                        </label>
                        <input type="file" id="imageUpload" name="file" accept="image/*" class="d-none" />
                        @Html.AntiForgeryToken()
                    </form>

                    <!-- INFORMACIÓN DEL USUARIO -->
                    <div class="text-center mb-4">
                        <h3 class="persona-nombre mb-1">@Model.Nombre @Model.Apellido</h3>
                        <p class="text-muted mb-0">@Model.Email</p>
                    </div>

                    <!-- MENÚ DE NAVEGACIÓN -->
                    <div class="miscursos-filtros mb-0">
                        <div class="miscursos-filtros-botones flex-column gap-2">
                            <button type="button" class="miscursos-filtro-btn text-start active" data-section="profile">
                                <i class="fas fa-user-circle me-2"></i> Mi Perfil
                            </button>
                            <button type="button" class="miscursos-filtro-btn text-start" data-section="security">
                                <i class="fas fa-lock me-2"></i> Seguridad
                            </button>
                            <button type="button" class="miscursos-filtro-btn text-start" data-section="courses">
                                <i class="fas fa-book-open me-2"></i> Mis Cursos
                            </button>
                            <button type="button" class="miscursos-filtro-btn text-start" data-section="products">
                                <i class="fas fa-file-pdf me-2"></i> Mis Productos
                            </button>
                            <form asp-controller="Cuenta" asp-action="Logout" method="post" class="w-100">
                                <button type="submit" class="miscursos-filtro-btn text-start w-100">
                                    <i class="fas fa-power-off me-2"></i> Cerrar Sesión
                                </button>
                                @Html.AntiForgeryToken()
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- CONTENIDO PRINCIPAL -->
        <div class="col-lg-8">
            <div class="curso-precio-card">
                <!-- SECCIÓN DE PERFIL -->
                <div id="profileSection" class="content-section active-section">
                    <h2 class="curso-titulo-seccion">
                        <i class="fas fa-user-circle me-2"></i>INFORMACIÓN DEL PERFIL
                    </h2>
                    <p class="text-muted mb-4">Actualiza tus datos personales y mantén tu perfil al día</p>

                    <form asp-action="UpdateProfile" method="post">
                        <div class="row g-3">
                            <div class="col-12">
                                <label for="email" class="form-label confirmacion-form-label">Correo Electrónico</label>
                                <input type="text" id="email" class="form-control confirmacion-form-input" value="@Model.Email" readonly />
                            </div>
                            <div class="col-md-6">
                                <label for="nombre" class="form-label confirmacion-form-label">Nombre</label>
                                <input type="text" id="nombre" name="Nombre" class="form-control confirmacion-form-input" value="@Model.Nombre" />
                            </div>
                            <div class="col-md-6">
                                <label for="apellido" class="form-label confirmacion-form-label">Apellido</label>
                                <input type="text" id="apellido" name="Apellido" class="form-control confirmacion-form-input" value="@Model.Apellido" />
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary curso-btn-inscribirse">
                                    <i class="fas fa-save me-2"></i>Guardar Cambios
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- SECCIÓN DE SEGURIDAD -->
                <div id="securitySection" class="content-section d-none">
                    <h2 class="curso-titulo-seccion">
                        <i class="fas fa-lock me-2"></i>SEGURIDAD DE LA CUENTA
                    </h2>
                    <p class="text-muted mb-4">Mantén tu cuenta segura actualizando tu contraseña periódicamente</p>

                    <form asp-action="ChangePassword" method="post">
                        <div class="row g-3">
                            <div class="col-12">
                                <label for="currentPassword" class="form-label confirmacion-form-label">Contraseña Actual</label>
                                <input type="password" id="currentPassword" name="CurrentPassword" class="form-control confirmacion-form-input" />
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="newPassword" class="form-label confirmacion-form-label">Nueva Contraseña</label>
                                <input type="password" id="newPassword" name="NewPassword" class="form-control confirmacion-form-input" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label for="confirmPassword" class="form-label confirmacion-form-label">Confirmar Contraseña</label>
                                <input type="password" id="confirmPassword" name="ConfirmPassword" class="form-control confirmacion-form-input" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary curso-btn-inscribirse">
                                    <i class="fas fa-key me-2"></i>Actualizar Contraseña
                                </button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- SECCIÓN DE CURSOS -->
                <div id="coursesSection" class="content-section d-none">
                    <h2 class="curso-titulo-seccion">
                        <i class="fas fa-book-open me-2"></i>MIS CURSOS ADQUIRIDOS
                    </h2>

                    @if (Model.CursosComprados != null && Model.CursosComprados.Any())
                    {
                        <div class="row g-4">
                            @foreach (var curso in Model.CursosComprados)
                            {
                                <div class="col-md-6">
                                    <div class="magazine-card">
                                        <div class="magazine-card-img-container">
                                            <img src="@curso.UrlImagen" class="magazine-card-img" alt="@curso.Titulo" onerror="this.onerror=null;this.src='https://placehold.co/600x400/FFF/000?text=Sin+Imagen';" />
                                            @if (curso.Precio > 0)
                                            {
                                                <div class="badge-price">@curso.Precio.ToString("C")</div>
                                            }
                                            else
                                            {
                                                <div class="badge-free">Gratis</div>
                                            }
                                        </div>
                                        <div class="magazine-card-body">
                                            <span class="card-category">CURSO</span>
                                            <h5 class="magazine-card-body h5">@curso.Titulo</h5>
                                            <div class="magazine-card-body .card-text">@Html.Raw(curso.DescripcionCorta)</div>
                                            <a asp-controller="Curso" asp-action="VerCurso" asp-route-id="@curso.Id" class="btn btn-primary w-100 mt-3">
                                                <i class="fas fa-eye me-2"></i>Continuar Aprendiendo
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center py-4">
                            <i class="fas fa-book-open fa-3x mb-3 opacity-25"></i>
                            <h5 class="mb-2">Aún no has comprado ningún curso</h5>
                            <p class="mb-3">¡Descubre nuestro catálogo y comienza tu viaje de aprendizaje!</p>
                            <a asp-controller="Curso" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-search me-2"></i>Explorar Cursos
                            </a>
                        </div>
                    }
                </div>

                <!-- SECCIÓN DE PRODUCTOS -->
                <div id="productsSection" class="content-section d-none">
                    <h2 class="curso-titulo-seccion">
                        <i class="fas fa-file-pdf me-2"></i>MIS PRODUCTOS DIGITALES
                    </h2>

                    @if (Model.ProductosComprados != null && Model.ProductosComprados.Any())
                    {
                        <div class="row g-4">
                            @foreach (var producto in Model.ProductosComprados)
                            {
                                <div class="col-md-6">
                                    <div class="product-card">
                                        <div class="product-card-header">
                                            <img src="@producto.UrlImagen" class="product-image" alt="@producto.Titulo" onerror="this.onerror=null;this.src='https://placehold.co/600x400/FFF/000?text=Sin+Imagen';" />
                                            <div class="product-badge price">@producto.Precio.ToString("C")</div>
                                            <div class="product-badge category">DIGITAL</div>
                                        </div>
                                        <div class="product-card-body">
                                            <h5 class="product-title">@producto.Titulo</h5>
                                            <div class="product-description">@Html.Raw(producto.DescripcionCorta)</div>
                                            <div class="product-actions">
                                                <a asp-controller="Producto" asp-action="Descargar" asp-route-id="@producto.Id" class="btn btn-success w-100">
                                                    <i class="fas fa-download me-2"></i>Descargar Producto
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center py-4">
                            <i class="fas fa-file-pdf fa-3x mb-3 opacity-25"></i>
                            <h5 class="mb-2">Aún no has adquirido productos digitales</h5>
                            <p class="mb-3">Explora nuestra tienda y descubre recursos exclusivos.</p>
                            <a asp-controller="Producto" asp-action="Index" class="btn btn-primary">
                                <i class="fas fa-store me-2"></i>Visitar Tienda
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Referencias a elementos
            const sectionButtons = document.querySelectorAll('[data-section]');
            const sections = document.querySelectorAll('.content-section');
            const imageUploadInput = document.getElementById('imageUpload');

            // Función para cambiar de sección
            function showSection(sectionId) {
                // Actualizar botones activos
                sectionButtons.forEach(btn => {
                    btn.classList.remove('active');
                    if (btn.dataset.section === sectionId) {
                        btn.classList.add('active');
                    }
                });

                // Mostrar sección correspondiente
                sections.forEach(section => {
                    section.classList.add('d-none');
                    if (section.id === sectionId + 'Section') {
                        section.classList.remove('d-none');
                    }
                });
            }

            // Event listeners para los botones de navegación
            sectionButtons.forEach(btn => {
                btn.addEventListener('click', function (e) {
                    if (this.tagName === 'BUTTON') {
                        e.preventDefault();
                        const sectionId = this.dataset.section;
                        showSection(sectionId);

                        // Actualizar URL sin recargar la página
                        const url = new URL(window.location);
                        url.searchParams.set('section', sectionId);
                        window.history.pushState({}, '', url);
                    }
                });
            });

            // Subida de imagen
            imageUploadInput?.addEventListener('change', function () {
                if (this.files && this.files[0]) {
                    // Mostrar loader
                    const form = document.getElementById('imageUploadForm');
                    const originalButton = form.querySelector('button[type="submit"]');
                    const originalHtml = originalButton?.innerHTML;

                    if (originalButton) {
                        originalButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Subiendo...';
                        originalButton.disabled = true;
                    }

                    // Enviar formulario
                    form.submit();
                }
            });

            // Manejar parámetros de URL al cargar la página
            const urlParams = new URLSearchParams(window.location.search);
            const sectionParam = urlParams.get('section');

            if (sectionParam && ['profile', 'security', 'courses', 'products'].includes(sectionParam)) {
                showSection(sectionParam);
            } else {
                // Por defecto, mostrar perfil
                showSection('profile');
            }

            // Validación de formularios
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', function (e) {
                    if (!form.checkValidity()) {
                        e.preventDefault();
                        e.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });

            // Previsualización de imagen antes de subir
            const imagePreview = (input, previewId) => {
                if (input.files && input.files[0]) {
                    const reader = new FileReader();
                    reader.onload = function (e) {
                        const preview = document.getElementById(previewId);
                        if (preview) {
                            preview.src = e.target.result;
                        }
                    };
                    reader.readAsDataURL(input.files[0]);
                }
            };

            // Efecto hover en tarjetas
            const cards = document.querySelectorAll('.magazine-card, .product-card');
            cards.forEach(card => {
                card.addEventListener('mouseenter', function () {
                    this.style.transition = 'all 0.3s ease';
                });
            });
        });
    </script>
}