@model YSA.Web.Models.ViewModels.RegistroViewModel
@{
    ViewData["Title"] = "Registro de Estudiantes";
}

<style>
    /* Estilos globales para mantener la coherencia */
    body {
        background-color: #000000;
        color: #fff;
    }

    /* Estilos para la tarjeta del formulario */
    .card {
        border-radius: 12px;
        background-color: #ffffff;
        color: #000;
        box-shadow: 0 4px 16px rgba(255, 255, 255, 0.08);
    }

    .card-title {
        color: #000;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ddd;
        padding: 10px;
        transition: border-color 0.2s;
    }

        .form-control:focus {
            border-color: #c49900;
            box-shadow: 0 0 0 0.25rem rgba(196, 153, 0, 0.25);
        }

    /* Estilos para el botón de registro */
    .btn-register {
        background-color: #c49900;
        border-color: #c49900;
        color: white;
        font-weight: 600;
        border-radius: 8px;
        transition: background-color 0.2s, transform 0.2s;
    }

        .btn-register:hover {
            background-color: #a38200;
            border-color: #a38200;
            color: white;
            transform: translateY(-2px);
        }
</style>

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="col-md-4">
        <div class="card my-5">
            <div class="card-body p-4">
                <h2 class="card-title text-center mb-4">Registro de Estudiantes</h2>
                <form asp-action="Registro" asp-controller="Cuenta" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label">Nombre</label>
                        <input type="text" asp-for="Nombre" class="form-control" placeholder="Introduce tu nombre" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Apellido" class="form-label">Apellido</label>
                        <input type="text" asp-for="Apellido" class="form-control" placeholder="Introduce tu apellido" />
                        <span asp-validation-for="Apellido" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Correo Electrónico</label>
                        <input type="email" asp-for="Email" class="form-control" placeholder="ejemplo@correo.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Contrasena" class="form-label">Contraseña</label>
                        <input type="password" asp-for="Contrasena" class="form-control" placeholder="Crea una contraseña segura" />
                        <span asp-validation-for="Contrasena" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmarContrasena" class="form-label">Confirmar Contraseña</label>
                        <input type="password" asp-for="ConfirmarContrasena" class="form-control" placeholder="Repite la contraseña" />
                        <span asp-validation-for="ConfirmarContrasena" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-register">Crear Cuenta</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
