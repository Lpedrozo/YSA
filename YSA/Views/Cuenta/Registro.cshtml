@model YSA.Web.Models.ViewModels.RegistroViewModel
@using Microsoft.AspNetCore.Identity
@using YSA.Core.Entities
@inject SignInManager<Usuario> SignInManager

@{
    ViewData["Title"] = "Crear una cuenta";
    ViewData["ReturnUrl"] = ViewData["ReturnUrl"] ?? Url.Content("~/");
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Estilos específicos para esta vista -->
<style>
    /* =========================================== */
    /* ESTILOS PARA REGISTRO CON IMAGEN DE FONDO */
    /* =========================================== */

    .register-fullscreen {
        position: relative;
        width: 100vw;
        height: calc(100vh - 5.5rem);
        overflow: hidden;
        background-color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Contenedor principal que abarca todo el espacio */
    .register-main-container {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: stretch;
        background-color: #fff;
    }

    /* Columna izquierda - Imagen de fondo (65%) */
    .register-image-column {
        flex: 0 0 65%;
        position: relative;
        overflow: hidden;
        background-color: white;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* Imagen de fondo */
    .register-background-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform 0.5s ease;
    }

    .register-image-column:hover .register-background-image {
        transform: scale(1.02);
    }

    /* Overlay sutil para dar profundidad */
    .register-image-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }

    /* Columna derecha - Formulario (35%) */
    .register-form-column {
        flex: 0 0 35%;
        background-color: #fff;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1.5rem;
        animation: fadeIn 0.6s ease-out;
    }

    /* Contenedor del formulario */
    .register-form-wrapper {
        width: 100%;
        max-width: 380px;
        margin: 0 auto;
    }

    /* Logo y título */
    .register-form-logo {
        text-align: center;
        margin-bottom: 1rem;
    }

    .register-logo-image {
        width: 90px;
        height: auto;
        margin: 0 auto 0.75rem;
        filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.05));
    }

    .register-form-title {
        font-family: var(--font-heading);
        font-size: 1.6rem;
        color: var(--color-brand-primary);
        margin-bottom: 0.25rem;
        line-height: 1.2;
    }

    .register-form-subtitle {
        font-family: var(--font-body);
        color: var(--color-accent);
        font-size: 0.8rem;
        margin: 0;
    }

    /* Grupos de formulario */
    .register-form-group {
        margin-bottom: 0.8rem;
    }

    .register-form-label {
        display: block;
        font-family: var(--font-accent);
        font-weight: 500;
        font-size: 0.75rem;
        color: var(--color-text-dark);
        margin-bottom: 0.2rem;
    }

        .register-form-label i {
            font-size: 0.7rem;
        }

    .register-input-wrapper {
        position: relative;
    }

    .register-form-input {
        width: 100%;
        padding: 0.5rem 0.75rem;
        font-family: var(--font-body);
        font-size: 0.8rem;
        color: var(--color-text-dark);
        background-color: #fff;
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius-sm);
        transition: all 0.2s ease;
        outline: none;
    }

        .register-form-input:focus {
            border-color: var(--color-brand-primary);
            box-shadow: 0 0 0 2px rgba(239, 136, 48, 0.1);
        }

        .register-form-input.input-validation-error {
            border-color: var(--color-brand-secondary);
        }

    /* Fila de dos columnas para nombre y apellido */
    .register-form-row {
        display: flex;
        gap: 0.75rem;
        margin-bottom: 0;
    }

        .register-form-row .register-form-group {
            flex: 1;
            margin-bottom: 0.8rem;
        }

    /* Toggle de contraseña */
    .register-password-toggle {
        position: absolute;
        right: 0.6rem;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: var(--color-accent);
        cursor: pointer;
        font-size: 0.8rem;
        transition: color 0.2s ease;
        padding: 0.15rem;
        z-index: 5;
    }

        .register-password-toggle:hover {
            color: var(--color-brand-primary);
        }

    /* Checkbox de términos */
    .register-terms-check {
        margin: 0.8rem 0;
        padding: 0.6rem;
        background: #fff;
        border-radius: var(--border-radius-sm);
        border: 1px solid var(--color-border);
    }

    .register-checkbox {
        display: flex;
        align-items: flex-start;
        gap: 0.4rem;
    }

    .register-checkbox-input {
        width: 0.85rem;
        height: 0.85rem;
        border: 1px solid var(--color-border);
        border-radius: 3px;
        cursor: pointer;
        accent-color: var(--color-brand-primary);
        margin-top: 0.15rem;
    }

        .register-checkbox-input.has-error {
            border-color: var(--color-brand-secondary);
        }

    .register-checkbox-label {
        font-family: var(--font-body);
        color: var(--color-text-dark);
        cursor: pointer;
        font-size: 0.7rem;
        line-height: 1.3;
    }

    .register-terms-link {
        color: var(--color-brand-primary);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s ease;
        font-size: 0.7rem;
    }

        .register-terms-link:hover {
            color: var(--color-brand-secondary);
            text-decoration: underline;
        }

    /* Mensaje de error para términos */
    .register-terms-error {
        margin-top: 0.5rem;
        padding: 0.5rem;
        background: rgba(229, 54, 26, 0.05);
        border: 1px solid rgba(229, 54, 26, 0.2);
        border-radius: var(--border-radius-sm);
        font-family: var(--font-accent);
        font-size: 0.7rem;
        color: var(--color-brand-secondary);
        display: flex;
        align-items: center;
        gap: 0.4rem;
        animation: slideIn 0.3s ease-out;
    }

        .register-terms-error i {
            font-size: 0.7rem;
        }

    /* Botón principal */
    .register-submit-btn {
        width: 100%;
        padding: 0.6rem 1rem;
        background: linear-gradient(135deg, var(--color-brand-primary) 0%, #e07a2a 100%);
        border: none;
        border-radius: var(--border-radius-sm);
        color: white;
        font-family: var(--font-accent);
        font-size: 0.8rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        position: relative;
        overflow: hidden;
        letter-spacing: 0.3px;
    }

        .register-submit-btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(239, 136, 48, 0.2);
            background: linear-gradient(135deg, #e07a2a 0%, var(--color-brand-secondary) 100%);
        }

        .register-submit-btn:active {
            transform: translateY(0);
        }

        .register-submit-btn i {
            transition: transform 0.2s ease;
            font-size: 0.8rem;
        }

        .register-submit-btn:hover i {
            transform: translateX(3px);
        }

    /* Separador */
    .register-separator {
        display: flex;
        align-items: center;
        margin: 1rem 0;
        color: var(--color-accent);
        font-family: var(--font-accent);
        font-size: 0.7rem;
    }

        .register-separator::before,
        .register-separator::after {
            flex: 1;
            height: 1px;
        }

        .register-separator::before {
            margin-right: 0.75rem;
        }

        .register-separator::after {
            margin-left: 0.75rem;
        }

    /* Botones externos */
    .register-external-buttons {
        margin-bottom: 1rem;
    }

    .register-external-btn {
        width: 100%;
        padding: 0.5rem;
        background: white;
        border: 1px solid var(--color-border);
        border-radius: var(--border-radius-sm);
        font-family: var(--font-accent);
        font-size: 0.75rem;
        font-weight: 500;
        color: var(--color-text-dark);
        cursor: pointer;
        transition: all 0.2s ease;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        margin-bottom: 0.5rem;
    }

        .register-external-btn:hover {
            border-color: var(--color-brand-primary);
            background: rgba(239, 136, 48, 0.05);
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        }

        .register-external-btn:last-child {
            margin-bottom: 0;
        }

        .register-external-btn i {
            font-size: 0.8rem;
        }

    .google-btn {
        border-color: #DB4437;
        color: #DB4437;
    }

        .google-btn:hover {
            background: rgba(219, 68, 55, 0.05);
            border-color: #DB4437;
        }

    .facebook-btn {
        border-color: #4267B2;
        color: #4267B2;
    }

        .facebook-btn:hover {
            background: rgba(66, 103, 178, 0.05);
            border-color: #4267B2;
        }

    /* Pie de página */
    .register-footer {
        text-align: center;
        padding-top: 0.8rem;
        border-top: 1px solid rgba(239, 136, 48, 0.1);
    }

    .register-footer-text {
        font-family: var(--font-body);
        color: var(--color-accent);
        font-size: 0.7rem;
        margin: 0;
    }

    .register-login-link {
        color: var(--color-brand-primary);
        text-decoration: none;
        font-weight: 600;
        transition: color 0.2s ease;
        font-size: 0.7rem;
    }

        .register-login-link:hover {
            color: var(--color-brand-secondary);
            text-decoration: underline;
        }

    /* Mensajes de validación */
    .register-validation-summary {
        background: rgba(229, 54, 26, 0.05);
        border: 1px solid rgba(229, 54, 26, 0.2);
        border-radius: var(--border-radius-sm);
        padding: 0.6rem;
        margin-bottom: 0.8rem;
        font-family: var(--font-body);
        font-size: 0.7rem;
        color: var(--color-alert);
    }

        .register-validation-summary ul {
            margin: 0;
            padding-left: 1.2rem;
        }

    .field-validation-error {
        display: block;
        margin-top: 0.2rem;
        font-family: var(--font-accent);
        font-size: 0.65rem;
        color: var(--color-alert);
    }

    /* Animaciones */
    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes slideIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* =========================================== */
    /* RESPONSIVE */
    /* =========================================== */

    /* Tablets y pantallas medianas */
    @@media (max-width: 992px) {
        .register-image-column {
            flex: 0 0 50%;
        }

        .register-form-column {
            flex: 0 0 50%;
        }

        .register-form-wrapper {
            max-width: 320px;
        }
    }

    /* Móviles y tablets pequeñas */
    @@media (max-width: 768px) {
        .register-fullscreen {
            height: auto;
            min-height: calc(100vh - 5.5rem);
        }

        .register-main-container {
            flex-direction: column;
        }

        .register-image-column {
            flex: 0 0 250px;
            width: 100%;
            min-height: 250px;
        }

        .register-form-column {
            flex: 1;
            width: 100%;
            padding: 1.5rem 1rem;
        }

        .register-form-wrapper {
            max-width: 350px;
        }

        .register-form-row {
            flex-direction: column;
            gap: 0;
        }

            .register-form-row .register-form-group {
                margin-bottom: 0.8rem;
            }
    }

    /* Móviles pequeños */
    @@media (max-width: 576px) {
        .register-image-column {
            flex: 0 0 200px;
            min-height: 200px;
        }

        .register-form-column {
            padding: 1rem;
        }

        .register-form-title {
            font-size: 1.5rem;
        }

        .register-logo-image {
            width: 80px;
        }

        .register-terms-check {
            padding: 0.4rem;
        }

        .register-checkbox-label {
            font-size: 0.65rem;
        }
    }

    /* Landscape en móviles */
    @@media (max-height: 600px) and (orientation: landscape) {
        .register-fullscreen {
            height: auto;
            min-height: 100vh;
        }

        .register-image-column {
            flex: 0 0 150px;
            min-height: 150px;
        }

        .register-form-column {
            padding: 1rem;
        }

        .register-form-group {
            margin-bottom: 0.5rem;
        }

        .register-form-logo {
            margin-bottom: 0.5rem;
        }

        .register-form-title {
            font-size: 1.3rem;
        }
    }

    /* Ajuste para quitar cualquier división visual */
    .register-main-container {
        box-shadow: none;
        border: none;
    }

    .register-image-column,
    .register-form-column {
        box-shadow: none;
        border: none;
    }

        /* Efecto sutil de separación solo con la imagen */
        .register-image-column::after {
            position: absolute;
            right: 0;
            top: 10%;
            height: 80%;
            width: 1px;
            background: linear-gradient(to bottom, transparent, rgba(239, 136, 48, 0.2), transparent);
            z-index: 2;
        }

    @@media (max-width: 768px) {
        .register-image-column::after {
            display: none;
        }
    }
</style>

<div class="register-fullscreen">
    <div class="register-main-container">
        <!-- Columna izquierda - Imagen de fondo -->
        <div class="register-image-column">
            <img src="~/diseño/Registro.png" alt="Yo Soy Arte" class="register-background-image">
            <div class="register-image-overlay"></div>
        </div>

        <!-- Columna derecha - Formulario de registro -->
        <div class="register-form-column">
            <div class="register-form-wrapper">
                <!-- Logo y título -->
                <div class="register-form-logo">
                    <h2 class="register-form-title">¡Crea tu cuenta!</h2>
                    <p class="register-form-subtitle">Completa tus datos para registrarte</p>
                </div>

                <!-- Resumen de validación -->
                <div asp-validation-summary="ModelOnly" class="register-validation-summary"></div>

                <!-- Formulario de registro -->
                <form asp-controller="Cuenta" asp-action="Registro" method="post">
                    <input type="hidden" asp-for="ReturnUrl" value="@ViewData["ReturnUrl"]" />

                    <!-- Fila para Nombre y Apellido -->
                    <div class="register-form-row">
                        <!-- Campo de Nombre -->
                        <div class="register-form-group">
                            <label class="register-form-label" asp-for="Nombre">
                                <i class="fas fa-user me-1"></i> Nombre
                            </label>
                            <div class="register-input-wrapper">
                                <input asp-for="Nombre" type="text" class="register-form-input"
                                       placeholder="Tu nombre" id="nombre">
                            </div>
                            <span asp-validation-for="Nombre" class="field-validation-error"></span>
                        </div>

                        <!-- Campo de Apellido -->
                        <div class="register-form-group">
                            <label class="register-form-label" asp-for="Apellido">
                                <i class="fas fa-user me-1"></i> Apellido
                            </label>
                            <div class="register-input-wrapper">
                                <input asp-for="Apellido" type="text" class="register-form-input"
                                       placeholder="Tu apellido" id="apellido">
                            </div>
                            <span asp-validation-for="Apellido" class="field-validation-error"></span>
                        </div>
                    </div>

                    <!-- Campo de Correo Electrónico -->
                    <div class="register-form-group">
                        <label class="register-form-label" asp-for="Email">
                            <i class="fas fa-envelope me-1"></i> Correo Electrónico
                        </label>
                        <div class="register-input-wrapper">
                            <input asp-for="Email" type="email" class="register-form-input"
                                   placeholder="ejemplo@correo.com" id="email">
                        </div>
                        <span asp-validation-for="Email" class="field-validation-error"></span>
                    </div>

                    <!-- Campo de Contraseña -->
                    <div class="register-form-group">
                        <label class="register-form-label" asp-for="Contrasena">
                            <i class="fas fa-lock me-1"></i> Contraseña
                        </label>
                        <div class="register-input-wrapper">
                            <input asp-for="Contrasena" type="password" class="register-form-input"
                                   placeholder="Mínimo 6 caracteres" id="password">
                            <button type="button" class="register-password-toggle" id="togglePassword" aria-label="Mostrar contraseña">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Contrasena" class="field-validation-error"></span>
                    </div>

                    <!-- Campo de Confirmar Contraseña -->
                    <div class="register-form-group">
                        <label class="register-form-label" asp-for="ConfirmarContrasena">
                            <i class="fas fa-lock me-1"></i> Confirmar Contraseña
                        </label>
                        <div class="register-input-wrapper">
                            <input asp-for="ConfirmarContrasena" type="password" class="register-form-input"
                                   placeholder="Repite tu contraseña" id="confirmPassword">
                            <button type="button" class="register-password-toggle" id="toggleConfirmPassword" aria-label="Mostrar contraseña">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="ConfirmarContrasena" class="field-validation-error"></span>
                    </div>

                    <!-- Checkbox de términos -->
                    <div class="register-terms-check">
                        <div class="register-checkbox">
                            <input class="register-checkbox-input" type="checkbox" id="acceptTerms" required>
                            <label class="register-checkbox-label" for="acceptTerms">
                                Acepto los <a asp-controller="Home" asp-action="Terms" target="_blank" class="register-terms-link">Términos</a> y la <a asp-controller="Home" asp-action="Privacy" target="_blank" class="register-terms-link">Política de Privacidad</a>
                            </label>
                        </div>
                    </div>

                    <!-- Botón de Crear Cuenta -->
                    <button type="submit" class="register-submit-btn">
                        <span>Crear Cuenta</span>
                    </button>
                </form>

                <!-- Separador para opciones externas -->
                @{
                    var loginProviders = (await SignInManager.GetExternalAuthenticationSchemesAsync()).ToList();
                }

                @if (loginProviders.Count > 0)
                {
                    <div class="register-separator">
                    </div>

                    <!-- Botones de registro externo -->
                    <div class="register-external-buttons">
                        <form asp-controller="Cuenta" asp-action="ExternalLogin"
                              asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                            @foreach (var p in loginProviders)
                            {
                                if (p.Name.ToLower().Contains("google"))
                                {
                                    <button type="submit" class="register-external-btn google-btn"
                                            name="provider" value="@p.Name"
                                            title="Registrarse con tu cuenta de @p.DisplayName">
                                        <i class="fab fa-google"></i>
                                        <span>@p.DisplayName</span>
                                    </button>
                                }
                                else if (p.Name.ToLower().Contains("facebook"))
                                {
                                    <button type="submit" class="register-external-btn facebook-btn"
                                            name="provider" value="@p.Name"
                                            title="Registrarse con tu cuenta de @p.DisplayName">
                                        <i class="fab fa-facebook-f"></i>
                                        <span>@p.DisplayName</span>
                                    </button>
                                }
                                else
                                {
                                    <button type="submit" class="register-external-btn"
                                            name="provider" value="@p.Name"
                                            title="Registrarse con tu cuenta de @p.DisplayName">
                                        <i class="fas fa-external-link-alt"></i>
                                        <span>@p.DisplayName</span>
                                    </button>
                                }
                            }
                        </form>
                    </div>
                }

                <!-- Pie de página con enlace a login -->
                <div class="register-footer">
                    <p class="register-footer-text">
                        ¿Ya tienes una cuenta?
                        <a asp-controller="Cuenta" asp-action="Login" class="register-login-link">
                            Inicia sesión
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Toggle para mostrar/ocultar contraseña
            const togglePassword = document.getElementById('togglePassword');
            const passwordInput = document.getElementById('password');

            if (togglePassword && passwordInput) {
                togglePassword.addEventListener('click', function() {
                    const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    passwordInput.setAttribute('type', type);

                    const icon = this.querySelector('i');
                    icon.classList.toggle('fa-eye');
                    icon.classList.toggle('fa-eye-slash');
                });
            }

            // Toggle para confirmar contraseña
            const toggleConfirmPassword = document.getElementById('toggleConfirmPassword');
            const confirmPasswordInput = document.getElementById('confirmPassword');

            if (toggleConfirmPassword && confirmPasswordInput) {
                toggleConfirmPassword.addEventListener('click', function() {
                    const type = confirmPasswordInput.getAttribute('type') === 'password' ? 'text' : 'password';
                    confirmPasswordInput.setAttribute('type', type);

                    const icon = this.querySelector('i');
                    icon.classList.toggle('fa-eye');
                    icon.classList.toggle('fa-eye-slash');
                });
            }

            // Animación para inputs cuando tienen valor
            const inputs = document.querySelectorAll('.register-form-input');
            inputs.forEach(input => {
                input.addEventListener('input', function() {
                    if (this.value.trim() !== '') {
                        this.style.borderColor = 'var(--color-brand-primary)';
                    } else {
                        this.style.borderColor = 'var(--color-border)';
                    }
                });
            });

            // Validación del checkbox de términos
            const form = document.querySelector('form[asp-controller="Cuenta"][asp-action="Registro"]');
            const termsCheckbox = document.getElementById('acceptTerms');

            if (form && termsCheckbox) {
                form.addEventListener('submit', function(e) {
                    if (!termsCheckbox.checked) {
                        e.preventDefault();

                        // Mostrar mensaje de error
                        const errorMessage = document.createElement('div');
                        errorMessage.className = 'register-terms-error';
                        errorMessage.innerHTML = '<i class="fas fa-exclamation-circle me-1"></i>Debes aceptar los Términos y Política de Privacidad';

                        // Remover mensajes de error previos
                        const existingError = document.querySelector('.register-terms-error');
                        if (existingError) {
                            existingError.remove();
                        }

                        // Añadir mensaje de error
                        termsCheckbox.closest('.register-terms-check').appendChild(errorMessage);

                        // Resaltar el checkbox
                        termsCheckbox.classList.add('has-error');

                        // Scroll al error
                        errorMessage.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }
                });

                // Remover mensaje de error cuando se marque el checkbox
                termsCheckbox.addEventListener('change', function() {
                    const errorMessage = document.querySelector('.register-terms-error');
                    if (errorMessage && this.checked) {
                        errorMessage.remove();
                        this.classList.remove('has-error');
                    }
                });
            }

            // Manejo de errores de validación del lado del cliente
            document.querySelectorAll('[data-valmsg-for]').forEach(span => {
                const inputId = span.getAttribute('data-valmsg-for');
                const input = document.getElementById(inputId);

                if (!input) return;

                const observer = new MutationObserver(mutations => {
                    mutations.forEach(mutation => {
                        if (mutation.type === 'childList' || mutation.type === 'characterData') {
                            if (span.innerHTML.trim() !== "" && span.innerHTML.trim() !== "[]") {
                                input.classList.add('input-validation-error');
                            } else {
                                input.classList.remove('input-validation-error');
                            }
                        }
                    });
                });

                observer.observe(span, { childList: true, characterData: true, subtree: true });
            });
        });
    </script>

