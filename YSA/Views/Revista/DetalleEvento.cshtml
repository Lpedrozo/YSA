@model YSA.Web.Models.ViewModels.EventoDetalleViewModel

@{
    ViewData["Title"] = Model.Titulo;
}

<style>
    .event-header {
        position: relative;
        background-color: #f8f9fa;
        padding-bottom: 2rem;
        margin-bottom: 3rem;
    }

    .event-image {
        width: 100%;
        max-height: 400px;
        object-fit: cover;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .info-box {
        background-color: #fff;
        border: 1px solid #eee;
        border-radius: 8px;
        padding: 1.5rem;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.05);
        margin-bottom: 1rem;
    }

        .info-box h5 {
            font-size: 1.1rem;
            font-weight: 600;
            margin-bottom: 0.75rem;
            color: #333;
        }

        .info-box p {
            margin: 0;
            font-size: 1rem;
            font-weight: 400;
            color: #555;
        }

    /* Estilo para el contenido del editor (TinyMCE) */
    .event-description-content {
        line-height: 1.8;
        font-size: 1.1rem;
        color: #333;
    }

        /* Asegurar estilos para el contenido HTML renderizado */
        .event-description-content h1,
        .event-description-content h2,
        .event-description-content h3 {
            margin-top: 1.5rem;
            margin-bottom: 0.5rem;
            font-weight: bold;
        }

        .event-description-content ul,
        .event-description-content ol {
            padding-left: 20px;
            margin-bottom: 1rem;
        }
</style>

<div class="container py-5">
    <div class="row event-header">
        <div class="col-12 text-center">
            <h1 class="fw-bold mb-3 display-4">@Model.Titulo</h1>
            @if (Model.EsDestacado)
            {
                <span class="badge bg-warning text-dark me-2"><i class="fas fa-star me-1"></i> Evento Destacado</span>
            }
            <span class="badge bg-dark"><i class="fas fa-tag me-1"></i> @Model.TipoEventoNombre</span>
            <hr class="mt-4 mb-4 w-50 mx-auto" />
        </div>

        @if (!string.IsNullOrEmpty(Model.UrlImagen))
        {
            <div class="col-lg-8 offset-lg-2 mb-4">
                <img src="@Model.UrlImagen" alt="@Model.Titulo" class="event-image" />
            </div>
        }
    </div>

    <div class="row justify-content-center">

        @* Columna de Información Rápida *@
        <div class="col-lg-4 mb-4">
            <h3 class="fw-bold mb-4">Detalles Rápidos</h3>

            <div class="info-box">
                <h5><i class="fas fa-calendar-alt me-2"></i> Fecha y Hora</h5>
                <p>@Model.FechaEvento.ToString("dddd, dd MMMM yyyy")</p>
                <p>@Model.FechaEvento.ToString("hh:mm tt")</p>
            </div>

            <div class="info-box">
                <h5><i class="fas fa-map-marker-alt me-2"></i> Lugar / Enlace</h5>
                <p>@Model.Lugar</p>
            </div>

            <div class="info-box">
                <h5><i class="fas fa-satellite-dish me-2"></i> Plataforma</h5>
                <p>@Model.TipoEventoPlataforma</p>
            </div>
        </div>

        @* Columna de Descripción (El contenido HTML renderizado) *@
        <div class="col-lg-8 mb-4">
            <h3 class="fw-bold mb-4">Sobre el Evento</h3>

            <div class="event-description-content">
                @* CLAVE: Usar Html.Raw para renderizar el HTML (negritas, listas) de forma segura *@
                @Html.Raw(Model.Descripcion)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Si necesitas alguna lógica JS específica para la página de detalle
    </script>
}