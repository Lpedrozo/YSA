@model YSA.Web.Models.ViewModels.EventoDetalleViewModel

@{
    ViewData["Title"] = Model.Titulo;
}

<div class="container px-0 py-5 mb-5 pb-5">
    <div class="section-container">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="articulo-breadcrumb breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Inicio</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Titulo</li>
            </ol>
        </nav>

        <!-- Encabezado del Evento -->
        <div class="evento-header">
            <h1 class="evento-titulo">@Model.Titulo</h1>
            <div class="evento-badges">
                @if (Model.EsDestacado)
                {
                    <span class="badge-evento-destacado badge me-2">
                        <i class="fas fa-star me-1"></i> Evento destacado
                    </span>
                }
                <span class="badge-evento-tipo badge">
                    <i class="fas fa-tag me-1"></i> @Model.TipoEventoNombre
                </span>
            </div>

            <hr class="section-divider" />

            <!-- Imagen del Evento -->
            @if (!string.IsNullOrEmpty(Model.UrlImagen))
            {
                <div class="text-center mb-4">
                    <img src="@Model.UrlImagen" alt="@Model.Titulo" class="evento-imagen">
                </div>
            }
        </div>

        <div class="row justify-content-center">
            <!-- Columna de Información Rápida -->
            <div class="col-lg-4 mb-4">
                <h3 class="latest-grid-header">Detalles del evento</h3>

                <div class="evento-info-box">
                    <h5><i class="fas fa-calendar-alt" style="color: var(--color-brand-primary);"></i> Fecha y hora</h5>
                    <p><strong>@Model.FechaEvento.ToString("dddd, dd MMMM yyyy")</strong></p>
                    <p>@Model.FechaEvento.ToString("hh:mm tt")</p>
                </div>

                <div class="evento-info-box">
                    <h5><i class="fas fa-map-marker-alt" style="color: var(--color-brand-primary);"></i> Lugar / Enlace</h5>
                    <p>@Model.Lugar</p>
                </div>

                <div class="evento-info-box">
                    <h5><i class="fas fa-satellite-dish" style="color: var(--color-brand-primary);"></i> Plataforma</h5>
                    <p>@Model.TipoEventoPlataforma</p>
                </div>
            </div>

            <!-- Columna de Descripción -->
            <div class="col-lg-8 mb-4">
                <h3 class="latest-grid-header">Sobre el evento</h3>

                <div class="evento-descripcion">
                    @Html.Raw(Model.Descripcion)
                </div>
            </div>
        </div>
    </div>
</div>