@model YSA.Web.Models.ViewModels.ArticuloDetalleViewModel
@{
    ViewData["Title"] = Model.Titulo;
}

<div class="container px-0 py-5 mb-5 pb-5">
    <div class="section-container">
        <!-- Breadcrumb -->
        <nav aria-label="breadcrumb">
            <ol class="articulo-breadcrumb breadcrumb">
                <li class="breadcrumb-item"><a href="@Url.Action("Index", "Revista")">Revista</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Titulo</li>
            </ol>
        </nav>

        <!-- Encabezado del Artículo -->
        <div class="articulo-header">
            <span class="badge bg-primary me-2">@Model.Categoria</span>
            <h1 class="articulo-title">@Model.Titulo</h1>
            <p class="articulo-subtitle">@Model.Resumen</p>
            <div class="articulo-meta">
                <i class="far fa-calendar me-1"></i>
                Publicado el @Model.FechaPublicacion.ToString("dd MMMM yyyy")
            </div>
        </div>

        <!-- Imagen Principal -->
        @if (!string.IsNullOrEmpty(Model.UrlImagenPrincipal))
        {
            <div class="text-center mb-5">
                <img src="@Url.Content(Model.UrlImagenPrincipal)" class="articulo-imagen" alt="@Model.Titulo">
            </div>
        }

        <!-- Contenido Principal -->
        <div class="articulo-contenido">
            @Html.Raw(Model.ContenidoTexto)
        </div>

        <hr class="section-divider" />

        <!-- Bloque de Persona Destacada -->
        @if (!string.IsNullOrEmpty(Model.NombrePersonaDestacada))
        {
            <div class="persona-destacada">
                <div class="row align-items-center">
                    <div class="col-md-auto text-center mb-3 mb-md-0">
                        <img src="@(string.IsNullOrEmpty(Model.UrlFotoDestacado) ? "https://via.placeholder.com/120x120.png?text=Foto" : Url.Content(Model.UrlFotoDestacado))"
                             alt="@Model.NombrePersonaDestacada" class="persona-imagen">
                    </div>
                    <div class="col-md">
                        <h3 class="persona-nombre">Acerca de @Model.NombrePersonaDestacada</h3>
                        <div class="persona-bio">
                            @Html.Raw(Model.BiografiaCortaDestacado)
                        </div>
                    </div>
                </div>
            </div>
        }

        <!-- Galería de Fotos -->
        @if (Model.FotosContenido.Any())
        {
            <div class="galeria-articulo">
                <h3 class="galeria-titulo text-center">Galería de Imágenes</h3>
                <div class="row g-4">
                    @foreach (var foto in Model.FotosContenido)
                    {
                        <div class="col-lg-4 col-md-6 col-12">
                            <a href="@Url.Content(foto.UrlFoto)" target="_blank" class="d-block text-decoration-none">
                                <img src="@Url.Content(foto.UrlFoto)" class="galeria-imagen" alt="@foto.Descripcion">
                                <p class="leyenda-imagen">@foto.Descripcion</p>
                            </a>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>