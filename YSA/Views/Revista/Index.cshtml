@model YSA.Web.Models.ViewModels.RevistaIndexViewModel
@{
    ViewData["Title"] = "Revista de Arte y Cultura";
    var detalleUrl = Url.Action("DetalleArticulo", "Revista");

    // 1. ARTÍCULO DESTACADO (Banner principal)
    var articuloDestacado = Model.ArticulosDestacados.FirstOrDefault();

    // 2. ARTÍCULOS SECUNDARIOS (para los carruseles)
    var articulosSecundarios = Model.ArticulosDestacados.Skip(1)
        .Concat(Model.ArticulosRecientes.Where(a => !Model.ArticulosDestacados.Contains(a)))
        .ToList();

    // 3. Dividir en grupos para diferentes secciones
    var articulosUltimos = articulosSecundarios.Take(6).ToList();
    var articulosDestacados = articulosSecundarios.Skip(6).ToList();
}
<style>
    /* ESTILOS ESPECÍFICOS PARA LA REVISTA - ENCABEZADO INSPIRADO EN LA IMAGEN */

    /* ENCABEZADO PRINCIPAL ESTILO CATÁLOGO */
    .revista-hero {
        background: linear-gradient(135deg, var(--color-section-bg) 0%, var(--color-background) 100%);
        padding: 5rem 0 4rem 0;
        margin-top: 1rem;
        position: relative;
        overflow: hidden;
    }

    .revista-hero-content {
        position: relative;
        z-index: 2;
    }

    .hero-badge {
        background-color: var(--color-brand-accent);
        color: var(--color-brand-dark);
        font-family: var(--font-accent);
        font-weight: 600;
        font-size: 0.9rem;
        padding: 0.5rem 1.2rem;
        border-radius: 50px;
        display: inline-block;
        margin-bottom: 1.5rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .hero-title {
        font-family: var(--font-heading);
        font-size: 3.5rem;
        font-weight: normal;
        line-height: 1.1;
        margin-bottom: 1.5rem;
        color: var(--color-secondary);
    }

    .hero-highlight {
        color: var(--color-brand-primary);
    }

    .hero-description {
        font-family: var(--font-body);
        font-size: 1.25rem;
        line-height: 1.6;
        color: var(--color-accent);
        margin-bottom: 2rem;
        max-width: 600px;
    }

        .hero-description strong {
            color: var(--color-secondary);
            font-weight: 600;
        }

    .hero-actions {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        margin-bottom: 3rem;
    }

    .btn-explorar {
        background-color: var(--color-brand-primary);
        border-color: var(--color-brand-primary);
        color: white;
        font-family: var(--font-accent);
        font-weight: 600;
        padding: 0.8rem 2rem;
        border-radius: var(--border-radius-md);
        font-size: 1.1rem;
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-explorar:hover {
            background-color: var(--color-brand-secondary);
            border-color: var(--color-brand-secondary);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(239, 136, 48, 0.3);
            color: white;
        }

    .btn-secundario {
        background-color: transparent;
        border: 2px solid var(--color-brand-primary);
        color: var(--color-brand-primary);
        font-family: var(--font-accent);
        font-weight: 600;
        padding: 0.8rem 2rem;
        border-radius: var(--border-radius-md);
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

        .btn-secundario:hover {
            background-color: var(--color-brand-primary);
            color: white;
            transform: translateY(-2px);
        }

    .hero-stats {
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
    }

    .stat-item {
        text-align: center;
        padding: 0.5rem 1rem;
    }

    .stat-number {
        font-family: var(--font-heading);
        font-size: 2.5rem;
        font-weight: bold;
        color: var(--color-brand-primary);
        display: block;
        line-height: 1;
    }

    .stat-label {
        font-family: var(--font-accent);
        font-size: 0.9rem;
        color: var(--color-accent);
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-top: 0.25rem;
    }

    /* IMAGEN DEL HERO */
    .hero-image-container {
        position: relative;
        border-radius: var(--border-radius-lg);
        overflow: hidden;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        height: 400px;
    }

    .hero-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .hero-image-container:hover .hero-image {
        transform: scale(1.05);
    }

    .image-badge {
        position: absolute;
        bottom: 1.5rem;
        left: 1.5rem;
        background-color: rgba(255, 255, 255, 0.95);
        padding: 1rem 1.5rem;
        border-radius: var(--border-radius-md);
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        max-width: 280px;
    }

    .image-badge-title {
        font-family: var(--font-heading);
        font-size: 1.2rem;
        color: var(--color-secondary);
        margin-bottom: 0.25rem;
    }

    .image-badge-author {
        font-family: var(--font-body);
        font-size: 0.9rem;
        color: var(--color-accent);
        font-style: italic;
    }

    /* CTA INSPIRADO EN LA IMAGEN */
    .revista-cta {
        text-align: center;
        padding: 2rem;
        margin: 2rem 0;
        background: linear-gradient(135deg, rgba(239, 136, 48, 0.1) 0%, rgba(229, 54, 26, 0.05) 100%);
        border-radius: var(--border-radius-lg);
        border-left: 5px solid var(--color-brand-primary);
    }

    .cta-title {
        font-family: var(--font-heading);
        font-size: 2rem;
        color: var(--color-secondary);
        margin-bottom: 1rem;
    }

    .cta-subtitle {
        font-family: var(--font-body);
        font-size: 1.1rem;
        color: var(--color-accent);
        margin-bottom: 1.5rem;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .cta-actions {
        display: flex;
        justify-content: center;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .no-tarjeta {
        font-family: var(--font-accent);
        font-size: 0.85rem;
        color: var(--color-accent);
        margin-top: 1.5rem;
        display: block;
        font-style: italic;
    }

    /* CARRUSELES DE ARTÍCULOS */
    .carousel-articulo {
        height: 400px;
        border-radius: var(--border-radius-lg);
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .carousel-articulo-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .carousel-articulo:hover .carousel-articulo-img {
        transform: scale(1.05);
    }

    .carousel-overlay {
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        padding: 2rem;
        background: linear-gradient(to top, rgba(0,0,0,0.8) 0%, rgba(0,0,0,0) 100%);
        color: white;
    }

    /* RESPONSIVE */
    @@media (max-width: 991.98px) {
        .revista-hero {
            padding: 3rem 0 2rem 0;
        }

        .hero-title {
            font-size: 2.5rem;
        }

        .hero-description {
            font-size: 1.1rem;
        }

        .hero-image-container {
            height: 300px;
            margin-top: 2rem;
        }

        .image-badge {
            max-width: 240px;
            padding: 0.8rem 1.2rem;
        }

        .image-badge-title {
            font-size: 1rem;
        }

        .stat-number {
            font-size: 2rem;
        }

        .carousel-articulo {
            height: 350px;
        }
    }

    @@media (max-width: 575.98px) {
        .revista-hero {
            padding: 2rem 0 1.5rem 0;
        }

        .hero-title {
            font-size: 2rem;
        }

        .hero-description {
            font-size: 1rem;
        }

        .hero-actions {
            flex-direction: column;
            width: 100%;
        }

        .btn-explorar, .btn-secundario {
            width: 100%;
            justify-content: center;
        }

        .hero-image-container {
            height: 250px;
        }

        .image-badge {
            max-width: 200px;
            padding: 0.6rem 1rem;
            bottom: 1rem;
            left: 1rem;
        }

        .image-badge-title {
            font-size: 0.9rem;
        }

        .image-badge-author {
            font-size: 0.8rem;
        }

        .hero-stats {
            justify-content: center;
        }

        .stat-item {
            flex: 0 0 calc(50% - 1rem);
        }

        .carousel-articulo {
            height: 300px;
        }
    }
</style>

@* =========================================== *@
@* ENCABEZADO PRINCIPAL ESTILO CATÁLOGO (INSPIRADO EN LA IMAGEN) *@
@* =========================================== *@
<div class="revista-hero">
    <div class="container">
        <div class="row align-items-center">
            @* Columna izquierda: Texto y CTA *@
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="revista-hero-content">
                    <span class="hero-badge">REVISTA DE ARTE Y CULTURA</span>

                    <h1 class="hero-title">
                        Descubre el arte en <span class="hero-highlight">cada página</span>
                    </h1>

                    <p class="hero-description">
                        <strong>Una completa herramienta</strong> para explorar, aprender y conectar con el mundo artístico.
                        Lee artículos exclusivos, entrevistas con artistas y análisis profundos de las tendencias contemporáneas.
                    </p>

                    <div class="hero-actions">
                        <a href="#ultimos-articulos" class="btn btn-explorar">
                            <i class="fas fa-search me-2"></i>Explorar Artículos
                        </a>
                        <a href="@Url.Action("Index", "Curso")" class="btn btn-secundario">
                            <i class="fas fa-book-open me-2"></i>Ver Cursos
                        </a>
                    </div>

                    <div class="hero-stats">
                        <div class="stat-item">
                            <span class="stat-number">+200</span>
                            <span class="stat-label">Artículos</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">+50</span>
                            <span class="stat-label">Artistas</span>
                        </div>
                        <div class="stat-item">
                            <span class="stat-number">+15</span>
                            <span class="stat-label">Categorías</span>
                        </div>
                    </div>
                </div>
            </div>

            @* Columna derecha: Imagen destacada *@
            <div class="col-lg-6">
                <div class="hero-image-container">
                    @if (articuloDestacado != null)
                    {
                        <a href="@(detalleUrl)/@articuloDestacado.Id" class="text-decoration-none">
                            <img src="@Url.Content(articuloDestacado.UrlImagenPrincipal ?? "/images/default-article.jpg")"
                                 alt="@articuloDestacado.Titulo"
                                 class="hero-image">
                            <div class="image-badge">
                                <h5 class="image-badge-title">"@articuloDestacado.Titulo"</h5>
                                <p class="image-badge-author">- Artículo destacado</p>
                            </div>
                        </a>
                    }
                    else
                    {
                        <img src="/diseño/HeaderAcademia.jpg"
                             alt="Revista Yo Soy Arte"
                             class="hero-image">
                        <div class="image-badge">
                            <h5 class="image-badge-title">"El arte es la expresión del alma creativa"</h5>
                            <p class="image-badge-author">- Equipo YoSoyArte</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@* =========================================== *@
@* LLAMADA A LA ACCIÓN (ESTILO IMAGEN DE CATÁLOGO) *@
@* =========================================== *@
<div class="container mt-4 mb-5">
    <div class="revista-cta">
        <h2 class="cta-title">Inicia tu viaje artístico hoy</h2>
        <p class="cta-subtitle">
            Una completa herramienta para explorar el arte contemporáneo. Lee, aprende y comparte con nuestra comunidad.
            Empieza hoy con acceso ilimitado a todos nuestros artículos.
        </p>
        <div class="cta-actions">
            <a href="#ultimos-articulos" class="btn btn-explorar">
                <i class="fas fa-book-reader me-2"></i>Leer Artículos
            </a>
            <a href="@Url.Action("Index", "Curso")" class="btn btn-secundario">
                <i class="fas fa-graduation-cap me-2"></i>Ver Cursos
            </a>
        </div>
        <span class="no-tarjeta">Acceso gratuito - No se requiere suscripción</span>
    </div>
</div>

<div class="container px-0 py-5 mb-5 pb-5">
    @* =========================================== *@
    @* SECCIÓN: LO ÚLTIMO EN LA REVISTA *@
    @* =========================================== *@
    @if (articulosUltimos.Any())
    {
        <div class="section-container" id="ultimos-articulos">
            <div class="row align-items-center">
                @* Columna izquierda: Texto *@
                <div class="col-lg-5 mb-5 mb-lg-0">
                    <div class="mb-4">
                        <span class="latest-grid-header mb-3 d-block">LO ÚLTIMO</span>
                        <h2 class="mb-4" style="font-family: var(--font-heading); font-size: 2.5rem; line-height: 1.2;">
                            Artículos <span class="text-brand-primary">recientes</span>
                        </h2>
                        <p class="mb-4" style="font-family: var(--font-body); font-size: 1.1rem; line-height: 1.6;">
                            Mantente actualizado con nuestras publicaciones más recientes. Análisis, entrevistas,
                            tutoriales y reflexiones sobre el mundo del arte contemporáneo.
                        </p>
                        <div class="d-flex align-items-center">
                            <i class="fas fa-newspaper text-brand-primary me-3 fa-2x"></i>
                            <div>
                                <h5 class="mb-1" style="font-family: var(--font-heading);">Contenido fresco</h5>
                                <p class="small text-muted mb-0">Publicaciones semanales con lo mejor del arte</p>
                            </div>
                        </div>
                    </div>
                </div>

                @* Columna derecha: Carrusel de artículos *@
                <div class="col-lg-7">
                    <div id="ultimosArticulosCarousel" class="carousel slide" data-bs-ride="carousel">
                        @* Indicadores *@
                        <div class="carousel-indicators">
                            @for (int i = 0; i < articulosUltimos.Count; i++)
                            {
                                <button type="button" data-bs-target="#ultimosArticulosCarousel"
                                        data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"
                                        aria-label="Slide @(i + 1)"></button>
                            }
                        </div>

                        @* Contenido del carrusel *@
                        <div class="carousel-inner rounded-lg" style="border-radius: var(--border-radius-lg);">
                            @for (int i = 0; i < articulosUltimos.Count; i++)
                            {
                                var articulo = articulosUltimos[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")" data-bs-interval="5000">
                                    <a href="@(detalleUrl)/@articulo.Id" class="text-decoration-none">
                                        <div class="carousel-articulo">
                                            <img src="@Url.Content(articulo.UrlImagenPrincipal ?? "/images/default-article.jpg")"
                                                 class="carousel-articulo-img"
                                                 alt="@articulo.Titulo">
                                            <div class="carousel-overlay">
                                                <span class="badge bg-light mb-2">@articulo.Categoria</span>
                                                <h3 class="h4 mb-2" style="font-family: var(--font-heading); color: white;">@articulo.Titulo</h3>
                                                <p class="mb-0" style="color: rgba(255,255,255,0.9);">
                                                    <i class="far fa-calendar me-2"></i>
                                                    @articulo.FechaPublicacion.ToString("dd MMMM yyyy")
                                                </p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>

                        @* Controles *@
                        <button class="carousel-control-prev" type="button" data-bs-target="#ultimosArticulosCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Anterior</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#ultimosArticulosCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Siguiente</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <hr class="section-divider" />
    }

    @* =========================================== *@
    @* SECCIÓN: ARTÍCULOS DESTACADOS *@
    @* =========================================== *@
    @if (articulosDestacados.Any())
    {
        <div class="section-container">
            <div class="row align-items-center">
                @* Columna izquierda: Carrusel de destacados *@
                <div class="col-lg-7 mb-5 mb-lg-0 order-2 order-lg-1">
                    <div id="articulosDestacadosCarousel" class="carousel slide" data-bs-ride="carousel">
                        @* Indicadores *@
                        <div class="carousel-indicators">
                            @for (int i = 0; i < articulosDestacados.Count; i++)
                            {
                                <button type="button" data-bs-target="#articulosDestacadosCarousel"
                                        data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"
                                        aria-label="Slide @(i + 1)"></button>
                            }
                        </div>

                        @* Contenido del carrusel *@
                        <div class="carousel-inner rounded-lg" style="border-radius: var(--border-radius-lg);">
                            @for (int i = 0; i < articulosDestacados.Count; i++)
                            {
                                var articulo = articulosDestacados[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")" data-bs-interval="6000">
                                    <a href="@(detalleUrl)/@articulo.Id" class="text-decoration-none">
                                        <div class="carousel-articulo">
                                            <img src="@Url.Content(articulo.UrlImagenPrincipal ?? "/images/default-article.jpg")"
                                                 class="carousel-articulo-img"
                                                 alt="@articulo.Titulo">
                                            <div class="carousel-overlay">
                                                <span class="badge bg-dark mb-2">DESTACADO</span>
                                                <span class="badge bg-light ms-2 mb-2">@articulo.Categoria</span>
                                                <h3 class="h4 mb-2" style="font-family: var(--font-heading); color: white;">@articulo.Titulo</h3>
                                                <p class="mb-0" style="color: rgba(255,255,255,0.9);">
                                                    <i class="far fa-calendar me-2"></i>
                                                    @articulo.FechaPublicacion.ToString("dd MMMM yyyy")
                                                </p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>

                        @* Controles *@
                        <button class="carousel-control-prev" type="button" data-bs-target="#articulosDestacadosCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Anterior</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#articulosDestacadosCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Siguiente</span>
                        </button>
                    </div>
                </div>

                @* Columna derecha: Texto *@
                <div class="col-lg-5 mb-5 mb-lg-0 order-1 order-lg-2 ps-lg-5">
                    <div class="mb-4">
                        <span class="latest-grid-header mb-3 d-block">ARTÍCULOS DESTACADOS</span>
                        <h2 class="mb-4" style="font-family: var(--font-heading); font-size: 2.5rem; line-height: 1.2;">
                            Lo mejor de <span class="text-brand-primary">nuestra revista</span>
                        </h2>
                        <p class="mb-4" style="font-family: var(--font-body); font-size: 1.1rem; line-height: 1.6;">
                            <em>"El arte no es lo que ves, sino lo que haces ver a otros."</em>
                        </p>
                        <div class="border-start border-3 border-brand-primary ps-4 mb-4">
                            <p class="mb-0">
                                Seleccionamos los artículos más relevantes que combinan <strong>análisis profundo</strong>,
                                entrevistas exclusivas y reflexiones sobre el panorama artístico actual.
                            </p>
                        </div>
                        @if (articulosDestacados.Any())
                        {
                            var proximoDestacado = articulosDestacados.First();
                            <div class="bg-light p-4 rounded" style="border-left: 4px solid var(--color-brand-primary);">
                                <h5 class="mb-2" style="font-family: var(--font-heading);">Artículo recomendado</h5>
                                <p class="mb-2"><strong>@proximoDestacado.Titulo</strong></p>
                                <p class="small text-muted mb-0">
                                    <i class="fas fa-tag me-1"></i>
                                    @proximoDestacado.Categoria
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <hr class="section-divider" />
    }

    @* =========================================== *@
    @* SECCIÓN: TODOS LOS ARTÍCULOS (GRILLA) *@
    @* =========================================== *@
    @if (articulosSecundarios.Any())
    {
        <div class="section-container">
            <div class="px-3">
                <span class="latest-grid-header">EXPLORA MÁS CONTENIDO</span>
                <p class="text-muted mb-4">Descubre todos nuestros artículos organizados por categorías y fechas.</p>
            </div>

            <div class="row g-4 px-3 d-flex align-items-stretch">
                @foreach (var articulo in articulosSecundarios)
                {
                    <div class="col-lg-4 col-md-6 col-12">
                        <a href="@(detalleUrl)/@articulo.Id" class="magazine-card text-dark h-100">
                            <div class="magazine-card-img-container">
                                <img src="@Url.Content(articulo.UrlImagenPrincipal ?? "/images/default-article.jpg")"
                                     class="magazine-card-img"
                                     alt="@articulo.Titulo">
                            </div>
                            <div class="magazine-card-body">
                                <span class="card-category">@articulo.Categoria</span>
                                <h5>@articulo.Titulo</h5>
                                @{
                                    var resumenCorto = articulo.Resumen?.Length > 100
                                    ? articulo.Resumen.Substring(0, 100) + "..."
                                    : articulo.Resumen;
                                }
                                <p class="card-text">@resumenCorto</p>
                                <div class="card-date">
                                    <i class="far fa-calendar"></i>
                                    <span>@articulo.FechaPublicacion.ToString("dd MMM yyyy")</span>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>

        <hr class="section-divider" />
    }
    else if (articuloDestacado != null)
    {
        <div class="section-container">
            <div class="alert alert-info text-center" role="alert">
                <p>El único artículo disponible está en el banner principal.</p>
