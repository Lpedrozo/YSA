@using YSA.Web.Models.ViewModels
@model YSA.Web.Models.ViewModels.CursoCompletoViewModel

@{
    ViewData["Title"] = Model.Titulo;
    Layout = "_Layout";

    // Lógica de Negocio en la vista
    var estudianteIdActual = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    int idEstudianteInt = 0;
    int.TryParse(estudianteIdActual, out idEstudianteInt);

    var yaHaHechoResena = Model.Resenas?.Any(r => r.EstudianteId == idEstudianteInt) ?? false;
    var topResenas = Model.Resenas?.OrderByDescending(r => r.Fecha).Take(5).ToList() ?? new List<ResenaViewModel>();
    var todasLasResenas = Model.Resenas?.OrderByDescending(r => r.Fecha).ToList() ?? new List<ResenaViewModel>();
}

<div class="container px-3 px-sm-4 px-md-5 py-4">
    <!-- === TÍTULO Y DESCRIPCIÓN === -->
    <div class="row justify-content-center mt-4 mb-4">
        <div class="col-12 col-lg-10">
            <h1 class="h2 fw-bold mb-3 text-center" style="font-family: var(--font-heading); color: var(--color-brand-primary);">
                @Model.Titulo
            </h1>
            <div class="text-muted text-center" style="font-size: 1rem; line-height: 1.5;">
                @Html.Raw(Model.DescripcionCorta)
            </div>
            <hr class="my-4" style="border-color: rgba(239, 136, 48, 0.2);">
        </div>
    </div>

    <!-- === NAVEGACIÓN POR TABS === -->
    <div class="curso-tabs-navegacion">
        <ul class="curso-tabs-lista" id="courseTabs" role="tablist">
            <li class="curso-tab-item" role="presentation">
                <button class="curso-tab-boton active" id="presentacion-tab" data-bs-toggle="tab" data-bs-target="#presentacion-tab-pane" type="button" role="tab">
                    Presentación
                </button>
            </li>
            <li class="curso-tab-item" role="presentation">
                <button class="curso-tab-boton" id="contenido-tab" data-bs-toggle="tab" data-bs-target="#contenido-tab-pane" type="button" role="tab">
                    Contenido
                </button>
            </li>
            <li class="curso-tab-item" role="presentation">
                <button class="curso-tab-boton" id="recursos-tab" data-bs-toggle="tab" data-bs-target="#recursos-tab-pane" type="button" role="tab">
                    Recursos
                </button>
            </li>
            <li class="curso-tab-item" role="presentation">
                <button class="curso-tab-boton" id="proyectos-tab" data-bs-toggle="tab" data-bs-target="#proyectos-tab-pane" type="button" role="tab">
                    Actividades
                </button>
            </li>
            <li class="curso-tab-item" role="presentation">
                <button class="curso-tab-boton" id="preguntas-tab" data-bs-toggle="tab" data-bs-target="#preguntas-tab-pane" type="button" role="tab">
                    Preguntas
                </button>
            </li>
            <li class="curso-tab-item" role="presentation">
                <button class="curso-tab-boton" id="comunidad-tab" data-bs-toggle="tab" data-bs-target="#comunidad-tab-pane" type="button" role="tab">
                    Comunidad
                </button>
            </li>
        </ul>
    </div>

    <!-- === CONTENIDO DE LOS TABS === -->
    <div class="tab-content pb-5 mb-5" id="courseTabContent">

        <!-- TAB 1: PRESENTACIÓN -->
        <div class="tab-pane fade show active" id="presentacion-tab-pane" role="tabpanel" tabindex="0">
            <div class="curso-contenido-seccion">
                <h2 class="h4 fw-bold mb-3">
                    <i class="fas fa-book-open me-2" style="color: var(--color-brand-primary);"></i>Acerca de este curso
                </h2>
                <div class="curso-descripcion small">
                    @Html.Raw(Model.DescripcionLarga)
                </div>
            </div>
        </div>
        <!-- TAB 6: RECURSOS (NUEVO) -->
        <div class="tab-pane fade" id="recursos-tab-pane" role="tabpanel" tabindex="0">
            <div class="curso-recursos-container p-4">
                <h3 class="h5 fw-bold mb-4">
                    <i class="fas fa-paperclip me-2" style="color: var(--color-brand-primary);"></i>Materiales y Recursos del Curso
                </h3>

                @if (Model.Recursos != null && Model.Recursos.Any())
                {
                    <!-- Organizar por tipo de entidad o tipo de recurso -->
                    <div class="row g-3">
                        @foreach (var recurso in Model.Recursos.OrderBy(r => r.TipoEntidad).ThenBy(r => r.Titulo))
                        {
                            <div class="col-md-6">
                                <div class="card h-100 border-0 shadow-sm">
                                    <div class="card-body p-3">
                                        <div class="d-flex align-items-start gap-2">
                                            <!-- Icono según tipo de recurso -->
                                            <div class="flex-shrink-0">
                                                @if (recurso.TipoRecurso == "PDF")
                                                {
                                                    <i class="fas fa-file-pdf text-danger" style="font-size: 1.8rem;"></i>
                                                }
                                                else if (recurso.TipoRecurso == "Enlace" || recurso.TipoRecurso == "Link")
                                                {
                                                    <i class="fas fa-link text-primary" style="font-size: 1.8rem;"></i>
                                                }
                                                else if (recurso.TipoRecurso == "Video")
                                                {
                                                    <i class="fas fa-video text-success" style="font-size: 1.8rem;"></i>
                                                }
                                                else
                                                {
                                                    <i class="fas fa-file-alt text-secondary" style="font-size: 1.8rem;"></i>
                                                }
                                            </div>

                                            <div class="flex-grow-1">
                                                <h6 class="fw-bold mb-1">@recurso.Titulo</h6>

                                                <!-- Badge de ubicación -->
                                                    @if (recurso.TipoEntidad == "Curso")
                                                    {
                                                        <i class="fas fa-book me-1"></i>
                                                        <span class="badge bg-light text-dark mb-2" style="font-size: 0.65rem;">General</span>
                                                        
                                                    }
                                                    else if (recurso.TipoEntidad == "Modulo")
                                                    {
                                                        <i class="fas fa-folder me-1"></i>
                                                <span class="badge bg-light text-dark mb-2" style="font-size: 0.65rem;">Módulo</span>
                                                                            }
                                                    else if (recurso.TipoEntidad == "Leccion")
                                                    {
                                                        <i class="fas fa-play-circle me-1"></i>
                                                <span class="badge bg-light text-dark mb-2" style="font-size: 0.65rem;">lección</span>
                                                                            }
                                                @if (!string.IsNullOrEmpty(recurso.Descripcion))
                                                {
                                                    <p class="small text-muted mb-2">@Html.Raw(recurso.Descripcion)</p>
                                                }

                                                <!-- Botón de acceso según tipo -->
                                                <div class="mt-2">
                                                    @if (recurso.TipoRecurso == "PDF")
                                                    {
                                                        <a href="@recurso.Url" target="_blank" class="btn btn-outline-danger btn-sm w-100">
                                                            <i class="fas fa-download me-2"></i>Descargar PDF
                                                        </a>
                                                    }
                                                    else if (recurso.TipoRecurso == "Enlace" || recurso.TipoRecurso == "Link")
                                                    {
                                                        <a href="@recurso.Url" target="_blank" class="btn btn-outline-primary btn-sm w-100">
                                                            <i class="fas fa-external-link-alt me-2"></i>Abrir enlace
                                                        </a>
                                                    }
                                                    else if (recurso.TipoRecurso == "Video")
                                                    {
                                                        <a href="@recurso.Url" target="_blank" class="btn btn-outline-success btn-sm w-100">
                                                            <i class="fas fa-play me-2"></i>Ver video
                                                        </a>
                                                    }
                                                    else
                                                    {
                                                        <a href="@recurso.Url" target="_blank" class="btn btn-outline-secondary btn-sm w-100">
                                                            <i class="fas fa-download me-2"></i>Descargar
                                                        </a>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                   
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-paperclip text-muted" style="font-size: 3rem;"></i>
                        <h6 class="mt-3 mb-2">No hay recursos adicionales</h6>
                        <p class="small text-muted">Este curso no tiene materiales complementarios por el momento.</p>
                    </div>
                }
            </div>
        </div>
        <!-- TAB 2: CONTENIDO -->
        <div class="tab-pane fade" id="contenido-tab-pane" role="tabpanel" tabindex="0">
            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="curso-leccion-contenido">
                        <h3 class="h5 fw-bold mb-3" id="lessonTitle">Selecciona una lección para empezar</h3>
                        <div class="curso-leccion-descripcion small" id="lessonContent">
                            Usa la lista de lecciones a continuación para navegar por el contenido del curso.
                        </div>
                    </div>

                    <!-- Contenedor multimedia horizontal (siempre 16:9) -->
                    <div class="curso-multimedia-horizontal" id="contenidoMultimedia">
                        <!-- Imagen de inicio horizontal (visible por defecto) -->
                        <div class="curso-imagen-inicio active" id="imagenInicioContainer">
                            <div class="curso-multimedia-wrapper position-relative">
                                <img class="curso-multimedia-imagen" id="imagenInicio" src="/diseño/InicioCurso.png" alt="Inicio del curso">
                            </div>
                        </div>

                        <!-- Video horizontal (se muestra cuando hay video) -->
                        <div class="curso-video-contenido d-none" id="videoContenidoContainer">
                            <div class="curso-multimedia-wrapper position-relative">
                                <iframe class="curso-video-frame" id="mainVideoFrame" src="" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="curso-panel-lecciones">
                        <h4 class="h6 fw-bold mb-3">Módulos del Curso</h4>
                        <div class="curso-modulo-acordeon" id="courseAccordion">
                            @foreach (var modulo in Model.Modulos ?? Enumerable.Empty<ModuloConLeccionesViewModel>())
                            {
                                <div class="curso-modulo-item">
                                    <button class="curso-modulo-header" style="font-size:1rem" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@modulo.Id" aria-expanded="false" aria-controls="collapse_@modulo.Id">
                                        @modulo.Titulo
                                        <i class="fas fa-chevron-down modulo-icono"></i>
                                    </button>
                                    <div id="collapse_@modulo.Id" class="curso-modulo-contenido collapse">
                                        <ul class="curso-lecciones-lista">
                                            @foreach (var leccion in modulo.Lecciones ?? Enumerable.Empty<LeccionViewModel>())
                                            {
                                                <li>
                                                    <a href="#" class="curso-leccion-enlace @(leccion.CompletadaPorEstudiante ? "completada" : "") @(leccion.CompletadaPorEstudiante ? "activa" : "")"
                                                       data-video-url="@leccion.UrlVideo"
                                                       data-lesson-id="@leccion.Id"
                                                       data-lesson-title="@leccion.Titulo"
                                                       data-lesson-content="@leccion.Contenido">
                                                        <div class="curso-leccion-icono">
                                                            @if (leccion.CompletadaPorEstudiante)
                                                            {
                                                                <i class="fas fa-check-circle text-success small"></i>
                                                            }
                                                            else
                                                            {
                                                                <i class="fas fa-play-circle small"></i>
                                                            }
                                                        </div>
                                                        <div class="curso-leccion-texto small">
                                                            @leccion.Titulo
                                                        </div>
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- TAB 3: COMUNIDAD -->
        <div class="tab-pane fade" id="comunidad-tab-pane" role="tabpanel" tabindex="0">
            <div class="row g-4">
                <div class="col-lg-8">
                    <div class="mb-4">
                        <h3 class="h5 fw-bold mb-3">
                            <i class="fas fa-bullhorn me-2" style="color: var(--color-brand-primary);"></i>Anuncios del Curso
                        </h3>

                        @if (Model.Anuncios != null && Model.Anuncios.Any())
                        {
                            foreach (var anuncio in Model.Anuncios.OrderByDescending(a => a.FechaPublicacion))
                            {
                                <div class="curso-anuncio-card p-3 mb-3">
                                    <h4 class="h6 fw-bold mb-1">@anuncio.Titulo</h4>
                                    <span class="small text-muted d-block mb-2">Publicado el @anuncio.FechaPublicacion.ToString("dd MMMM yyyy")</span>
                                    <div class="small">
                                        @Html.Raw(anuncio.Contenido)
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-info small" role="alert">
                                No hay anuncios publicados para este curso.
                            </div>
                        }
                    </div>

                    @if (User.Identity.IsAuthenticated && !yaHaHechoResena)
                    {
                        <div class="curso-formulario-resena p-4">
                            <h3 class="h5 fw-bold mb-3">Deja tu Reseña</h3>
                            <form asp-action="CrearResena" asp-controller="Curso" method="post">
                                <input type="hidden" name="CursoId" value="@Model.Id" />

                                <div class="mb-3">
                                    <label class="form-label small fw-bold">Calificación</label>
                                    <div class="curso-calificacion-estrellas">
                                        @for (int i = 5; i >= 1; i--)
                                        {
                                            <input type="radio" id="star@(i)" name="Calificacion" value="@i" required />
                                            <label for="star@(i)"><i class="fas fa-star"></i></label>
                                        }
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="Comentario" class="form-label small fw-bold">Comentario</label>
                                    <textarea class="form-control form-control-sm" id="Comentario" name="Comentario" rows="3" required placeholder="Cuéntanos tu experiencia con el curso..."></textarea>
                                </div>

                                <button type="submit" class="btn btn-primary btn-sm">
                                    <i class="fas fa-paper-plane me-2"></i>Enviar Reseña
                                </button>
                            </form>
                        </div>
                    }
                    else if (User.Identity.IsAuthenticated && yaHaHechoResena)
                    {
                        <div class="alert alert-success small" role="alert">
                            <i class="fas fa-check-circle me-2"></i> Ya has dejado una reseña para este curso. ¡Gracias por tu opinión!
                        </div>
                    }
                </div>

                <div class="col-lg-4">
                    <div class="curso-resenas-container p-4">
                        <div class="curso-resenas-header mb-3">
                            <div class="curso-resenas-promedio">
                                @{
                                    var promedio = Model.Resenas.Any() ? Model.Resenas.Average(r => r.Calificacion) : 0;
                                    var roundedRating = (int)Math.Round(promedio);
                                }
                                <div class="h3 fw-bold mb-1" style="color: var(--color-brand-primary);">@promedio.ToString("F1")</div>
                                <div class="small text-warning mb-1">
                                    @for (int i = 0; i < roundedRating; i++)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                    @for (int i = 0; i < 5 - roundedRating; i++)
                                    {
                                        <i class="far fa-star"></i>
                                    }
                                </div>
                                <div class="small text-muted">@Model.Resenas.Count() reseñas</div>
                            </div>
                        </div>

                        @if (Model.Resenas != null && Model.Resenas.Any())
                        {
                            foreach (var resena in topResenas)
                            {
                                <div class="curso-resena-card p-3 mb-2">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="small fw-bold">@resena.NombreUsuario</div>
                                        <div class="small text-muted">@resena.Fecha.ToString("dd/MM/yyyy")</div>
                                    </div>
                                    <div class="small text-warning mb-2">
                                        @for (int i = 0; i < resena.Calificacion; i++)
                                        {
                                            <i class="fas fa-star"></i>
                                        }
                                        @for (int i = 0; i < 5 - resena.Calificacion; i++)
                                        {
                                            <i class="far fa-star"></i>
                                        }
                                    </div>
                                    <div class="small">@resena.Comentario</div>
                                </div>
                            }

                            <button type="button" class="btn btn-outline-primary btn-sm w-100 mt-2" data-bs-toggle="modal" data-bs-target="#allReviewsModal">
                                <i class="fas fa-list me-2"></i>Ver todas (@Model.Resenas.Count())
                            </button>
                        }
                        else
                        {
                            <div class="alert alert-info small" role="alert">
                                Este curso aún no tiene reseñas.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- TAB 4: PREGUNTAS -->
        <div class="tab-pane fade" id="preguntas-tab-pane" role="tabpanel" tabindex="0">
            <div class="curso-preguntas-container p-4">
                <h3 class="h5 fw-bold mb-4">
                    <i class="fas fa-question-circle me-2" style="color: var(--color-brand-primary);"></i>Preguntas y Respuestas
                </h3>

                <div class="mb-4">
                    <h5 class="h6 fw-bold mb-3">Hacer una Nueva Pregunta</h5>
                    <form id="formHacerPregunta" action="@Url.Action("CrearPregunta", "Curso", new { tab = "preguntas-tab" })" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="cursoId" value="@Model.Id" />

                        <div class="mb-3">
                            <label for="preguntaInput" class="form-label small fw-bold">Tu Pregunta:</label>
                            <textarea class="form-control form-control-sm" id="preguntaInput" name="pregunta" rows="3" required placeholder="Escribe tu duda o consulta aquí..."></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fas fa-paper-plane me-2"></i>Enviar Pregunta
                        </button>
                    </form>
                </div>

                <h4 class="h6 fw-bold mt-5 mb-3">
                    <i class="fas fa-comments me-2" style="color: var(--color-brand-primary);"></i>Consultas Recientes (@(Model.Preguntas?.Count ?? 0))
                </h4>

                @if (Model.Preguntas != null && Model.Preguntas.Any())
                {
                    foreach (var p in Model.Preguntas.OrderByDescending(p => p.FechaPregunta))
                    {
                        <div class="curso-pregunta-card p-3 mb-3">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div class="small fw-bold">
                                    <i class="fas fa-question-circle me-2 text-primary small"></i>@p.NombreEstudiante
                                </div>
                                <div class="small text-muted">@p.FechaPregunta.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                            <div class="small mb-2">@p.Pregunta</div>

                            @if (!string.IsNullOrEmpty(p.Respuesta))
                            {
                                <div class="curso-respuesta-container p-3 mt-2">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <div class="small fw-bold text-success">
                                            <i class="fas fa-reply me-2"></i>@p.NombreInstructor
                                        </div>
                                        <div class="small text-muted">@p.FechaRespuesta?.ToString("dd/MM/yyyy HH:mm")</div>
                                    </div>
                                    <div class="small">@p.Respuesta</div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning small py-2 mt-2">
                                    <i class="fas fa-hourglass-half me-2"></i>Pendiente de respuesta
                                </div>
                            }
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info small" role="alert">
                        Aún no hay preguntas para este curso.
                    </div>
                }
            </div>
        </div>

        <!-- TAB 5: ACTIVIDADES -->
        <!-- TAB 5: ACTIVIDADES -->
        <div class="tab-pane fade" id="proyectos-tab-pane" role="tabpanel" tabindex="0">
            <div class="curso-actividades-container p-4">
                <h3 class="h5 fw-bold mb-4">
                    <i class="fas fa-tasks me-2" style="color: var(--color-brand-primary);"></i>Actividades del Curso
                </h3>

                @if (Model.Actividades != null && Model.Actividades.Any())
                {
                    foreach (var actividad in Model.Actividades)
                    {
                        <div class="curso-actividad-card p-3 mb-3">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="h6 fw-bold mb-0">@actividad.Titulo</h5>
                                @if (actividad.EntregaEstudiante != null)
                                {
                                    var badgeClass = actividad.EntregaEstudiante.Estado == "Calificado" ? "success" :
                                    actividad.EntregaEstudiante.Estado == "Rechazado" ? "danger" : "warning";
                                    <span class="badge bg-@badgeClass small">@actividad.EntregaEstudiante.Estado</span>
                                }
                            </div>
                            <div class="small mb-3">@Html.Raw(actividad.Descripcion)</div>

                            <div class="d-flex flex-wrap gap-2 align-items-center">
                                <!-- BOTÓN DE MATERIAL DE APOYO (si existe) -->
                                @if (!string.IsNullOrEmpty(actividad.Url))
                                {
                                    <!-- Detectar si es un archivo PDF o un enlace externo -->
                                    var esPdf = actividad.Url.ToLower().Contains(".pdf") || actividad.TipoRecurso == "PDF";
                                    var esEnlaceExterno = actividad.Url.StartsWith("http") && !esPdf;

                                    if (esPdf)
                                    {
                                        <a href="@actividad.Url" target="_blank" class="btn btn-outline-danger btn-sm">
                                            <i class="fas fa-file-pdf me-1"></i> Material PDF
                                        </a>
                                    }
                                    else if (esEnlaceExterno)
                                    {
                                        <a href="@actividad.Url" target="_blank" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-external-link-alt me-1"></i> Ver material
                                        </a>
                                    }
                                    else
                                    {
                                        <a href="@actividad.Url" target="_blank" class="btn btn-outline-secondary btn-sm">
                                            <i class="fas fa-download me-1"></i> Material
                                        </a>
                                    }
                                }

                                <!-- BOTONES DE ENTREGA -->
                                @if (actividad.RequiereEntrega)
                                {
                                    @if (actividad.EntregaEstudiante == null)
                                    {
                                        <button type="button" class="btn btn-primary btn-sm"
                                                data-bs-toggle="modal" data-bs-target="#entregaModal"
                                                data-actividad-id="@actividad.Id"
                                                data-actividad-titulo="@actividad.Titulo">
                                            <i class="fas fa-upload me-1"></i> Subir entrega
                                        </button>
                                    }
                                    else
                                    {
                                        <!-- Botón "Ver mi entrega" si hay archivo -->
                                        @if (!string.IsNullOrEmpty(actividad.EntregaEstudiante.UrlArchivoEntrega))
                                        {
                                            <a href="@actividad.EntregaEstudiante.UrlArchivoEntrega" target="_blank" class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-file-alt me-1"></i> Ver mi entrega
                                            </a>
                                        }

