        // Función para actualizar la vista de la lección
                // Función para actualizar la vista de la lección
        function updateLessonView(lessonLink) {
            // 1. Manejo de la clase 'active'
            document.querySelectorAll('.curso-leccion-enlace').forEach(l => l.classList.remove('activa'));
            lessonLink.classList.add('activa');

            // 2. Obtener los datos
            const videoUrl = lessonLink.dataset.videoUrl;
            const lessonId = lessonLink.dataset.lessonId;
            const lessonTitle = lessonLink.dataset.lessonTitle;
            const lessonContent = lessonLink.dataset.lessonContent;

            // 3. Actualizar el contenido multimedia (imagen de inicio vs video)
            const imagenInicioContainer = document.getElementById('imagenInicioContainer');
            const videoContenidoContainer = document.getElementById('videoContenidoContainer');
            const mainVideoFrame = document.getElementById('mainVideoFrame');

            if (videoUrl) {
                const videoIdMatch = videoUrl.match(/(?:youtu\.be\/|youtube\.com\/(?:embed\/|v\/|watch\?v=|shorts\/))([\w-]{11})(?:\S+)?/);
                const videoId = videoIdMatch ? videoIdMatch[1] : null;

                if (videoId) {
                    // Ocultar imagen de inicio, mostrar video
                    imagenInicioContainer.classList.add('d-none');
                    videoContenidoContainer.classList.remove('d-none');

                    // Cargar video
                    const embedUrl = `https://www.youtube.com/embed/${videoId}?autoplay=0&rel=0`;
                    mainVideoFrame.src = embedUrl;
                } else {
                    // URL inválida, mostrar imagen de inicio
                    imagenInicioContainer.classList.remove('d-none');
                    videoContenidoContainer.classList.add('d-none');
                    mainVideoFrame.src = '';
                    console.error("URL de YouTube inválida o no reconocida:", videoUrl);
                }
            } else {
                // No hay video, mostrar imagen de inicio
                imagenInicioContainer.classList.remove('d-none');
                videoContenidoContainer.classList.add('d-none');
                mainVideoFrame.src = '';
            }

            // 4. Actualizar el contenido de la lección
            lessonTitleEl.textContent = lessonTitle;
            lessonContentEl.innerHTML = lessonContent;

            // 5. Llamada a la API para marcar como completada (SOLO SI NO ESTÁ COMPLETA)
            if (lessonId && !lessonLink.classList.contains('completada')) {
                fetch(`${progresoEndpoint}?leccionId=${lessonId}`, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json', 'X-Requested-With': 'XMLHttpRequest' }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        console.log('Lección marcada como completada con éxito.');
                        lessonLink.classList.add('completada');
                        const icon = lessonLink.querySelector('.curso-leccion-icono i');
