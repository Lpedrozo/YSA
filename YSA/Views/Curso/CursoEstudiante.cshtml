@using YSA.Web.Models.ViewModels
@model YSA.Web.Models.ViewModels.CursoCompletoViewModel

@{
    ViewData["Title"] = Model.Titulo;
    Layout = "_Layout";

    // Lógica de Negocio en la vista
    var estudianteIdActual = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    int idEstudianteInt = 0;
    int.TryParse(estudianteIdActual, out idEstudianteInt);

    var yaHaHechoResena = Model.Resenas?.Any(r => r.EstudianteId == idEstudianteInt) ?? false;
    var topResenas = Model.Resenas?.OrderByDescending(r => r.Fecha).Take(5).ToList() ?? new List<ResenaViewModel>();
    var todasLasResenas = Model.Resenas?.OrderByDescending(r => r.Fecha).ToList() ?? new List<ResenaViewModel>();
}

<div class="container px-0 py-5">

    <!-- === HERO SECTION DEL CURSO === -->
    <div class="curso-hero">
        <img class="curso-hero-imagen" src="@Model.UrlImagen" alt="@Model.Titulo">
        <div class="curso-hero-overlay">
            <div class="curso-hero-contenido">
                <span class="curso-hero-badge">CURSO</span>
                <h1 class="curso-hero-titulo">@Model.Titulo</h1>
                <p class="curso-hero-descripcion">@Html.Raw(Model.DescripcionCorta)</p>
            </div>
        </div>
    </div>

    <!-- === NAVEGACIÓN POR TABS === -->
    <div class="curso-tabs-navegacion">
        <ul class="curso-tabs-lista" id="courseTabs" role="tablist">
            <li class="curso-tab-item" role="presentation">
                <button class="curso-tab-boton active" id="presentacion-tab" data-bs-toggle="tab" data-bs-target="#presentacion-tab-pane" type="button" role="tab">
                    <i class="fas fa-info-circle me-2"></i>Presentación
                </button>
            </li>
            <li class="curso-tab-item" role="presentation">
                <button class="curso-tab-boton" id="contenido-tab" data-bs-toggle="tab" data-bs-target="#contenido-tab-pane" type="button" role="tab">
                    <i class="fas fa-play-circle me-2"></i>Contenido
                </button>
            </li>
            <li class="curso-tab-item" role="presentation">
                <button class="curso-tab-boton" id="comunidad-tab" data-bs-toggle="tab" data-bs-target="#comunidad-tab-pane" type="button" role="tab">
                    <i class="fas fa-users me-2"></i>Comunidad
                </button>
            </li>
            <li class="curso-tab-item" role="presentation">
                <button class="curso-tab-boton" id="preguntas-tab" data-bs-toggle="tab" data-bs-target="#preguntas-tab-pane" type="button" role="tab">
                    <i class="fas fa-question-circle me-2"></i>Preguntas
                    <span class="curso-tab-badge badge bg-secondary">@(Model.Preguntas?.Count ?? 0)</span>
                </button>
            </li>
            <li class="curso-tab-item" role="presentation">
                <button class="curso-tab-boton" id="proyectos-tab" data-bs-toggle="tab" data-bs-target="#proyectos-tab-pane" type="button" role="tab">
                    <i class="fas fa-tasks me-2"></i>Actividades
                    <span class="curso-tab-badge badge bg-warning">@Model.Actividades.Count()</span>
                </button>
            </li>
        </ul>
    </div>

    <!-- === CONTENIDO DE LOS TABS === -->
    <div class="tab-content pb-5 mb-5" id="courseTabContent">

        <!-- TAB 1: PRESENTACIÓN -->
        <div class="tab-pane fade show active" id="presentacion-tab-pane" role="tabpanel" tabindex="0">
            <div class="curso-contenido-seccion">
                <h2 class="curso-titulo-seccion">
                    <i class="fas fa-book-open me-2"></i>Acerca de este curso
                </h2>
                <div class="curso-descripcion">
                    @Html.Raw(Model.DescripcionLarga)
                </div>
            </div>
        </div>

        <!-- TAB 2: CONTENIDO -->
        <div class="tab-pane fade" id="contenido-tab-pane" role="tabpanel" tabindex="0">
            <div class="row g-5">
                <div class="col-lg-8">
                    <div class="curso-leccion-contenido">
                        <h3 class="curso-leccion-titulo" id="lessonTitle">Selecciona una lección para empezar</h3>
                        <div class="curso-leccion-descripcion" id="lessonContent">
                            Usa la lista de lecciones a continuación para navegar por el contenido del curso.
                        </div>
                    </div>

                    <div class="curso-video-container">
                        <iframe class="curso-video-frame d-none" id="mainVideoFrame" src="" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        <img class="curso-video-imagen" id="mainCourseImage" src="@Model.UrlImagen" alt="Imagen de presentación del curso">
                    </div>
                </div>

                <div class="col-lg-4">
                    <div class="curso-panel-lecciones">
                        <h4 class="curso-panel-titulo">Módulos del Curso</h4>
                        <div class="curso-modulo-acordeon" id="courseAccordion">
                            @foreach (var modulo in Model.Modulos ?? Enumerable.Empty<ModuloConLeccionesViewModel>())
                            {
                                <div class="curso-modulo-item">
                                    <button class="curso-modulo-header" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@modulo.Id" aria-expanded="false" aria-controls="collapse_@modulo.Id">
                                        @modulo.Titulo
                                        <i class="fas fa-chevron-down modulo-icono"></i>
                                    </button>
                                    <div id="collapse_@modulo.Id" class="curso-modulo-contenido collapse">
                                        <ul class="curso-lecciones-lista">
                                            @foreach (var leccion in modulo.Lecciones ?? Enumerable.Empty<LeccionViewModel>())
                                            {
                                                <li>
                                                    <a href="#" class="curso-leccion-enlace @(leccion.CompletadaPorEstudiante ? "completada" : "") @(leccion.CompletadaPorEstudiante ? "activa" : "")"
                                                       data-video-url="@leccion.UrlVideo"
                                                       data-lesson-id="@leccion.Id"
                                                       data-lesson-title="@leccion.Titulo"
                                                       data-lesson-content="@leccion.Contenido">
                                                        <div class="curso-leccion-icono">
                                                            @if (leccion.CompletadaPorEstudiante)
                                                            {
                                                                <i class="fas fa-check-circle text-success"></i>
                                                            }
                                                            else
                                                            {
                                                                <i class="fas fa-play-circle"></i>
                                                            }
                                                        </div>
                                                        <div class="curso-leccion-texto">
                                                            @leccion.Titulo
                                                        </div>
                                                    </a>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- TAB 3: COMUNIDAD -->
        <div class="tab-pane fade" id="comunidad-tab-pane" role="tabpanel" tabindex="0">
            <div class="row g-5">
                <div class="col-lg-8">
                    <div class="mb-5">
                        <h3 class="curso-titulo-seccion">
                            <i class="fas fa-bullhorn me-2"></i>Anuncios del Curso
                        </h3>

                        @if (Model.Anuncios != null && Model.Anuncios.Any())
                        {
                            foreach (var anuncio in Model.Anuncios.OrderByDescending(a => a.FechaPublicacion))
                            {
                                <div class="curso-anuncio-card">
                                    <h4 class="curso-anuncio-titulo">@anuncio.Titulo</h4>
                                    <span class="curso-anuncio-fecha">Publicado el @anuncio.FechaPublicacion.ToString("dd MMMM yyyy")</span>
                                    <div class="curso-anuncio-contenido">
                                        @Html.Raw(anuncio.Contenido)
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-info" role="alert">
                                No hay anuncios publicados para este curso.
                            </div>
                        }
                    </div>

                    @if (User.Identity.IsAuthenticated && !yaHaHechoResena)
                    {
                        <div class="curso-formulario-resena">
                            <h3 class="curso-formulario-titulo">Deja tu Reseña</h3>
                            <form asp-action="CrearResena" asp-controller="Curso" method="post">
                                <input type="hidden" name="CursoId" value="@Model.Id" />

                                <div class="mb-3">
                                    <label class="form-label confirmacion-form-label">Calificación</label>
                                    <div class="curso-calificacion-estrellas">
                                        @for (int i = 5; i >= 1; i--)
                                        {
                                            <input type="radio" id="star@(i)" name="Calificacion" value="@i" required />
                                            <label for="star@(i)"><i class="fas fa-star"></i></label>
                                        }
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="Comentario" class="form-label confirmacion-form-label">Comentario</label>
                                    <textarea class="form-control confirmacion-form-input" id="Comentario" name="Comentario" rows="3" required placeholder="Cuéntanos tu experiencia con el curso..."></textarea>
                                </div>

                                <button type="submit" class="btn btn-action curso-btn-inscribirse">
                                    <i class="fas fa-paper-plane me-2"></i>Enviar Reseña
                                </button>
                            </form>
                        </div>
                    }
                    else if (User.Identity.IsAuthenticated && yaHaHechoResena)
                    {
                        <div class="alert alert-success" role="alert">
                            <i class="fas fa-check-circle me-2"></i> Ya has dejado una reseña para este curso. ¡Gracias por tu opinión!
                        </div>
                    }
                </div>

                <div class="col-lg-4">
                    <div class="curso-resenas-container">
                        <div class="curso-resenas-header">
                            <div class="curso-resenas-promedio">
                                @{
                                    var promedio = Model.Resenas.Any() ? Model.Resenas.Average(r => r.Calificacion) : 0;
                                    var roundedRating = (int)Math.Round(promedio);
                                }
                                <div class="curso-resenas-puntuacion">@promedio.ToString("F1")</div>
                                <div class="curso-resenas-estrellas">
                                    @for (int i = 0; i < roundedRating; i++)
                                    {
                                        <i class="fas fa-star"></i>
                                    }
                                    @for (int i = 0; i < 5 - roundedRating; i++)
                                    {
                                        <i class="far fa-star"></i>
                                    }
                                </div>
                                <div class="curso-resenas-contador">@Model.Resenas.Count() reseñas</div>
                            </div>
                        </div>

                        @if (Model.Resenas != null && Model.Resenas.Any())
                        {
                            foreach (var resena in topResenas)
                            {
                                <div class="curso-resena-card">
                                    <div class="curso-resena-header">
                                        <div class="curso-resena-usuario">@resena.NombreUsuario</div>
                                        <div class="curso-resena-fecha">@resena.Fecha.ToString("dd/MM/yyyy")</div>
                                    </div>
                                    <div class="curso-resena-rating text-warning mb-2">
                                        @for (int i = 0; i < resena.Calificacion; i++)
                                        {
                                            <i class="fas fa-star"></i>
                                        }
                                        @for (int i = 0; i < 5 - resena.Calificacion; i++)
                                        {
                                            <i class="far fa-star"></i>
                                        }
                                    </div>
                                    <div class="curso-resena-texto">@resena.Comentario</div>
                                </div>
                            }

                            <button type="button" class="btn btn-outline-primary w-100 mt-3" data-bs-toggle="modal" data-bs-target="#allReviewsModal">
                                <i class="fas fa-list me-2"></i>Ver todas las reseñas (@Model.Resenas.Count())
                            </button>
                        }
                        else
                        {
                            <div class="alert alert-info" role="alert">
                                Este curso aún no tiene reseñas. ¡Sé el primero en dejar una!
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- TAB 4: PREGUNTAS -->
        <div class="tab-pane fade" id="preguntas-tab-pane" role="tabpanel" tabindex="0">
            <div class="curso-preguntas-container">
                <h3 class="curso-titulo-seccion">
                    <i class="fas fa-question-circle me-2"></i>Preguntas y Respuestas
                </h3>

                <div class="mb-4">
                    <h5 class="mb-3">Hacer una Nueva Pregunta</h5>
                    <form id="formHacerPregunta" action="@Url.Action("CrearPregunta", "Curso", new { tab = "preguntas-tab" })" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="cursoId" value="@Model.Id" />

                        <div class="mb-3">
                            <label for="preguntaInput" class="form-label confirmacion-form-label">Tu Pregunta:</label>
                            <textarea class="form-control confirmacion-form-input" id="preguntaInput" name="pregunta" rows="3" required placeholder="Escribe tu duda o consulta aquí..."></textarea>
                        </div>

                        <button type="submit" class="btn btn-action">
                            <i class="fas fa-paper-plane me-2"></i>Enviar Pregunta
                        </button>
                    </form>
                </div>

                <h4 class="curso-titulo-seccion mt-5">
                    <i class="fas fa-comments me-2"></i>Consultas Recientes (@(Model.Preguntas?.Count ?? 0))
                </h4>

                @if (Model.Preguntas != null && Model.Preguntas.Any())
                {
                    foreach (var p in Model.Preguntas.OrderByDescending(p => p.FechaPregunta))
                    {
                        <div class="curso-pregunta-card">
                            <div class="curso-pregunta-header">
                                <div class="curso-pregunta-usuario">
                                    <i class="fas fa-question-circle me-2 text-primary"></i>@p.NombreEstudiante
                                </div>
                                <div class="curso-pregunta-fecha">@p.FechaPregunta.ToString("dd/MM/yyyy HH:mm")</div>
                            </div>
                            <div class="curso-pregunta-texto">@p.Pregunta</div>

                            @if (!string.IsNullOrEmpty(p.Respuesta))
                            {
                                <div class="curso-respuesta-container">
                                    <div class="curso-respuesta-header">
                                        <div class="curso-respuesta-instructor">
                                            <i class="fas fa-reply me-2"></i>@p.NombreInstructor
                                        </div>
                                        <div class="curso-respuesta-fecha">@p.FechaRespuesta?.ToString("dd/MM/yyyy HH:mm")</div>
                                    </div>
                                    <div class="curso-respuesta-texto">@p.Respuesta</div>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-warning mt-3 py-2">
                                    <i class="fas fa-hourglass-half me-2"></i>Pendiente de respuesta del instructor.
                                </div>
                            }
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info" role="alert">
                        Aún no hay preguntas para este curso. ¡Sé el primero en preguntar!
                    </div>
                }
            </div>
        </div>

        <!-- TAB 5: ACTIVIDADES -->
        <div class="tab-pane fade" id="proyectos-tab-pane" role="tabpanel" tabindex="0">
            <div class="curso-actividades-container">
                <h3 class="curso-titulo-seccion">
                    <i class="fas fa-tasks me-2"></i>Actividades del Curso
                </h3>

                @if (Model.Actividades != null && Model.Actividades.Any())
                {
                    foreach (var actividad in Model.Actividades)
                    {
                        <div class="curso-actividad-card">
                            <div class="curso-actividad-header">
                                <div>
                                    <h5 class="curso-actividad-titulo">@actividad.Titulo</h5>
                                </div>
                                @if (actividad.EntregaEstudiante != null)
                                {
                                    var badgeClass = actividad.EntregaEstudiante.Estado == "Calificado" ? "calificado" :
                                    actividad.EntregaEstudiante.Estado == "Rechazado" ? "rechazado" : "pendiente";
                                    <span class="curso-estado-badge @badgeClass">@actividad.EntregaEstudiante.Estado</span>
                                }
                            </div>
                            <div class="curso-actividad-descripcion">@Html.Raw(actividad.Descripcion)</div>

                            <div class="curso-actividad-acciones">
                                @if (!string.IsNullOrEmpty(actividad.Url))
                                {
                                    <a href="@actividad.Url" target="_blank" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-download me-1"></i> Material Adicional
                                    </a>
                                }

                                @if (actividad.RequiereEntrega)
                                {
                                    @if (actividad.EntregaEstudiante == null)
                                    {
                                        <button type="button" class="btn btn-action btn-sm"
                                                data-bs-toggle="modal" data-bs-target="#entregaModal"
                                                data-actividad-id="@actividad.Id"
                                                data-actividad-titulo="@actividad.Titulo">
                                            <i class="fas fa-upload me-1"></i> Subir Mi Entrega
                                        </button>
                                    }
                                    else
                                    {
                                        <a href="@actividad.EntregaEstudiante.UrlArchivoEntrega" target="_blank" class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-file-alt me-1"></i> Ver Archivo
                                        </a>

                                        @if (actividad.EntregaEstudiante.Estado == "Calificado")
                                        {
                                            <button type="button" class="btn btn-primary btn-sm"
                                                    data-bs-toggle="modal" data-bs-target="#calificacionModal"
                                                    data-calificacion="@actividad.EntregaEstudiante.Calificacion"
                                                    data-observacion="@actividad.EntregaEstudiante.ObservacionInstructor"
                                                    data-fecha="@actividad.EntregaEstudiante.FechaCalificacion?.ToString("dd/MM/yyyy")"
                                                    data-actividad-titulo="@actividad.Titulo">
                                                <i class="fas fa-star me-1"></i> Calificación: @actividad.EntregaEstudiante.Calificacion.GetValueOrDefault(0).ToString("F0")/100
                                            </button>
                                        }
                                        else if (actividad.EntregaEstudiante.Estado == "Pendiente" || actividad.EntregaEstudiante.Estado == "Rechazado")
                                        {
                                            <button type="button" class="btn btn-warning btn-sm"
                                                    data-bs-toggle="modal" data-bs-target="#entregaModal"
                                                    data-actividad-id="@actividad.Id"
                                                    data-actividad-titulo="@actividad.Titulo"
                                                    data-comentario-previo="@actividad.EntregaEstudiante.ComentarioEstudiante">
                                                <i class="fas fa-redo me-1"></i> Reemplazar Entrega
                                            </button>
                                        }
                                    }
                                }
                                else
                                {
                                    <div class="alert alert-info mt-2" role="alert">
                                        <i class="fas fa-info-circle me-2"></i>Esta actividad no requiere entrega para ser evaluada. Es para práctica.
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info" role="alert">
                        No hay actividades publicadas para este curso.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- MODALES -->
<div class="modal fade" id="allReviewsModal" tabindex="-1" aria-labelledby="allReviewsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="allReviewsModalLabel">
                    <i class="fas fa-star me-2"></i>Todas las Reseñas de "@Model.Titulo"
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (Model.Resenas != null && Model.Resenas.Any())
                {
                    var promedioReseña = Model.Resenas.Average(r => r.Calificacion);
                    <div class="text-center mb-4 p-4 bg-light rounded">
                        <h4 class="mb-2">@promedioReseña.ToString("F1") / 5</h4>
                        <div class="text-warning mb-2">
                            @for (int i = 0; i < Math.Round(promedioReseña); i++)
                            {
                                <i class="fas fa-star"></i>
                            }
                            @for (int i = 0; i < 5 - Math.Round(promedioReseña); i++)
                            {
                                <i class="far fa-star"></i>
                            }
                        </div>
                        <p class="text-muted">Puntuación promedio de @Model.Resenas.Count() reseñas</p>
                    </div>

                    @foreach (var resena in todasLasResenas)
                    {
                        <div class="curso-resena-card mb-3">
                            <div class="curso-resena-header">
                                <div class="curso-resena-usuario">@resena.NombreUsuario</div>
                                <div class="curso-resena-fecha">@resena.Fecha.ToString("dd/MM/yyyy")</div>
                            </div>
                            <div class="curso-resena-rating text-warning mb-2">
                                @for (int i = 0; i < resena.Calificacion; i++)
                                {
                                    <i class="fas fa-star"></i>
                                }
                                @for (int i = 0; i < 5 - resena.Calificacion; i++)
                                {
                                    <i class="far fa-star"></i>
                                }
                            </div>
                            <div class="curso-resena-texto">@resena.Comentario</div>
                        </div>
                    }
                }
                else
                {
                    <div class="alert alert-info" role="alert">
                        Este curso aún no tiene reseñas.
                    </div>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="entregaModal" tabindex="-1" aria-labelledby="entregaModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="entregaModalLabel">
                    <i class="fas fa-upload me-2"></i>Subir entrega
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="SubirEntregaActividad" asp-controller="Curso" method="post" enctype="multipart/form-data">
                <input type="hidden" id="actividadIdInput" name="recursoActividadId" />
                <input type="hidden" id="cursoId" name="cursoId" value="@Model.Id" />
                @Html.AntiForgeryToken()

                <div class="modal-body">
                    <p class="mb-3">Actividad: <strong id="actividadTituloPlaceholder"></strong></p>

                    <div class="mb-3">
                        <label for="archivoEntrega" class="form-label confirmacion-form-label">Archivo de la tarea</label>
                        <input class="form-control confirmacion-form-input" type="file" id="archivoEntrega" name="archivoEntrega" required>
                        <div class="form-text">Formatos aceptados: PDF, ZIP, DOCX, JPG, etc.</div>
                    </div>

                    <div class="mb-3">
                        <label for="comentarioEstudiante" class="form-label confirmacion-form-label">Comentarios para el maestro (Opcional)</label>
                        <textarea class="form-control confirmacion-form-input" id="comentarioEstudiante" name="comentario" rows="3" placeholder="Escribe cualquier nota sobre tu entrega..."></textarea>
                        <div class="form-text">Si estás reemplazando una entrega, tu nuevo comentario sobrescribirá el anterior.</div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-action">
                        <i class="fas fa-check-circle me-1"></i> Confirmar entrega
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="calificacionModal" tabindex="-1" aria-labelledby="calificacionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="calificacionModalLabel">
                    <i class="fas fa-trophy me-2"></i>Calificación de actividad
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p class="mb-3">Actividad: <strong id="calificacionActividadTituloPlaceholder"></strong></p>
                <div class="text-center mb-4 p-4 border rounded bg-light">
                    <p class="mb-0 text-muted">Tu puntuación final:</p>
                    <h1 class="display-3 fw-bold text-primary" id="calificacionPlaceholder">--</h1>
                </div>

                <h6 class="text-primary mt-4 border-bottom pb-2">Retroalimentación del maestro:</h6>
