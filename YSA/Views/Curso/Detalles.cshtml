@model YSA.Web.Models.ViewModels.CursoCompletoViewModel
@{
    ViewData["Title"] = Model.Titulo;
    var culture = System.Globalization.CultureInfo.CreateSpecificCulture("es-VE");
}

<!-- Hero del Curso -->
<div class="curso-hero">
    <img src="@Model.UrlImagen" class="curso-hero-imagen" alt="@Model.Titulo">
    <div class="curso-hero-overlay">
        <div class="curso-hero-contenido">
            <span class="curso-hero-badge">CURSO DISPONIBLE</span>
            <h1 class="curso-hero-titulo">@Model.Titulo</h1>
            <div class="curso-hero-descripcion">
                @Html.Raw(Model.DescripcionCorta)
            </div>
        </div>
    </div>
</div>

<div class="container px-0 py-5">
    <div class="row g-4">
        <!-- Contenido Principal -->
        <div class="col-lg-8">
            <!-- Sección Acerca del Curso -->
            <div class="curso-contenido-seccion">
                <h2 class="curso-titulo-seccion">
                    <i class="fas fa-info-circle"></i> Acerca del curso
                </h2>
                <div class="curso-descripcion">
                    @Html.Raw(Model.DescripcionLarga)
                </div>
            </div>

            <!-- Sección Contenido del Curso -->
            <div class="curso-contenido-seccion">
                <h2 class="curso-titulo-seccion">
                    <i class="fas fa-book-open"></i> Contenido del curso
                </h2>

                @if (Model.Modulos != null && Model.Modulos.Any())
                {
                    <div class="curso-acordeon accordion" id="cursoAcordeon">
                        @foreach (var modulo in Model.Modulos)
                        {
                            <div class="curso-modulo-item accordion-item">
                                <h3 class="accordion-header" id="moduloHeading_@modulo.Id">
                                    <button class="curso-modulo-header accordion-button collapsed"
                                            type="button"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#moduloCollapse_@modulo.Id"
                                            aria-expanded="false"
                                            aria-controls="moduloCollapse_@modulo.Id">
                                        <span>@modulo.Titulo</span>
                                        <i class="modulo-icon fas fa-chevron-down"></i>
                                    </button>
                                </h3>
                                <div id="moduloCollapse_@modulo.Id"
                                     class="curso-modulo-contenido accordion-collapse collapse"
                                     aria-labelledby="moduloHeading_@modulo.Id"
                                     data-bs-parent="#cursoAcordeon">
                                    <ul class="curso-lecciones-lista">
                                        @if (modulo.Lecciones != null && modulo.Lecciones.Any())
                                        {
                                            @foreach (var leccion in modulo.Lecciones)
                                            {
                                                <li class="curso-leccion-item">
                                                    <div class="leccion-icono @(Model.TieneAcceso ? "libre" : "bloqueada")">
                                                        <i class="fas @(Model.TieneAcceso ? "fa-play-circle" : "fa-lock")"></i>
                                                    </div>
                                                    <div class="curso-leccion-titulo">@leccion.Titulo</div>
                                                </li>
                                            }
                                        }
                                        else
                                        {
                                            <li class="curso-leccion-item">
                                                <div class="text-muted">
                                                    <i class="fas fa-info-circle me-2"></i>
                                                    No hay lecciones en este módulo
                                                </div>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="curso-modulo-vacio">
                        <i class="fas fa-book"></i>
                        <p class="mb-0">Este curso no contiene módulos ni lecciones.</p>
                    </div>
                }
            </div>
        </div>

        <!-- Sidebar de Inscripción (Desktop) -->
        <div class="col-lg-4">
            <div class="curso-sidebar d-none d-lg-block">
                <div class="curso-precio-card">
                    <h3 class="curso-precio-titulo">Inversión del curso</h3>

                    <div class="curso-precio-monto">
                        @Model.Precio.ToString("C", culture)
                    </div>

                    <div class="mb-4">
                        <div class="curso-beneficio-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Acceso de por vida</span>
                        </div>
                        <div class="curso-beneficio-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Certificado digital</span>
                        </div>
                        <div class="curso-beneficio-item">
                            <i class="fas fa-check-circle"></i>
                            <span>Soporte personalizado</span>
                        </div>
                    </div>

                    @if (Model.TieneAcceso)
                    {
                        <a asp-action="VerCurso" asp-controller="Curso" asp-route-id="@Model.Id"
                           class="curso-btn-continuar mb-3">
                            <i class="fas fa-play-circle me-2"></i>
                            Continuar Curso
                        </a>

                        <div class="curso-estado activo">
                            <i class="fas fa-check-circle"></i>
                            Ya tienes acceso a este curso
                        </div>
                    }
                    else if (Model.EstaEnValidacion)
                    {
                        <div class="curso-estado validacion">
                            <i class="fas fa-hourglass-half"></i>
                            Su pago está en proceso de validación
                        </div>
                    }
                    else
                    {
                        <form asp-controller="Pedido" asp-action="IniciarCompra" method="post">
                            <input type="hidden" name="cursoId" value="@Model.Id" />
                            <button type="submit" class="curso-btn-inscribirse">
                                <i class="fas fa-shopping-cart me-2"></i>
                                Inscribirse Ahora
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Barra Móvil de Compra -->
<div class="curso-barra-movil d-lg-none">
    <div>
        <div class="curso-barra-precio">
            @Model.Precio.ToString("C", culture)
        </div>
    </div>

    <div class="d-flex align-items-center">
        @if (Model.TieneAcceso)
        {
            <a asp-action="VerCurso" asp-controller="Curso" asp-route-id="@Model.Id"
               class="btn btn-success btn-sm">
                <i class="fas fa-play-circle me-1"></i>Continuar
            </a>
        }
        else if (Model.EstaEnValidacion)
        {
            <span class="curso-barra-texto">
                <i class="fas fa-hourglass-half me-1"></i>En validación
            </span>
        }
        else
        {
            <form asp-controller="Pedido" asp-action="IniciarCompra" method="post" class="d-inline">
                <input type="hidden" name="cursoId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fas fa-shopping-cart me-1"></i>Inscribirse
                </button>
            </form>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Smooth scroll para acordeón
        document.addEventListener('DOMContentLoaded', function() {
            const accordionButtons = document.querySelectorAll('.curso-modulo-header');

            accordionButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const icon = this.querySelector('.modulo-icon');
                    if (icon) {
                        icon.classList.toggle('fa-chevron-down');
                        icon.classList.toggle('fa-chevron-up');
                    }
                });
            });

            // Scroll suave para enlaces internos
            const scrollToTop = document.querySelector('.scroll-to-top');
            if (scrollToTop) {
                scrollToTop.addEventListener('click', function(e) {
                    e.preventDefault();
                    window.scrollTo({
                        top: 0,
                        behavior: 'smooth'
                    });
                });
            }
        });
    </script>
}