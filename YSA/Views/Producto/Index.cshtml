@model YSA.Web.Models.ViewModels.ProductosIndexViewModel
@{
    ViewData["Title"] = "Catálogo de productos";
    var totalPaginas = Model.TotalPaginas;
    var paginaActual = Model.PaginaActual;
    var currentSearch = Context.Request.Query["searchString"];
    var todosLosProductos = Model.Productos?.ToList();
    var productoDestacado = todosLosProductos?.FirstOrDefault();
    var productosRestantes = todosLosProductos?.Skip(1).ToList();
}
<style>
    /* Variables específicas para productos */
    .productos-hero-section {
        background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url('/diseño/BannerProductos.png');
    }
</style>

<div class="container-sin-gutter productos-index-container">
    <!-- HERO SECTION CON BÚSQUEDA -->
    <div class="productos-hero-section">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="hero-content text-center text-white mb-5">
                        <h1 class="display-4 fw-bold mb-4" style="font-family: var(--font-heading);">
                            Explora nuestra <span class="text-brand-primary">colección de productos</span>
                        </h1>
                        <p class="lead mb-5" style="font-size: 1.25rem;">
                            Descubre obras únicas creadas por artistas talentosos
                        </p>
                    </div>

                    <!-- BÚSQUEDA -->
                    <div class="search-section bg-white p-4 rounded-lg shadow-lg mb-5">
                        <form asp-action="Index" method="get">
                            <div class="input-group input-group-lg shadow-sm">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="fas fa-search text-muted"></i>
                                </span>
                                <input type="text"
                                       name="searchString"
                                       class="form-control border-start-0 py-3"
                                       placeholder="Buscar productos por título o descripción..."
                                       value="@currentSearch">
                                <button class="btn btn-primary px-4" type="submit">
                                    <i class="fas fa-search me-2"></i>Buscar
                                </button>
                                @if (!string.IsNullOrEmpty(currentSearch))
                                {
                                    <a asp-action="Index" class="btn btn-secondary" title="Limpiar Búsqueda">
                                        <i class="fas fa-times"></i>
                                    </a>
                                }
                            </div>
                            <input type="hidden" name="page" value="1" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- CONTENIDO PRINCIPAL -->
    <div class="container py-5">
        <!-- PRODUCTO DESTACADO -->
        @if (productoDestacado != null)
        {
            <div class="featured-product-banner mb-5">
                <div class="banner-content">
                    <span class="banner-badge">DESTACADO</span>
                    <h2 class="banner-title">@productoDestacado.Titulo</h2>
                    <p class="banner-description">@Html.Raw(productoDestacado.DescripcionCorta.Split('.').FirstOrDefault())</p>
                    <div class="banner-price">@string.Format("{0:C}", productoDestacado.Precio)</div>
                    <div class="banner-actions">
                        @if (User.Identity.IsAuthenticated && Model.ProductosCompradosIds.Contains(productoDestacado.Id))
                        {
                            <a asp-action="Descargar" asp-route-id="@productoDestacado.Id" class="btn btn-descargar">
                                <i class="fas fa-download me-2"></i> Descargar
                            </a>
                        }
                        else if (Model.ProductosEnValidacionIds.Contains(productoDestacado.Id))
                        {
                            <button class="btn btn-validacion" disabled>
                                <i class="fas fa-hourglass-half me-2"></i> En validación
                            </button>
                        }
                        else
                        {
                            @if (User.Identity.IsAuthenticated)
                            {
                                <form asp-controller="Producto" asp-action="ComprarProducto" method="post" class="d-inline">
                                    <input type="hidden" name="productoId" value="@productoDestacado.Id" />
                                    <button type="submit" class="btn btn-comprar">
                                        <i class="fas fa-shopping-cart me-2"></i> Comprar
                                    </button>
                                </form>
                            }
                            else
                            {
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-comprar">Iniciar Sesión para Comprar</a>
                            }
                        }
                        <a href="#todos-productos" class="btn btn-outline-primary">
                            <i class="fas fa-arrow-down me-2"></i> Ver más productos
                        </a>
                    </div>
                    <small class="text-muted mt-3 d-block">
                        Por @(productoDestacado.Autor?.Usuario?.Nombre ?? "Autor Desconocido")
                    </small>
                </div>
                <div class="banner-image">
                    <img src="@Url.Content(productoDestacado.UrlImagen)" alt="@productoDestacado.Titulo">
                </div>
            </div>
        }

        <!-- TODOS LOS PRODUCTOS -->
        <div class="row mb-5 pb-5" id="todos-productos">
            <div class="col-12">
                <div class="section-header">
                    <h2>Todos los productos</h2>
                    <span class="badge">@(todosLosProductos?.Count ?? 0) productos</span>
                </div>

                @if (productosRestantes != null && productosRestantes.Any())
                {
                    <div class="products-container">
                        <div class="row g-4">
                            @foreach (var producto in productosRestantes)
                            {
                                <div class="col-lg-3 col-md-4 col-sm-6">
                                    <div class="product-card">
                                        <div class="product-card-header">
                                            <img src="@Url.Content(producto.UrlImagen)"
                                                 class="product-image"
                                                 alt="@producto.Titulo"
                                                 onerror="this.src='/diseño/default-product.jpg'">
                                            <span class="product-badge price">@string.Format("{0:C}", producto.Precio)</span>
                                        </div>
                                        <div class="product-card-body">
                                            <h3 class="product-title">@producto.Titulo</h3>
                                            <p class="product-description">@Html.Raw(producto.DescripcionCorta)</p>
                                            <div class="product-price">@string.Format("{0:C}", producto.Precio)</div>
                                            <div class="product-author">Por @(producto.Autor?.Usuario?.Nombre ?? "Autor Desconocido")</div>
                                            <div class="product-actions">
                                                @if (User.Identity.IsAuthenticated && Model.ProductosCompradosIds.Contains(producto.Id))
                                                {
                                                    <a asp-action="Descargar" asp-route-id="@producto.Id" class="btn btn-descargar">
                                                        <i class="fas fa-download me-2"></i> Descargar
                                                    </a>
                                                }
                                                else if (Model.ProductosEnValidacionIds.Contains(producto.Id))
                                                {
                                                    <button class="btn btn-validacion" disabled>
                                                        <i class="fas fa-hourglass-half me-2"></i> En validación
                                                    </button>
                                                }
                                                else
                                                {
                                                    @if (User.Identity.IsAuthenticated)
                                                    {
                                                        <form asp-controller="Producto" asp-action="ComprarProducto" method="post" class="w-100">
                                                            <input type="hidden" name="productoId" value="@producto.Id" />
                                                            <button type="submit" class="btn btn-comprar w-100">
                                                                <i class="fas fa-shopping-cart me-2"></i> Comprar
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-comprar w-100">Iniciar Sesión para Comprar</a>
                                                    }
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- PAGINACIÓN -->
                        @if (totalPaginas > 1)
                        {
                            <nav aria-label="Paginación de productos" class="mt-5">
                                <ul class="pagination justify-content-center">
                                    <li class="page-item @(paginaActual == 1 ? "disabled" : "")">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-page="@(paginaActual - 1)"
                                           asp-route-searchString="@currentSearch"
                                           aria-label="Previous">
                                            <i class="fas fa-chevron-left"></i>
                                        </a>
                                    </li>

                                    @for (int i = 1; i <= totalPaginas; i++)
                                    {
                                        <li class="page-item @(i == paginaActual ? "active" : "")">
                                            <a class="page-link"
                                               asp-action="Index"
                                               asp-route-page="@i"
                                               asp-route-searchString="@currentSearch">@i</a>
                                        </li>
                                    }

                                    <li class="page-item @(paginaActual == totalPaginas ? "disabled" : "")">
                                        <a class="page-link"
                                           asp-action="Index"
                                           asp-route-page="@(paginaActual + 1)"
                                           asp-route-searchString="@currentSearch"
                                           aria-label="Next">
                                            <i class="fas fa-chevron-right"></i>
                                        </a>
                                    </li>
                                </ul>
                            </nav>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state">
                        <i class="fas fa-box-open"></i>
                        <h4>No hay productos disponibles</h4>
                        <p class="text-muted">No se encontraron productos que coincidan con tu búsqueda.</p>
                        @if (!string.IsNullOrEmpty(currentSearch))
                        {
                            <a asp-action="Index" class="btn btn-primary mt-3">
                                <i class="fas fa-times me-2"></i> Limpiar búsqueda
                            </a>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        var pagoRegistrado = TempData["PagoRegistrado"] as bool?;
    }

    @if (pagoRegistrado.HasValue && pagoRegistrado.Value)
    {
        <script>
            $(document).ready(function() {
                Swal.fire({
                    title: '¡Pago Registrado!',
                    html: 'Su comprobante ha sido subido con éxito.<br>Un administrador lo validará pronto. Le notificaremos cuando tenga acceso a sus productos.',
                    icon: 'success',
                    confirmButtonText: 'Entendido',
                    customClass: {
                        confirmButton: 'btn-primary'
                    }
                });
            });
        </script>
    }

    <script>
        // Scroll suave al ancla
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;

                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    targetElement.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // Mejorar experiencia de formularios
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-focus en el campo de búsqueda si hay búsqueda actual
            const searchInput = document.querySelector('input[name="searchString"]');
            if (searchInput && searchInput.value) {
                searchInput.select();
            }

            // Confirmación de compra
            document.querySelectorAll('form[action*="ComprarProducto"]').forEach(form => {
                form.addEventListener('submit', function(e) {
                    const button = this.querySelector('button[type="submit"]');
                    if (button) {
                        button.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Procesando...';
                        button.disabled = true;
                    }
                });
            });
        });
    </script>
}