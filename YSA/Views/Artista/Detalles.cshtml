@model YSA.Web.Models.ViewModels.ArtistaDetallesViewModel
@{
    // Usa el nombre del artista como título de la página
    ViewData["Title"] = $"Perfil de {Model.NombreCompleto}";
}

<style>
    /* Estilo para la imagen de perfil del artista */
    .perfil-img {
        width: 200px;
        height: 200px;
        object-fit: cover;
        border: 5px solid #fff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }
    /* Estilo para las imágenes del portafolio */
    .portafolio-img {
        height: 300px; /* Altura fija para uniformidad */
        object-fit: cover;
    }

    .card-portafolio:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15) !important;
        transition: all 0.3s ease;
    }

    .biografia-text {
        white-space: pre-wrap; /* Mantiene saltos de línea y espacios del texto */
        font-size: 1.1rem;
        line-height: 1.8;
        color: #555;
    }
</style>

<div class="container py-5">

    <div class="row mb-5 align-items-center bg-light p-4 rounded-3 shadow-sm">
        <div class="col-md-3 text-center">
            @if (!string.IsNullOrEmpty(Model.UrlFotoPerfil))
            {
                <img src="@Model.UrlFotoPerfil" alt="Foto de Perfil" class="img-fluid rounded-circle perfil-img">
            }
            else
            {
                <i class="fas fa-user-circle fa-7x text-secondary"></i>
            }
        </div>
        <div class="col-md-9 mt-3 mt-md-0">
            <h1 class="display-4 fw-bold mb-0">@Model.NombreCompleto</h1>
            <p class="lead text-primary fw-semibold">Artista en YoSoyArte</p>

            @* Opcional: Agregar Botón de Contacto Rápido (Si lo necesitas)*@
            @* <a href="#" class="btn btn-success mt-2"><i class="fas fa-envelope me-2"></i> Contactar por Correo</a> *@
        </div>
    </div>

    <hr class="mb-5">

    <div class="row mb-5">
        <div class="col-12">
            <h2 class="h3 mb-4 fw-bold border-bottom pb-2">Biografía</h2>
            @if (!string.IsNullOrWhiteSpace(Model.Biografia))
            {
                <p class="biografia-text">@Model.Biografia</p>
            }
            else
            {
                <p class="text-muted fst-italic">Este artista aún no ha compartido su biografía detallada.</p>
            }
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <h2 class="h3 mb-4 fw-bold border-bottom pb-2">Portafolio de Arte (@Model.Portafolio.Count() Obras)</h2>

            @if (Model.Portafolio.Any())
            {
                <div class="row g-4">
                    @foreach (var foto in Model.Portafolio)
                    {
                        <div class="col-lg-4 col-md-6 col-sm-12">
                            <div class="card h-100 shadow-sm border-0 card-portafolio">
                                <img src="@foto.UrlImagen" class="card-img-top portafolio-img" alt="@foto.Titulo">
                                <div class="card-body">
                                    <h5 class="card-title text-dark">@foto.Titulo</h5>
                                    @* Opcional: Si ArtistaFoto tiene una descripción, podrías agregarla aquí *@
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info text-center mt-3" role="alert">
                    <i class="fas fa-camera me-2"></i>
                    Este artista aún no ha subido ninguna obra a su portafolio.
                </div>
            }
        </div>
    </div>

    @* @if (Model.CursosImpartidos.Any())
