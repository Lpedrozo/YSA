@model List<YSA.Web.Models.ViewModels.CursoViewModel>

@{
    var totalCursos = Model?.Count ?? 0;
}

<div class="dropdown-menu dropdown-menu-end shadow p-3" aria-labelledby="miAprendizajeDropdown"
     style="min-width: 350px; max-width: 100%; width: 90vw; right: 0; left: auto !important;">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3 px-2">
        <h6 class="mb-0 fw-bold">Mi Aprendizaje</h6>
        @if (totalCursos > 0)
        {
            <span class="badge bg-primary rounded-pill">@totalCursos cursos</span>
        }
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="cursos-lista" style="max-height: 400px; overflow-y: auto;">
            @foreach (var curso in Model.Take(5)) // Mostrar solo últimos 5
            {
                <a class="dropdown-item d-flex align-items-center p-2 mb-2 rounded"
                   asp-controller="Curso" asp-action="VerCurso" asp-route-id="@curso.Id">

                    <!-- Imagen del curso -->
                    <div class="me-3 flex-shrink-0">
                        <img src="@curso.UrlImagen" alt="@curso.Titulo"
                             style="width: 50px; height: 50px; object-fit: cover; border-radius: 8px;"
                             onerror="this.src='/diseño/default-course.jpg'">
                    </div>

                    <!-- Información del curso -->
                    <div class="flex-grow-1 min-width-0">
                        <h6 class="mb-1 text-truncate" style="font-size: 0.9rem;">@curso.Titulo</h6>
                        <div class="d-flex align-items-center gap-2">
                            <small class="text-muted">
                                <i class="fas fa-play-circle text-success me-1" style="font-size: 0.7rem;"></i>
                                Continuar
                            </small>
                            @if (curso.Precio == 0)
                            {
                                <span class="badge bg-success rounded-pill" style="font-size: 0.6rem;">GRATIS</span>
                            }
                        </div>
                    </div>

                    <!-- Flecha indicadora -->
                    <i class="fas fa-chevron-right text-muted ms-2" style="font-size: 0.8rem;"></i>
                </a>
            }
        </div>

        @if (totalCursos > 5)
        {
            <div class="text-center mt-2">
                <small class="text-muted">+ @(totalCursos - 5) cursos más</small>
            </div>
        }

        <div class="dropdown-divider my-2"></div>

        <!-- Botón "Ver todos" -->
        <a class="dropdown-item btn btn-primary text-white text-center py-2" href="/Curso/MisCursos">
            <i class="fas fa-graduation-cap me-2"></i>Ir a mi aprendizaje
        </a>
    }
    else
    {
        <!-- Estado vacío -->
        <div class="text-center py-5">
            <i class="fas fa-book-open text-muted" style="font-size: 3rem;"></i>
            <p class="text-muted mt-3 mb-2">Aún no tienes cursos</p>
            <a asp-controller="Curso" asp-action="Index" class="btn btn-primary btn-sm">
                <i class="fas fa-search me-1"></i>Explorar cursos
            </a>
        </div>
    }
</div>

<style>
    /* Estilos responsivos para el dropdown */
    @@media (max-width: 576px) {
        .dropdown-menu[aria-labelledby="miAprendizajeDropdown"] {
            position: fixed !important;
            top: 60px !important;
            left: 5% !important;
            right: 5% !important;
            width: 90% !important;
            min-width: auto !important;
            max-width: none !important;
            transform: none !important;
            margin: 0 auto !important;
        }
    }

    @@media (max-width: 400px) {
        .dropdown-menu[aria-labelledby="miAprendizajeDropdown"] {
            top: 50px !important;
            left: 2% !important;
            right: 2% !important;
            width: 96% !important;
            padding: 0.75rem !important;
        }

        .cursos-lista .dropdown-item {
            padding: 0.5rem !important;
        }

        .cursos-lista h6 {
            font-size: 0.8rem !important;
        }

        .cursos-lista small {
            font-size: 0.7rem !important;
        }

        .cursos-lista img {
            width: 40px !important;
            height: 40px !important;
        }
    }

    /* Animación hover */
    .dropdown-item {
        transition: all 0.2s ease;
    }

        .dropdown-item:hover {
            background-color: rgba(239, 136, 48, 0.05);
            transform: translateX(2px);
        }
</style>