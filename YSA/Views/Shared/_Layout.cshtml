<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - YoSoyArte</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/YSA.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        /* Estilos del header superior */
        .main-header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background-color: black;
            padding: 1.0rem 1.5rem; /* Alto inicial */
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1040;
            transition: all 0.3s ease-in-out;
        }

            .main-header.scroll-header-shrink {
                padding: 1.5rem 1rem; /* Alto al hacer scroll */
                background-color: rgba(0, 0, 0, 0.7);
                backdrop-filter: blur(5px);
            }

        .header-logo {
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
            text-decoration: none;
            transition: font-size 0.3s ease-in-out;
        }

        .main-header.scroll-header-shrink .header-logo {
            font-size: 1.25rem;
        }

        /* Estilos para los botones flotantes a la izquierda */
        #floating-nav {
            position: fixed;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            list-style: none;
            padding: 0;
            margin: 0;
            z-index: 1050;
        }

        .anchor-link {
            width: 40px;
            height: 40px;
            background-color: #34495e;
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 10px;
            cursor: pointer;
            transition: width 0.3s ease-in-out, border-radius 0.3s ease-in-out;
            overflow: hidden;
            white-space: nowrap;
        }

            .anchor-link span {
                display: none;
                margin-left: 5px;
            }

            .anchor-link:hover {
                width: 150px;
                border-radius: 20px;
            }

                .anchor-link:hover span {
                    display: inline;
                }

        /* Espacio para que el contenido no quede detrás del header */
        body {
            padding-top: 5rem; /* Ajusta este valor si el header es más grande */
        }
    </style>
</head>

<body>
    <header class="main-header">
        <a class="header-logo" asp-controller="Home" asp-action="Index">YSA</a>
    </header>

    <ul id="floating-nav">
        <li class="anchor-link"><i class="fas fa-book-open"></i><span><a asp-controller="Curso" asp-action="Index" style="text-decoration: none; color: white;">Cursos</a></span></li>
        <li class="anchor-link"><i class="fas fa-newspaper"></i><span><a asp-controller="Revista" asp-action="Index" style="text-decoration: none; color: white;">Revista</a></span></li>
        <li class="anchor-link"><i class="fas fa-file-pdf"></i><span><a asp-controller="Producto" asp-action="Index" style="text-decoration: none; color: white;">PDFs</a></span></li>

        <hr style="border-top: 1px solid rgba(255,255,255,0.3); width: 80%; margin: 10px auto;">

        @if (Context.Session.GetString("IsSignedIn") == "true")
        {
            <li class="anchor-link"><i class="fas fa-user-circle"></i><span><a asp-controller="Cuenta" asp-action="MiPerfil" style="text-decoration: none; color: white;">Mi Perfil</a></span></li>

            @if (Context.Session.GetString("UserRole") == "Administrador")
            {
                <li class="anchor-link"><i class="fas fa-tachometer-alt"></i><span><a asp-controller="Admin" asp-action="Panel" style="text-decoration: none; color: white;">Panel Admin</a></span></li>
            }

            <li class="anchor-link" onclick="document.getElementById('logoutForm').submit();"><i class="fas fa-sign-out-alt"></i><span>Cerrar Sesión</span></li>
            <form asp-controller="Cuenta" asp-action="Logout" method="post" id="logoutForm" style="display: none;"></form>
        }
        else
        {
            <li class="anchor-link"><i class="fas fa-user-plus"></i><span><a asp-controller="Cuenta" asp-action="Registro" style="text-decoration: none; color: white;">Registrarse</a></span></li>
            <li class="anchor-link"><i class="fas fa-sign-in-alt"></i><span><a asp-controller="Cuenta" asp-action="Login" style="text-decoration: none; color: white;">Iniciar Sesión</a></span></li>
        }
    </ul>

    <div class="">
        @RenderBody()
    </div>

    <footer class="border-top footer mt-5 text-muted bg-black">
        <div class="container">
            <p style="color:white">&copy; 2025 - YoSoyArte.Web</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Lógica de validación para los enlaces del menú flotante
        document.addEventListener('DOMContentLoaded', () => {
            const floatingNavLinks = document.querySelectorAll('.anchor-link a');
            floatingNavLinks.forEach(link => {
                link.closest('.anchor-link').addEventListener('click', (e) => {
                    e.preventDefault();
                    if (link.getAttribute('href') !== '#') {
                        window.location.href = link.getAttribute('href');
                    }
                });
            });

            // Lógica para el header dinámico al hacer scroll
            const mainHeader = document.querySelector('.main-header');
            window.addEventListener('scroll', () => {
                if (window.scrollY > 50) {
                    mainHeader.classList.add('scroll-header-shrink');
                } else {
                    mainHeader.classList.remove('scroll-header-shrink');
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>