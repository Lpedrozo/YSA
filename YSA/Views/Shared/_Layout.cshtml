    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Función para alternar collapse manualmente
        function toggleCollapse(elementId) {
            const element = document.getElementById(elementId);
            if (element) {
                const bsCollapse = bootstrap.Collapse.getOrCreateInstance(element);
                bsCollapse.toggle();
            }
        }

        // Lógica optimizada para header dinámico
        document.addEventListener('DOMContentLoaded', () => {
            const mainHeader = document.querySelector('.main-header');
            const whatsappBar = document.querySelector('.whatsapp-top-bar');

            // Optimización para móviles: manejar scroll con debounce
            let scrollTimeout;
            window.addEventListener('scroll', () => {
                clearTimeout(scrollTimeout);
                scrollTimeout = setTimeout(() => {
                    if (window.scrollY > 50) {
                        mainHeader.classList.add('scroll-header-shrink');
                        if (whatsappBar) {
                            whatsappBar.style.transform = 'translateY(-100%)';
                        }
                    } else {
                        mainHeader.classList.remove('scroll-header-shrink');
                        if (whatsappBar) {
                            whatsappBar.style.transform = 'translateY(0)';
                        }
                    }
                }, 10);
            });

            // Cerrar menú al hacer clic en un enlace en móviles
            const navLinks = document.querySelectorAll('.navbar-nav .nav-link');
            const navbarCollapse = document.querySelector('.navbar-collapse');

            navLinks.forEach(link => {
                link.addEventListener('click', () => {
                    if (window.innerWidth < 992 && !link.closest('.dropdown-toggle')) {
                        const bsCollapse = bootstrap.Collapse.getInstance(navbarCollapse);
                        if (bsCollapse) {
                            bsCollapse.hide();
                        }
                    }
                });
            });

            // Mejorar experiencia táctil en móviles
            if ('ontouchstart' in window) {
                document.body.classList.add('touch-device');

                // Aumentar área táctil para elementos importantes
                const touchElements = document.querySelectorAll('.nav-link, .dropdown-item, .btn');
                touchElements.forEach(el => {
                    el.style.minHeight = '44px';
                    el.style.display = 'flex';
                    el.style.alignItems = 'center';
                });
            }

            // Prevenir que los dropdowns en móvil cierren el menú principal
            const dropdownToggles = document.querySelectorAll('.dropdown-toggle');
            dropdownToggles.forEach(toggle => {
                toggle.addEventListener('click', (e) => {
                    if (window.innerWidth < 992) {
                        e.stopPropagation();
                    }
                });
            });
        });

        // Manejar el logout con confirmación
        document.getElementById('logoutForm')?.addEventListener('submit', function(e) {
            if (!confirm('¿Estás seguro de que quieres cerrar sesión?')) {
                e.preventDefault();
            }
        });
                // Funciones para móvil
        function toggleAprendizajeMobile() {
            const content = document.getElementById('miAprendizajeMobileContent');
            if (content) {
                if (content.style.display === 'none') {
                    content.style.display = 'block';
                } else {
                    content.style.display = 'none';
                }
            }
        }

        function toggleNotificacionesMobile() {
            const content = document.getElementById('notificacionesMobileContent');
            if (content) {
                if (content.style.display === 'none') {
                    content.style.display = 'block';
                } else {
                    content.style.display = 'none';
                }
            }
        }

        // Cerrar dropdowns al hacer clic fuera
        document.addEventListener('click', function(event) {
            const isClickInside = event.target.closest('.dropdown-menu, .dropdown-toggle');
            if (!isClickInside) {
                document.querySelectorAll('#miAprendizajeMobileContent, #notificacionesMobileContent').forEach(el => {
                    el.style.display = 'none';
                });
            }
        });
                // Funciones para las secciones expandibles en móvil
        function toggleSection(sectionId) {
            const section = document.getElementById(sectionId);
            const icon = document.getElementById('icon-' + sectionId.replace('MobileSection', '').toLowerCase());

            if (section) {
                if (section.style.display === 'none' || section.style.display === '') {
                    section.style.display = 'block';
                    if (icon) icon.classList.replace('fa-chevron-down', 'fa-chevron-up');
                } else {
                    section.style.display = 'none';
                    if (icon) icon.classList.replace('fa-chevron-up', 'fa-chevron-down');
                }
            }
        }

        // Funciones para notificaciones móvil
        function marcarComoLeidaMobile(id, element) {
            // Marcar visualmente
            element.style.backgroundColor = '#f8f9fa';
            element.style.borderLeftColor = 'transparent';
            const badge = element.querySelector('.badge');
            if (badge) badge.remove();

            // Llamada AJAX
            fetch('/Notificaciones/MarcarComoLeida', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'RequestVerificationToken': getAntiForgeryToken()
                },
                body: JSON.stringify({ id: id })
            });
        }

        function marcarTodasComoLeidasMobile() {
            if (confirm('¿Marcar todas las notificaciones como leídas?')) {
                fetch('/Notificaciones/MarcarTodasComoLeidas', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': getAntiForgeryToken()
                    }
                }).then(() => location.reload());
            }
        }

        function getAntiForgeryToken() {
            const token = document.querySelector('input[name="__RequestVerificationToken"]');
            return token ? token.value : '';
        }

        // Cerrar secciones al hacer clic fuera del dropdown
        document.addEventListener('click', function(event) {
            const dropdown = event.target.closest('.dropdown-menu, .dropdown-toggle');
            if (!dropdown) {
                document.querySelectorAll('#aprendizajeMobileSection, #notificacionesMobileSection').forEach(el => {
                    el.style.display = 'none';
                });
                document.querySelectorAll('[id^="icon-"]').forEach(icon => {
                    if (icon.classList.contains('fa-chevron-up')) {
                        icon.classList.replace('fa-chevron-up', 'fa-chevron-down');
                    }
                });
            }
        });
                // Funciones para abrir modales
        function abrirModalAprendizaje() {
            const modalElement = document.getElementById('modalAprendizaje');
            const modal = new bootstrap.Modal(modalElement);
            modal.show();

            // Cerrar el dropdown después de abrir el modal
            const dropdownElement = document.getElementById('mobileUserDropdown');
            const dropdown = bootstrap.Dropdown.getInstance(dropdownElement);
            if (dropdown) {
                dropdown.hide();
            }
        }

        function abrirModalNotificaciones() {
            const modalElement = document.getElementById('modalNotificaciones');
            const modal = new bootstrap.Modal(modalElement);
            modal.show();

            // Cerrar el dropdown después de abrir el modal
            const dropdownElement = document.getElementById('mobileUserDropdown');
            const dropdown = bootstrap.Dropdown.getInstance(dropdownElement);
            if (dropdown) {
                dropdown.hide();
            }
        }

        // Función para marcar todas las notificaciones desde el modal
        function marcarTodasNotificacionesDesdeModal() {
            if (confirm('¿Marcar todas las notificaciones como leídas?')) {
                fetch('/Notificaciones/MarcarTodasComoLeidas', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': getAntiForgeryToken()
                    }
                }).then(() => {
                    // Recargar solo el contenido del modal sin recargar toda la página
                    fetch('/Notificaciones/MarcarTodasComoLeidas', {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': getAntiForgeryToken()
                        }
                    }).then(() => {
                        // Cerrar el modal y recargar la página para actualizar todo
                        const modal = bootstrap.Modal.getInstance(document.getElementById('modalNotificaciones'));
                        if (modal) modal.hide();
                        location.reload();
                    });
                });
            }
        }

        // Modificar la función existente marcarComoLeidaMobile para que también funcione dentro del modal
        // (No necesitas cambiarla, ya funciona con ambos)
    </script>
