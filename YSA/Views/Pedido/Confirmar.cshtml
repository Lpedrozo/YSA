</style>

<!-- PORTADA DE REVISTA PARA CONFIRMACIÓN -->
<div class="confirmation-cover">
    <img src="/diseño/HeaderAcademia.jpg" class="cover-image" alt="Confirmación de pago - Yo Soy Arte">
    <div class="cover-overlay">
        <div class="cover-title-block">
            <span class="badge bg-light text-dark mb-2">CONFIRMACIÓN DE PAGO</span>
            <h1 class="cover-title">Finaliza tu compra</h1>
            <p class="cover-subtitle">Registra tu pago y únete a nuestra comunidad artística</p>
        </div>
    </div>
</div>

<div class="container px-0 py-5  mb-5 pb-5">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
        </div>
    }

    <!-- SECCIÓN PRINCIPAL DE CONFIRMACIÓN -->
    <div class="section-container">
        <div class="row g-5">
            <!-- FORMULARIO DE PAGO -->
            <div class="col-lg-6">
                <div class="magazine-card h-100">
                    <div class="card-header-editorial">
                        <i class="fas fa-credit-card me-2"></i> Registrar pago y comprobante
                    </div>
                    <div class="magazine-card-body">
                        <form asp-controller="Pedido" asp-action="ProcesarPago" method="post" enctype="multipart/form-data">
                            <input type="hidden" name="pedidoId" value="@Model.PedidoId" />

                            <div class="mb-4">
                                <label for="MetodoPago" class="form-label">Método de pago</label>
                                <select class="form-control" id="MetodoPago" name="metodoPago" required>
                                    <option value="" disabled selected>Seleccione un método</option>
                                    <option value="Transferencia Bancaria">Transferencia Bancaria</option>
                                    <option value="Pago Móvil">Pago Móvil</option>
                                    <option value="PayPal">PayPal</option>
                                </select>
                            </div>

                            <div id="payment-info-box" style="display:none;">
                                <h5><i class="fas fa-info-circle me-2"></i>Datos para realizar el pago</h5>
                                <div id="payment-details-content">
                                </div>
                            </div>

                            <div class="mb-4">
                                <label for="ReferenciaPago" class="form-label">Referencia del pago</label>
                                <input type="text" class="form-control" id="ReferenciaPago" name="referenciaPago" placeholder="Ingrese N° de transacción o Hash" required>
                            </div>

                            <div class="mb-4">
                                <label for="comprobanteArchivo" class="form-label">Subir comprobante (PDF, JPG, PNG)</label>
                                <input type="file" class="form-control" id="comprobanteArchivo" name="comprobanteArchivo" accept=".pdf,.jpg,.jpeg,.png" required>
                            </div>

                            <button type="submit" class="btn btn-primary w-100 py-3">
                                <i class="fas fa-paper-plane me-2"></i>Enviar comprobante
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- RESUMEN DEL PEDIDO -->
            <div class="col-lg-6">
                <div class="magazine-card h-100">
                    <div class="card-header-editorial">
                        <i class="fas fa-receipt me-2"></i> Resumen del pedido
                    </div>
                    <div class="magazine-card-body">
                        <h3 class="summary-title">Pedido #@Model.PedidoId</h3>

                        <ul class="list-group mb-4">
                            @foreach (var articulo in Model.Articulos)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span class="text-truncate me-3">@articulo.TituloItem</span>
                                    <span class="badge bg-primary rounded-pill flex-shrink-0">@articulo.Precio.ToString("N2", cultureUS) USD</span>
                                </li>
                            }
                        </ul>

                        <div class="total-box">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="mb-0 text-secondary">Total en dólares:</h5>
                                <h5 class="text-usd mb-0">@Model.Total.ToString("N2", cultureUS) USD</h5>
                            </div>
                            <div class="d-flex justify-content-between align-items-center border-top pt-3">
                                <h4 class="mb-0">Total a pagar:</h4>
                                <h4 class="text-ves mb-0">@totalVes.ToString("N2", cultureVE) VES</h4>
                            </div>
                            <small class="text-muted d-block text-end mt-2">Tasa BCV: @Model.TasaBCV.Value.ToString("N4", cultureUS) VES/USD</small>
                        </div>

                        <!-- BOTÓN WHATSAPP -->
                        @{
                            var whatsappNumber = "584241544523";
                            var whatsappMessage = $"Hola, necesito asistencia con el pago del Pedido #{Model.PedidoId}. ¿Me pueden ayudar?";
                            var encodedMessage = System.Web.HttpUtility.UrlEncode(whatsappMessage);
                            var whatsappLink = $"https://wa.me/{whatsappNumber}?text={encodedMessage}";
                        }
                        <div class="d-grid gap-2 mt-4">
                            <a href="@whatsappLink" target="_blank" class="btn btn-whatsapp-assistance text-white btn-lg py-3">
                                <i class="fab fa-whatsapp text-white me-2"></i> Pagar o consultar por WhatsApp
                            </a>
                        </div>

                        <!-- INFORMACIÓN ADICIONAL -->
                        <div class="mt-4 p-3 alert alert-secondary">
                            <i class="fas fa-clock me-2"></i> Una vez enviado el comprobante, validaremos el pago en un máximo de 24 horas. Recibirás un correo de confirmación.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr class="section-divider" />

    <!-- SECCIÓN DE INFORMACIÓN ADICIONAL -->
    <div class="section-container text-center">
        <h2 class="section-title">¿Necesitas ayuda?</h2>
        <div class="row justify-content-center mt-4">
            <div class="col-lg-8">
                <p class="fs-5 mb-4">
                    Nuestro equipo de soporte está disponible para ayudarte con cualquier duda sobre tu pago o pedido.
                </p>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="magazine-card icon-card h-100">
                            <div class="magazine-card-body d-flex flex-column align-items-center justify-content-center text-center">
                                <i class="fas fa-headset fa-3x mb-3" style="color: var(--color-brand-primary);"></i>
                                <h4 class="h5">Soporte Inmediato</h4>
                                <p>Contacta por WhatsApp para asistencia rápida</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="magazine-card icon-card h-100">
                            <div class="magazine-card-body d-flex flex-column align-items-center justify-content-center text-center">
                                <i class="fas fa-shield-alt fa-3x mb-3" style="color: var(--color-brand-success);"></i>
                                <h4 class="h5">Pago Seguro</h4>
                                <p>Todas las transacciones son verificadas y seguras</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="magazine-card icon-card h-100">
                            <div class="magazine-card-body d-flex flex-column align-items-center justify-content-center text-center">
                                <i class="fas fa-envelope fa-3x mb-3" style="color: var(--color-brand-secondary);"></i>
                                <h4 class="h5">Confirmación por Email</h4>
                                <p>Recibirás confirmación detallada de tu compra</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        $(document).ready(function () {
            // Variables con formato para USD, VES y Tasa
            const formattedTotalUSD = '@Html.Raw(Model.Total.ToString("N2", cultureUS))';
            const formattedTotalVES = '@Html.Raw(totalVes.ToString("N2", cultureVE))';
            const tasaHoy = '@Model.TasaBCV.Value.ToString("N4", cultureUS)';

            if (typeof jQuery == 'undefined') {
                console.error('Error: jQuery no está cargado. La funcionalidad de cambio de método de pago no funcionará.');
                return;
            }

            // Objeto JSON con la información de pago (estilo mejorado)
            const PAYMENT_DETAILS = {
                "Transferencia Bancaria": `
                    <div class="info-item"><strong>Monto a Pagar:</strong> <span class="text-ves">${formattedTotalVES} VES</span></div>
                    <div class="info-item"><small class="text-muted">Tasa Aplicada: ${tasaHoy} VES/USD</small></div>
                    <hr class="my-3"/>
                    <div class="info-item"><strong>Banco:</strong> Banco Universal Monocromático</div>
                    <div class="info-item"><strong>RUC/C.I.:</strong> V-12.345.678</div>
                    <div class="info-item"><strong>N° Cuenta:</strong> 0102-0304-0506-0708-0910</div>
                    <div class="info-item"><strong>Correo:</strong> pagos@yosoyarte.com</div>
                `,
                "Pago Móvil": `
                    <div class="info-item"><strong>Monto a Pagar:</strong> <span class="text-ves">${formattedTotalVES} VES</span></div>
                    <div class="info-item"><small class="text-muted">Tasa Aplicada: ${tasaHoy} VES/USD</small></div>
                    <hr class="my-3"/>
                    <div class="info-item"><strong>Banco:</strong> Banco Móvil Digital</div>
                    <div class="info-item"><strong>C.I.:</strong> V-8.765.432</div>
                    <div class="info-item"><strong>Teléfono:</strong> 0412-1234567</div>
                `,
                "PayPal": `
                    <div class="info-item"><strong>Monto a Pagar:</strong> <span class="text-usd">${formattedTotalUSD} USD</span></div>
                    <div class="info-item"><small class="text-muted">Tasa de Referencia: ${tasaHoy} VES/USD</small></div>
                    <hr class="my-3"/>
                    <div class="info-item"><strong>Cuenta PayPal:</strong> pagos@yosoyarte.com</div>
                    <div class="info-item"><strong>Instrucciones:</strong> Realice el pago directamente en PayPal y adjunte el comprobante.</div>
                `
            };

            const $select = $('#MetodoPago');
            const $infoBox = $('#payment-info-box');
            const $content = $('#payment-details-content');

            function updatePaymentInfo() {
                const selectedMethod = $select.val();

                if (selectedMethod && PAYMENT_DETAILS[selectedMethod]) {
                    $content.html(PAYMENT_DETAILS[selectedMethod]);
                    $infoBox.slideDown(300);
                } else {
                    $infoBox.slideUp(300);
                }
            }

            $select.on('change', updatePaymentInfo);

            if ($select.val()) {
                updatePaymentInfo();
            }
        });
    </script>
