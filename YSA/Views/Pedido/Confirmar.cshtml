        display: flex;
        align-items: flex-end;
        padding: 3rem;
    }

    .cover-title-block {
        color: var(--color-text-light);
        max-width: 700px;
        z-index: 3;
    }

    .cover-title {
        font-family: var(--font-heading);
        font-size: 3rem;
        font-weight: 900;
        line-height: var(--line-height-tight);
        margin-bottom: 0.5rem;
    }

    .cover-subtitle {
        font-family: var(--font-body);
        font-size: 1.5rem;
        font-weight: 300;
