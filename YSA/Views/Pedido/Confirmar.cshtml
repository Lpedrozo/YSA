        color: var(--color-brand-success);
        font-weight: 800;
        font-size: 1.4em;
        font-family: var(--font-heading);
    }

    .text-usd {
        color: var(--color-brand-primary);
        font-weight: 800;
        font-size: 1.4em;
        font-family: var(--font-heading);
    }

    /* CAJA DE INFORMACIÓN BANCARIA DINÁMICA */
